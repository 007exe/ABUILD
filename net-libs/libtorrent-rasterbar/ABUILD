pkgname=libtorrent-rasterbar
pkgver=2.0.5
pkgbuild=1
arch=('auto')

shortdesc=("A C++ BitTorrent library that aims to be a good alternative to all the other implementations around")
longdesc=("C++ BitTorrent implementation focusing on efficiency and scalability")

source=("https://github.com/arvidn/libtorrent/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz")

tags="libs net-libs"

build_deps="boost cmake ninja python-setuptools openssl"

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  cmake -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX="/usr" \
    -DCMAKE_INSTALL_LIBDIR="lib${LIBDIRSUFFIX}" \
    -Dpython-bindings=ON \
    -Dboost-python-module-name="python" \
    -Dpython-egg-info=ON \
    -GNinja ..
  ninja
  DESTDIR="$pkgdir" ninja install
  install -Dm644 ../COPYING -t "$pkgdir"/usr/share/licenses/$pkgname/
}
