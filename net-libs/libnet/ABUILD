pkgname=libnet
pkgver=1.1.6
pkgbuild=1
arch=("auto")

shortdesc=("A library which provides API for commonly used low-level net functions.")

source=("https://github.com/libnet/libnet/releases/download/v${pkgver}/libnet-${pkgver}.tar.gz")

tags=("network net-libs")

build_deps=("help2man doxygen glibc")

adddep=("bash")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 doc/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
