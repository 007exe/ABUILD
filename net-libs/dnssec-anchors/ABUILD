pkgname=dnssec-anchors
pkgver=20190629
_trusted_key=trusted-key-${pkgver}.key
pkgbuild=1
arch=("noarch")

shortdesc=("DNSSEC trust anchors for the root zone.")

source=("https://sources.archlinux.org/other/packages/${pkgname}/${_trusted_key}")

tags=("net-libs libs")

build_deps=("mkpkg")

build() {
  install -Dm644 ${srcache}/${_trusted_key} ${pkgdir}/etc/trusted-key.key
}
