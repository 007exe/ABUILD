pkgname=libnsl
pkgver=2.0.0
pkgbuild=2
arch=("auto")

shortdesc=("Public client interface library for NIS(YP) and NIS+.")

source=("https://github.com/thkukuk/libnsl/archive/v${pkgver}.tar.gz")

tags=("libs net-libs")

build_deps=("libtirpc glibc")

build() {
  go_src_dir
  burn_patches
  autoreconf -fi
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
