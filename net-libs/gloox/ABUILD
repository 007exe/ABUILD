pkgname=gloox
pkgver=1.0.24
pkgbuild=1
arch=("auto")

shortdesc=("C++ libraries for development of Jabber client/component/server.")

source=("https://camaya.net/download/gloox-${pkgver}.tar.bz2")

tags=("net-libs libs")

build_deps=("libidn gnutls")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
