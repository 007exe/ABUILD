pkgname=libmbim
pkgver=1.28.2
pkgbuild=1
arch=("auto")

shortdesc=("MBIM modem protocol helper library.")
longdesc=("The libmbim package contains a GLib-based library for talking to WWAN modems and devices which speak the Mobile Interface Broadband Model (MBIM) protocol.")

source=("https://gitlab.freedesktop.org/mobile-broadband/libmbim/-/archive/${pkgver}/libmbim-${pkgver}.tar.gz")

tags=("libs net-libs")

build_deps=("gtk-doc meson git help2man gobject-introspection bash-completion glib2")

adddep=("bash")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D gtk_doc=true
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
