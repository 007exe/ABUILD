pkgname=ldns
pkgver=1.8.3
pkgbuild=1
arch=("auto")

shortdesc=("Fast DNS library supporting recent RFCs..")

source=("https://www.nlnetlabs.nl/downloads/${pkgname}/${pkgname}-${pkgver}.tar.gz")

tags=("net-libs libs")

adddep=("openssl dnssec-anchors")

build_deps=("${adddep} libpcap")

# NOTE: Это опциональные зависимости
removedep=("libpcap")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-rpath \
    --with-drill \
    --with-examples \
    --with-trust-anchor=/etc/trusted-key.key
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
