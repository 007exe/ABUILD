pkgname=libdmapsharing
pkgver=2.9.41
pkgbuild=1
arch=("auto")

shortdesc=("A library that implements the DMAP family of protocols.")
longdesc=("A library that implements the DMAP family of protocols.")

source=("https://gitlab.gnome.org/GNOME/libdmapsharing/-/archive/LIBDMAPSHARING_${pkgver//./_}/libdmapsharing-LIBDMAPSHARING_${pkgver//./_}.tar.gz")

tags=("libs net-libs")

build_deps=("gtk-doc gobject-introspection vala libsoup avahi gst-plugins-base-libs gdk-pixbuf")

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --with-mdns=avahi \
    --disable-tests \
    --disable-gtk-doc \
    --disable-static
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
