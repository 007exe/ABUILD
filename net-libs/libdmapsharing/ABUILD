pkgname=libdmapsharing
pkgver=3.9.13
pkgbuild=1
arch=("auto")

shortdesc=("A library that implements the DMAP family of protocols.")

source=("https://gitlab.gnome.org/GNOME/libdmapsharing/-/archive/LIBDMAPSHARING_${pkgver//./_}/libdmapsharing-LIBDMAPSHARING_${pkgver//./_}.tar.gz")

tags=("libs net-libs")

adddep=("avahi gdk-pixbuf gst-plugins-base-libs libsoup3")

build_deps=("${adddep} gobject-introspection gtk-doc vala")

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --with-mdns=avahi \
    --disable-tests \
    --disable-gtk-doc \
    --disable-static
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
