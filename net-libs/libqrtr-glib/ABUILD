pkgname=libqrtr-glib
pkgver=1.0.0
pkgbuild=1
arch=('auto')

shortdesc=("Qualcomm IPC Router protocol helper library")
longdesc=("Qualcomm IPC Router protocol helper library")

source=("https://www.freedesktop.org/software/libqmi/libqrtr-glib-$pkgver.tar.xz")

tags="network net-libs"

build_deps="gtk-doc glib2 python gobject-introspection"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --enable-gtk-doc \
    --enable-compile-warnings=yes
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
