pkgname=libnghttp2
pkgver=1.44.0
pkgbuild=1
arch=("auto")

shortdesc=("Framing layer of HTTP/2 is implemented as a reusable C library")
longdesc=("nghttp2 is an implementation of HTTP/2 and its header compression algorithm, HPACK.")

tags=("libs net-libs")

source=("https://github.com/nghttp2/nghttp2/archive/v$pkgver.tar.gz")

build_deps="glibc"

build() {
  go_src_dir
  burn_patches
  autoreconf -i
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-examples \
    --disable-python-bindings \
    --disable-static \
    --enable-lib-only
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/libnghttp2/COPYING"
}
