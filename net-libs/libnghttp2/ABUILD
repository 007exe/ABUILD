pkgname=libnghttp2
pkgver=1.54.0
pkgbuild=1
arch=("auto")

shortdesc=("Framing layer of HTTP/2 is implemented as a reusable C library.")

source=("https://github.com/nghttp2/nghttp2/archive/v${pkgver}.tar.gz")

tags=("libs net-libs")

build_deps=("glibc")

build() {
  go_src_dir
  burn_patches
  autoreconf -i
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-examples \
    --disable-python-bindings \
    --disable-static \
    --enable-lib-only
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/libnghttp2/COPYING
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/v${pkgver}.tar.gz
}
