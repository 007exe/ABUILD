pkgname=wpewebkit
pkgver=2.38.2
pkgbuild=1
arch=("auto")

shortdesc=("Embeddable web content engine.")

source=("https://wpewebkit.org/releases/${pkgname}-${pkgver}.tar.xz")

tags=("net-libs libs")

build_deps=("cmake gi-docgen gobject-introspection gperf gst-plugins-bad ninja python ruby wayland-protocols
at-spi2-atk atk bubblewrap cairo fontconfig freetype glib2 gst-plugins-base-libs gstreamer harfbuzz icu libavif
libepoxy libgcrypt libjpeg-turbo libpng libseccomp libsoup3 libtasn1 libwebp libwpe libxkbcommon libxml2 libxslt
openjpeg2 sqlite wayland woff2 wpebackend-fdo xdg-dbus-proxy zlib")

# NOTE: Это опциональные зависимости
removedep=("geoclue gst-plugins-good gst-plugins-bad gst-libav")

build() {
  go_src_dir
  burn_patches
  CFLAGS+=' -g1'
  CXXFLAGS+=' -g1'
  cmake -B build -G Ninja \
    -DPORT=WPE \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_SKIP_RPATH=ON \
    -DUSE_AVIF=ON \
    -DUSE_SOUP2=OFF \
    -DENABLE_DOCUMENTATION=ON \
    -DENABLE_MINIBROWSER=ON
  cmake --build build
  DESTDIR=${pkgdir} cmake --install build
}
