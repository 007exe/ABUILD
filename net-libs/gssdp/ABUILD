pkgname=gssdp
pkgver=1.6.3
pkgbuild=1
arch=("auto")

shortdesc=("A GObject-based API for handling resource discovery and announcement over SSDP.")

source=("https://gitlab.gnome.org/GNOME/gssdp/-/archive/gssdp-${pkgver}/gssdp-gssdp-${pkgver}.tar.gz")

tags=("libs net-libs")

adddep=("glib2 libsoup3")
# pandoc
build_deps=("${adddep} gobject-introspection gi-docgen vala meson gtk4")

# NOTE: Это опциональные зависимости
removedep=("gtk4")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D gtk_doc=false \
    -D manpages=false
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
