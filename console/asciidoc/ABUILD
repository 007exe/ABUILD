pkgname=asciidoc
pkgver=9.0.2
pkgbuild=1
arch=('noarch')

shortdesc="Text document format for short documents, articles, books and UNIX man pages."
source=("https://github.com/asciidoc/asciidoc-py3/releases/download/${pkgver}/asciidoc-${pkgver}.tar.gz")
tags="app-text console"

adddep="python libxslt docbook-xsl"
build_deps="python libxslt docbook-xsl"

build() {
  go_src_dir
  autoconf
  ./configure --prefix=/usr \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--mandir=/usr/share/man \
	--sysconfdir=/etc
  make manpages
  make install DESTDIR="${pkgdir}"
}
