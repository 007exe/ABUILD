pkgname=moc
pkgver=2.5.2
pkgbuild=1
arch="auto"

shortdesc=("An ncurses console audio player designed to be powerful and easy to use")
longdesc=("MOC is a console audio player with ncurses interface")

source=("http://ftp.daper.net/pub/soft/moc/stable/${pkgname}-${pkgver}.tar.bz2")

tags="console media-sound"
# jack libltdl
build_deps="curl file speex ffmpeg libmodplug flac libmad libid3tag faad2 wavpack libmpcdec taglib"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --with-samplerate \
    --with-musepack \
    --with-wavpack \
    --with-sndfile \
    --with-modplug \
    --with-vorbis \
    --without-rcc \
    --with-ffmpeg \
    --with-speex \
    --with-alsa \
    --with-jack \
    --with-flac \
    --with-curl \
    --with-aac \
    --with-mp3 \
    --with-oss \
    --disable-cache \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
