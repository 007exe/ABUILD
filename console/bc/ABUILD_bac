pkgname=bc
pkgver=1.07.1
pkgbuild=1
arch=("auto")

shortdesc=("An arbitrary precision calculator language")

tags=("console sys-devel")

source=("http://ftp.gnu.org/gnu/bc/bc-${pkgver}.tar.gz")

build_deps="readline ncurses ed"

# Почемуто не устанавливается в &pkgdir хотя через make DESTDIR=`pwd` ставится

build() {
  go_src_dir
  ./configure \
  --prefix=/usr \
  --libdir=/usr/lib$LIBDIRSUFFIX \
  --mandir=/usr/share/man \
  --infodir=/usr/share/info \
  --with-readline

  make
  echo "quit" | ./bc/bc -l Test/checklib.b
  make DESTDIR="$pkgdir" install
}


