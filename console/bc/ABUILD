pkgname=bc
pkgver=4.0.1
pkgbuild=1
arch=("auto")

shortdesc="An arbitrary precision calculator language"
longdesc="This is an implementation of the POSIX bc calculator that implements GNU bc extensions, as well as the period."

tags=("console sys-devel")

source=("https://github.com/gavinhoward/bc/releases/download/${pkgver}/bc-${pkgver}.tar.xz")

build_deps="readline"

build() {
  go_src_dir

  PREFIX=/usr CC=gcc CFLAGS="-std=c99" ./configure.sh -G -O3
  make
  make test
  make DESTDIR="$pkgdir" install
}


