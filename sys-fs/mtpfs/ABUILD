pkgname=mtpfs
pkgver=1.1
pkgbuild=1
arch=("auto")

shortdesc=("A FUSE filesystem that supports reading and writing from any MTP device.")

source=("https://www.adebenham.com/files/mtp/${pkgname}-${pkgver}.tar.gz")

tags=("console sys-fs")

build_deps=("libmtp glib2 libid3tag fuse libmad")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
