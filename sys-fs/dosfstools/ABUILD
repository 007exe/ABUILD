pkgname=dosfstools
pkgver=4.2
pkgbuild=1
arch=("auto")

shortdesc=("Utilities to create and check MS-DOS FAT filesystems")
longdesc=("Inside of this package there are two utilities to create and to check MS-DOS FAT filesystems on either harddisks or floppies under Linux. This version uses the enhanced boot sector/superblock format of DOS 3.3+ as well as provides a default dummy boot sector code.")

tags=("base sys-fs")

source=("https://github.com/$pkgname/$pkgname/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz")

build_deps="glibc"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/dosfstools \
    --enable-compat-symlinks
  make -j${numjobs}
  make DESTDIR=$pkgdir install
}

