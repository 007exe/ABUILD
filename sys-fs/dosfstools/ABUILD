pkgname=dosfstools
pkgver=4.2
pkgbuild=2
arch=("auto")

shortdesc=("DOS filesystem utilities.")
longdesc=("The dosfstools package contains various utilities for use with the FAT family of file systems.")

source=("https://github.com/$pkgname/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("base sys-fs")

build_deps=("glibc")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --mandir=/usr/share/man \
    --docdir=/usr/share/doc/dosfstools \
    --enable-compat-symlinks
  make -j${numjobs}
  make DESTDIR=$pkgdir install
}

