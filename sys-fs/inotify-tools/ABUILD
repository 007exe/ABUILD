pkgname=inotify-tools
pkgver=3.22.6.0
pkgbuild=1
arch=("auto")

shortdesc=("Inotify-tools is a C library and a set of command-line programs for Linux providing a simple interface to inotify.")

tags=("base sys-fs")

source=("https://github.com/rvoicilas/inotify-tools/archive/${pkgver}.tar.gz")

build_deps=("gcc make doxygen")


build() {
  go_src_dir
  burn_patches
  sed -i 's|-Werror||g' src/Makefile.*
  ./autogen.sh
  ./configure \
    --prefix=/usr
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
