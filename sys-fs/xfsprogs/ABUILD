pkgname=xfsprogs
pkgver=6.1.1
pkgbuild=1
arch=("auto")

shortdesc=("Utilities for managing the XFS filesystem.")

tags=("base sys-fs")

source=("https://git.kernel.org/pub/scm/fs/xfs/xfsprogs-dev.git/snapshot/xfsprogs-dev-${pkgver}.tar.gz")

build_deps=("util-linux libinih device-mapper icu liburcu")

adddep=("device-mapper")

build() {
  go_src_dir
  make configure
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sbindir=/usr/bin \
    --bindir=/usr/bin \
    --enable-shared=yes
  make -j${numjobs}
  make DIST_ROOT=${pkgdir} PKG_ROOT_SBIN_DIR="/usr/bin" install install-dev
  chown -R root ${pkgdir}
  chgrp -R root ${pkgdir}

# NOTE: Переместить библиотеки
  mv ${pkgdir}/lib/libhandle.so* ${pkgdir}/usr/lib/
  rm -rf ${pkgdir}/lib
}
