pkgname=xfsprogs
pkgver=6.1.0
pkgbuild=1
arch=("auto")

shortdesc=("Utilities for managing the XFS filesystem.")
longdesc=("The xfsprogs package contains administration and debugging tools for the XFS file system.")

tags=("base sys-fs")

source=("https://mirrors.edge.kernel.org/pub/linux/utils/fs/xfs/xfsprogs/xfsprogs-${pkgver}.tag.xz")

build_deps=("util-linux libinih device-mapper icu liburcu")

adddep=("device-mapper")

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sbindir=/usr/bin \
    --bindir=/usr/bin \
    --enable-shared=yes
  make -j${numjobs}
  make DIST_ROOT=${pkgdir} PKG_ROOT_SBIN_DIR="/usr/bin" install install-dev
  chown -R root ${pkgdir}
  chgrp -R root ${pkgdir}

# NOTE: Переместить библиотеки
  mv ${pkgdir}/lib/libhandle.so* ${pkgdir}/usr/lib/
  rm -rf ${pkgdir}/lib
}
