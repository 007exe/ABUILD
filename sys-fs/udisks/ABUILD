pkgname=udisks
pkgver=2.9.4
pkgbuild=1
arch=('auto')

shortdesc=("Disk Management Service, version 2")
longdesc=("The UDisks package provides a daemon, tools and libraries to access and manipulate disks and storage devices.")

source=("https://github.com/storaged-project/udisks/archive/udisks-$pkgver.tar.gz")

tags="sys-fs base"

build_deps="docbook-xsl gobject-introspection parted gtk-doc polkit libatasmart libgudev libblockdev"

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static \
    --enable-fhs-media \
    --with-udevdir=/etc/udev
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
