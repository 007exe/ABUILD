pkgname=slang
pkgver=2.3.2
pkgbuild=2
arch=("auto")

shortdesc=("The shared library for the S-Lang extension language")
longdesc=("The S-Lang language was designed so that it can be easily embedded into a program to provide the program with a powerful extension language. The S-Lang library, provided in this package, provides the S-Lang extension language.")

tags=("libs sys-libs")

source=("https://www.jedsoft.org/releases/slang/${pkgname}-${pkgver}.tar.bz2")

build_deps="glibc pcre zlib"

config_files="etc/slsh.rc"

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib$LIBDIRSUFFIX \
    --sysconfdir=/etc
# Gathers only in one pot !!!!
  make -j1
  make DESTDIR=${pkgdir} install
}
