pkgname=libutempter
pkgver=1.2.1
pkgbuild=1
arch=("auto")

shortdesc=("Framework for pseudo terminal devices and running child processes.")
longdesc=("Interface for terminal emulators such as screen and xterm to record user sessions to utmp and wtmp files.")

source=("ftp://ftp.altlinux.org/pub/people/ldv/utempter/${pkgname}-${pkgver}.tar.gz")

tags=("libs sys-libs")

build_deps=("glibc")

build() {
  go_src_dir
  burn_patches
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  chown root:utmp ${pkgdir}/usr/lib/utempter/utempter
  chmod 2755 ${pkgdir}/usr/lib/utempter/utempter
}
