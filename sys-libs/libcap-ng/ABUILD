pkgname=libcap-ng
pkgver=0.8.2
pkgbuild=1
arch=('auto')

shortdesc="An alternate posix capabilities library"
longdesc=("Libcap-ng is a library that makes using posix capabilities easier.")

source=("http://people.redhat.com/sgrubb/${pkgname}/${pkgname}-${pkgver}.tar.gz")

tags="sys-libs libs"

build_deps="gcc"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --enable-static=no \
    --with-python
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
