pkgname=readline
_basever=8.1
_patchlevel=0
pkgver=$_basever.$_patchlevel
pkgbuild=1
arch=("auto")

shortdesc=("Readline (line input library with editing features)")
longdesc=("The GNU Readline library provides a set of functions for use by applications that allow users to edit command lines as they are typed in. Both Emacs and vi editing modes are available. The Readline library includes additional functions to maintain a list of previously entered command lines, to recall and perhaps edit those lines, and perform csh-like history expansion on previous commands.")

tags=("libs sys-libs")

source=("http://ftp.gnu.org/gnu/readline/readline-$_basever.tar.gz")

build_deps="ncurses"

config_files="etc/inputrc"

build() {
  go_src_dir
  burn_patches

  if [ $_patchlevel -gt 00 ]; then
    mkdir _patches
    for (( p=1; p<=$((10#${_patchlevel})); p++ )); do
        wget http://ftp.gnu.org/gnu/readline/readline-$_basever-patches/readline${_basever//./}-$(printf "%03d" $p) -O _patches/readline${_basever//./}-$(printf "%03d" $p)
        patch -p0 < _patches/readline${_basever//./}-$(printf "%03d" $p)
    done
  fi

# Remove RPATH from shared objects (FS#14366)
  sed -i 's|-Wl,-rpath,$(libdir) ||g' support/shobj-conf

# build with -fPIC for x86_64 (FS#15634)
  CFLAGS="$SLKCFLAGS"

  ./configure --prefix=/usr --libdir=/lib${LIBDIRSUFFIX}
  make SHLIB_LIBS=-lncursesw -j${numjobs}
  make install DESTDIR=${pkgdir}

  install -Dm644 ${filedir}/inputrc ${pkgdir}/etc/inputrc
}


