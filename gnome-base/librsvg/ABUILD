pkgname=librsvg
pkgver=2.52.0
pkgbuild=1
arch=('auto')

shortdesc=("SVG rendering library")
longdesc=("The librsvg package contains a library and tools used to manipulate, convert and view Scalable Vector Graphic (SVG) images.")

source=("http://ftp.gnome.org/pub/gnome/sources/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags="libs gnome-base"
# gdk-pixbuf2 gobject-introspection
build_deps="pango gobject-introspection rust gtk-doc gdk-pixbuf shared-mime-info vala python-pygments"

build() {
  go_src_dir
  burn_patches
# Use LTO
  export CARGO_PROFILE_RELEASE_LTO=true CARGO_PROFILE_RELEASE_CODEGEN_UNITS=1
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static \
    --enable-vala \
    --enable-gtk-doc
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
