pkgname=gnome-common
pkgver=3.18.0
pkgbuild=1
arch=("auto")

shortdesc=("Common development macros for GNOME")

source=("https://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz")

tags=("gnome gnome-base")

adddep=("bash autoconf-archive intltool yelp-tools gtk-doc")

build_deps=("${adddep}")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --with-autoconf-archive
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
