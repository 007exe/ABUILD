pkgname=libgnomekbd
pkgver=3.26.1
pkgbuild=1
arch=('auto')

shortdesc=("Keyboard management library.")
longdesc=("libgnomekbd offers an API to manage the keyboard in GNOME applications.")

#source=("https://gitlab.gnome.org/GNOME/libgnomekbd/-/archive/${pkgver}/libgnomekbd-${pkgver}.tar.gz")
source=("git:https://gitlab.gnome.org/GNOME/libgnomekbd.git")

tags="libs gnome-base"

build_deps="gobject-introspection libxklavier gtk3 dconf"

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-schemas-compile \
    --disable-static
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
