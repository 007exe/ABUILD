pkgname=lxsession
pkgver=0.5.5
pkgbuild=1
arch=('auto')

shortdesc=("Lightweight X11 session manager")
longdesc=("The LXSession package contains the default session manager for LXDE.")

source=("https://downloads.sourceforge.net/lxde/lxsession-$pkgver.tar.xz")

tags="lxde lxde-base"

build_deps="gtk3 polkit intltool docbook-xsl vala"

build() {
  go_src_dir
  burn_patches
# Regenerate C sources from Vala code
  rm *.stamp
  autoreconf -fi
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --enable-gtk3
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

# Ignore package by AppStream to avoid duplicated IDs
  echo 'X-AppStream-Ignore=true' >> "$pkgdir/usr/share/applications/lxsession-default-apps.desktop"
  echo 'X-AppStream-Ignore=true' >> "$pkgdir/usr/share/applications/lxsession-edit.desktop"
}
