pkgname=stlink
pkgver=1.7.0
pkgbuild=1
arch=("auto")

shortdesc=("Firmware programmer for STM32 STLINK v1/v2 protocol.")

source=("https://github.com/texane/stlink/archive/v${pkgver}.zip")

tags=("utils dev-embedded")

adddep=("libusb")

build_deps=("${adddep} cmake gtk3 unzip")

# NOTE: Это опциональные зависимости
removedep=("gtk3")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/v${pkgver}.zip
}

build(){
  go_src_dir
  burn_patches
  cmake \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DSTLINK_UDEV_RULES_DIR=/usr/lib/udev/rules.d \
    -DSTLINK_MODPROBED_DIR=/usr/lib/modprobe.d
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE.md ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  rm ${pkgdir}/usr/lib/libstlink.a
}
