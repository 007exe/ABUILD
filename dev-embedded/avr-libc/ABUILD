pkgname=avr-libc
pkgver=2.1.0
pkgbuild=1
arch=("noarch")

shortdesc=("The C runtime library for the AVR family of microcontrollers.")

source=("https://download.savannah.gnu.org/releases/${pkgname}/${pkgname}-${pkgver}.tar.bz2")

tags=("develop dev-embedded")

adddep=("avr-gcc")

build_deps=("${adddep}")

build(){
  go_src_dir
  burn_patches
  ./bootstrap
  ./configure --build=$(./config.guess) --host=avr --prefix=/usr --host=avr
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
