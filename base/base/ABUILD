pkgname=base
pkgver=1
pkgbuild=1
arch=('noarch')

shortdesc="Base filesystem package"
longdesc="Base file system package. This package should be installed first and should never be removed."

tags="base sys-base"

build_deps="mkpkg"

build() {
  cd ${pkgdir}/
  mkdir -p usr/{bin,lib}
  ln -s usr/bin bin
  ln -s usr/bin sbin
  ln -s usr/lib lib
  ln -s usr/lib lib64
  cd usr
  ln -s bin sbin
  ln -s lib lib64
}

