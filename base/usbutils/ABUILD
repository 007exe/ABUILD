# ABUILD generated by mkpkg_generator.sh

pkgname=usbutils
pkgver=012
pkgbuild=1
arch=("auto")
shortdesc=("usbutils (USB utilities)")
longdesc=("lsusb displays detailed information about all USB buses and devices in the system. usbmodules lists the kernel modules for a plugged in USB device. See the manual pages for more details.")

tags=("base sys-apps")

source=("https://www.kernel.org/pub/linux/utils/usb/usbutils/${pkgname}-${pkgver}.tar.xz")

build_deps="eudev"

build() {
	go_src_dir
	./autogen.sh
	./configure --prefix=/usr --libdir=/usr/lib${LIBDIRSUFFIX}  --docdir=/usr/share/doc/${pkgname}-${pkgver} --mandir=/usr/share/man --datadir=/usr/share/hwdata --disable-zlib
	make
}

after_build() {
	go_src_dir
	make DESTDIR="$pkgdir" install
	# this is now in the hwids package
	#rm -rf $pkgdir/usr/{share/hwdata,sbin}
}
