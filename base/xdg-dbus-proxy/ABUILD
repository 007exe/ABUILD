pkgname=xdg-dbus-proxy
pkgver=0.1.2
pkgbuild=1
arch=("auto")

shortdesc=("Filtering proxy for D-Bus connections.")
longdesc=("xdg-dbus-proxy is a filtering proxy for D-Bus connections. It was originally part of the flatpak project, but it has been broken out as a standalone module to facilitate using it in other contexts.")

tags=("base sys-apps")

source=("https://github.com/flatpak/xdg-dbus-proxy/releases/download/$pkgver/xdg-dbus-proxy-$pkgver.tar.xz")

build_deps="glib2 dbus autoconf docbook-xsl"

build() {
  go_src_dir
  burn_patches
#  NOCONFIGURE=1 ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX}
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
