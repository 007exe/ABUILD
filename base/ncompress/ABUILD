# ABUILD generated by mkpkg_generator.sh

pkgname=ncompress
pkgver=4.2.4.6
pkgbuild=1
arch=("auto")

shortdesc=("The classic *nix compression utility")
longdesc=("Compress reduces the size of the named files using adaptive Lempel-Ziv coding. Whenever possible, each file is replaced by one with the extension .Z, while keeping the same ownership modes, access and modification times. If no files are specified, the standard input is compressed to the standard output. Compressed files can be restored to their original form using uncompress or zcat.")
tags=("base app-arch")
source=("http://sourceforge.net/projects/ncompress/files/$pkgname-$pkgver.tar.gz")

build_deps="glibc"

build() {
  go_src_dir
  make -j${numjobs}

  install -Dm755 compress $pkgdir/usr/bin/compress
  mkdir -p $pkgdir/usr/man/man1/
  cat compress.1 | gzip -9c > $pkgdir/usr/man/man1/compress.1.gz
}
