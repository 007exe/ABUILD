# ABUILD generated by mkpkg_generator.sh
pkgname=dosfstools
# Выше 3.0.28 не собирается
pkgver=4.1
pkgbuild=1
arch=("auto")

shortdesc=("Tools for working with FAT filesystems")
longdesc=("Utilities for creating FAT filesystems (mkdosfs), and for checking and repairing them (dosfsck).")

tags=("base sys-fs")
source=("https://github.com/$pkgname/$pkgname/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz")
build_deps="glibc"

build() {
	go_src_dir
	burn_patches
	./configure --prefix=/usr --libexecdir=/usr/lib${LIBDIRSUFFIX} \
              --sbindir=/usr/bin --mandir=/usr/share/man \
              --docdir=/usr/share/doc/dosfstools --enable-compat-symlinks
	make -j${numjobs}
	make DESTDIR=$pkgdir install
}

