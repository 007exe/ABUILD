# ABUILD generated by mkpkg_generator.sh

pkgname=findutils
pkgver=4.7.0
pkgbuild=1
arch=("auto")

shortdesc=("Utilities to locate files")
longdesc=("This package contains the GNU find and xargs programs. The find and xargs implementations comply with POSIX 1003.2. They also support some additional options, some borrowed from Unix and some unique to GNU.")

tags=("base sys-base")
source=("ftp://ftp.gnu.org/pub/gnu/findutils/${pkgname}-${pkgver}.tar.xz")
build_deps="glibc"
adddep="bash"

build() {
	go_src_dir
	sed -e '/^SUBDIRS/s/locate//' -e 's/frcode locate updatedb//' -i Makefile.in
	autoreconf
	./configure --prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --mandir=/usr/share/man --docdir=/usr/share/doc --sysconfdir=/etc
	make -C locate dblocation.texi
	make
#	make check
	make DESTDIR="$pkgdir" install	
}
