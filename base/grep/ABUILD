pkgname=grep
pkgver=3.6
pkgbuild=1
arch=("auto")

shortdesc="A string search utility"
longdesc=("This is GNU grep, the 'fastest grep in the west' (we hope). Grep searches through textual input for lines which contain a match to a specified pattern and then prints the matching lines.")

tags=("base sys-apps")

source=("ftp://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.xz")

build_deps="texinfo"

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --bindir=/bin \
    --without-included-regex
  make
  make DESTDIR="$pkgdir" install
}


after_build() {
  mkdir -p ${pkgdir}/usr/bin
  ( cd ${pkgdir}/usr/bin
       ln -sf ../../bin/grep .
       ln -sf ../../bin/egrep .
       ln -sf ../../bin/fgrep .
  )
}
