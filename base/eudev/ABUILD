pkgname=eudev
pkgver=3.2.10
pkgbuild=1
arch=('auto')

shortdesc="The userspace dev tools (udev) forked by Gentoo"
longdesc="The Eudev package contains programs for dynamic creation of device nodes."

source=("https://dev.gentoo.org/~blueness/eudev/eudev-${pkgver}.tar.gz")

tags=('base sys-fs')

# gobject-introspection
build_deps="kmod util-linux-ng acl gperf kernel-headers"

provides="udev"

build(){
  go_src_dir
  ./configure \
    --prefix=/usr \
    --with-rootprefix=/ \
    --sbindir=/sbin \
    --bindir=/sbin \
    --sysconfdir=/etc \
    --libexecdir=/lib/udev \
    --libdir=/usr/lib$LIBDIRSUFFIX \
    --disable-static \
    --config-cache \
    --with-rootlibdir=/usr/lib \
    --with-rootlibexecdir=/lib/udev \
    --enable-gudev \
    --disable-introspection \
    --enable-split-usr \
    --enable-kmod
  make DESTDIR=${pkgdir} install
}

after_build() {
  go_src_dir
# prune_libtool_files
  find "${pkgdir}" -name '*.la' -delete

  mkdir -p ${pkgdir}/{lib/udev,/etc/{udev/rules.d/,init.d}}
  ( cd ${filedir}/gentoo-scripts
    install -Dm755 init.d/* ${pkgdir}/etc/init.d
    cp -r conf.d ${pkgdir}/etc
    install -Dm755 helpers/* ${pkgdir}/lib/udev/
    cp ${filedir}/rules.d/90-network.rules ${pkgdir}/lib/udev/rules.d
	)
###	# make a place for udev to store the socket
    mkdir -p ${pkgdir}/run/udev/

###	# remove docs
    rm -rf ${pkgdir}/usr/share/gtk-doc
    rm -rf ${pkgdir}/etc/udev/hwdb.d

###	# Copy additional rules
    cp -v ${filedir}/rules.d/*.rules ${pkgdir}/lib/udev/rules.d/

# Нормальные имена сетевых интерфейсов
    rm -f  ${pkgdir}/lib/udev/rules.d/80-net-name-slot.rules

    ln -n ${pkgdir}/usr/lib$LIBDIRSUFFIX/libudev.so ${pkgdir}/usr/lib$LIBDIRSUFFIX/libudev.so.1
}
