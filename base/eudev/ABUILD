pkgname=eudev
pkgver=3.2.10
pkgbuild=3
arch=("auto")

shortdesc=("The userspace dev tools (udev) forked by Gentoo")
longdesc=("The Eudev package contains programs for dynamic creation of device nodes.")

source=("https://dev.gentoo.org/~blueness/eudev/eudev-${pkgver}.tar.gz")

tags=('base sys-fs')

build_deps="kmod util-linux-ng openssl xz zstd"

build(){
  go_src_dir
  ./configure \
    --prefix=/usr \
    --with-rootprefix=/ \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --libdir=/usr/lib$LIBDIRSUFFIX \
    --disable-static \
    --config-cache \
    --with-rootlibexecdir=/usr/lib/udev \
    --enable-gudev \
    --disable-introspection \
    --enable-split-usr \
    --enable-kmod
  make DESTDIR=${pkgdir} install
}

after_build() {
  go_src_dir
# prune_libtool_files
  find "${pkgdir}" -name '*.la' -delete

  mkdir -p ${pkgdir}/etc/{udev/rules.d/,init.d}
  install -Dm755 ${filedir}/etc/init.d/* ${pkgdir}/etc/init.d
  cp -r ${filedir}/etc/conf.d ${pkgdir}/etc
  install -Dm755 ${filedir}/helpers/* ${pkgdir}/usr/lib/udev/

# make a place for udev to store the socket
  mkdir -p ${pkgdir}/run/udev/

# remove docs
  rm -rf ${pkgdir}/usr/share/gtk-doc
  rm -rf ${pkgdir}/etc/udev/hwdb.d

# Copy additional rules
  cp -v ${filedir}/rules.d/*.rules ${pkgdir}/usr/lib/udev/rules.d/

# Нормальные имена сетевых интерфейсов
  rm -f  ${pkgdir}/usr/lib/udev/rules.d/80-net-name-slot.rules
}
