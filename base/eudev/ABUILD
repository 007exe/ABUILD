pkgname=eudev
pkgver=3.2.10
pkgbuild=2
arch=("auto")

shortdesc=("The userspace dev tools (udev) forked by Gentoo")
longdesc=("The Eudev package contains programs for dynamic creation of device nodes.")

source=("https://dev.gentoo.org/~blueness/eudev/eudev-${pkgver}.tar.gz")

tags=('base sys-fs')

build_deps="kmod util-linux-ng openssl xz zstd"

build(){
  go_src_dir
  ./configure \
    --prefix=/usr \
    --with-rootprefix=/ \
    --bindir=/sbin \
    --sbindir=/sbin \
    --sysconfdir=/etc \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --with-rootlibdir=/lib${LIBDIRSUFFIX} \
    --config-cache \
    --with-rootlibexecdir=/lib/udev \
    --libexecdir=/lib \
    --enable-split-usr \
    --with-rootrundir=/run \
    --enable-hwdb \
    --enable-manpages \
    --enable-rule_generator \
    --enable-kmod \
    --disable-introspection \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}

after_build() {
  go_src_dir
# prune_libtool_files
  find "${pkgdir}" -name '*.la' -delete

  mkdir -p ${pkgdir}/etc/{firmware,modprobe.d,udev/rules.d/,init.d}
  install -Dm755 ${filedir}/etc/init.d/* ${pkgdir}/etc/init.d
  cp -r ${filedir}/etc/conf.d ${pkgdir}/etc
  install -Dm755 ${filedir}/helpers/* ${pkgdir}/lib/udev/

# make a place for udev to store the socket
  mkdir -p ${pkgdir}/run/udev/

# Copy additional rules
  cp -v ${filedir}/rules.d/*.rules ${pkgdir}/lib/udev/rules.d/

# Нормальные имена сетевых интерфейсов
  rm -f  ${pkgdir}/lib/udev/rules.d/80-net-name-slot.rules

# Временный фикс библиотек
  cd ${pkgdir}/lib$LIBDIRSUFFIX
  ln -s libudev.so.1.6.3 ../usr/lib$LIBDIRSUFFIX/libudev.so.1.6.3
}
