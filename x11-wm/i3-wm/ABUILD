pkgname=i3-wm
pkgver=4.22
pkgbuild=1
arch=("auto")

shortdesc=("Improved dynamic tiling window manager.")

source=("https://i3wm.org/downloads/i3-${pkgver}.tar.xz")

tags=("x11-wm i3")

build_deps=("meson xmlto libev libxkbcommon-x11 pango startup-notification xcb-util-cursor
xcb-util-keysyms xcb-util-wm xcb-util-xrm yajl")

adddep=("libev libxkbcommon-x11 pango startup-notification xcb-util-cursor xcb-util-keysyms
xcb-util-wm xcb-util-xrm yajl")

# NOTE: Это опциональные зависимости
removedep=("rxvt-unicode dmenu i3lock i3status perl-json-xs perl-anyevent-i3")

config_files=("etc/i3/config")

conflicts=("i3-gaps")

build(){
  go_src_dir
  burn_patches
  meson build -D prefix=/usr
  ninja -C build
  DESTDIR=${pkgdir} ninja -C build install

  install -Dm644 -t ${pkgdir}/usr/share/licenses/${pkgname} LICENSE
}
