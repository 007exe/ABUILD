pkgname=gkrellm
pkgver=2.3.11
pkgbuild=1
arch=("auto")

shortdesc=("System monitor package for GTK2.")

source=("http://gkrellm.srcbox.net/releases/${pkgname}-${pkgver}.tar.bz2")

tags=("apps app-admin")

adddep=("gtk2 libsm lm_sensors")

build_deps=("${adddep} gettext")

config_files=("etc/gkrellmd.conf")

build(){
  go_src_dir
  burn_patches
  make LOCALEDIR=/usr/share/locale
  make DESTDIR=${pkgdir} PREFIX=/usr install
  install -Dm644 server/gkrellmd.conf ${pkgdir}/etc/gkrellmd.conf
}

