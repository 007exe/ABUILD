pkgname=opendoas
pkgver=6.8.1
pkgbuild=1
arch=("auto")

shortdesc=("Run commands as super user or another user")
longdesc=("Doas is a minimal replacement for the venerable sudo.")

tags=("console sys-auth")

source=("https://github.com/Duncaen/OpenDoas/releases/download/v$pkgver/opendoas-$pkgver.tar.gz")

build_deps="glibc linux-pam"

config_files="etc/pam.d/doas
etc/doas.conf"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --with-timestamp
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/opendoas/LICENSE"

  install -Dm0400 ${filedir}/doas.conf "$pkgdir/etc/doas.conf"
}
