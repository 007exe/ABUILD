pkgname=gnote
pkgver=43.1
pkgbuild=1
arch=("auto")

shortdesc=("A note taking application.")

source=("https://gitlab.gnome.org/GNOME/gnote/-/archive/${pkgver}/gnote-${pkgver}.tar.gz")

tags=("gnome gnome-apps")

adddep=("gtkmm3 gspell libxslt libsecret")

build_deps=("${adddep} yelp-tools meson")

build(){
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
