pkgname=evince
pkgver=44.3
pkgbuild=1
arch=("auto")

shortdesc=("Document viewer (PDF, PostScript, XPS, djvu, dvi, tiff, cbr, cbz, cb7, cbt)")

source=("https://gitlab.gnome.org/GNOME/evince/-/archive/${pkgver}/evince-${pkgver}.tar.gz")

tags=("gnome gnome-apps")

# libsynctex
adddep=("dconf gtk3 libgxps libspectre gsfonts poppler-glib djvulibre dconf libsecret
gsettings-desktop-schemas gnome-desktop libarchive gst-plugins-base-libs gspell libhandy gvfs")

# texlive-bin
build_deps=("${adddep} gobject-introspection gi-docgen git meson appstream-glib yelp-tools")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D ps=enabled
  meson compile -C build
   meson install -C build --destdir ${pkgdir}
}
