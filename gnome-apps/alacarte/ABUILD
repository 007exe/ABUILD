pkgname=alacarte
pkgver=3.44.2
pkgbuild=1
arch=("auto")

shortdesc=("Menu editor for gnome.")
longdesc=("Simple GNOME menu editor.")

source=("https://download.gnome.org/sources/alacarte/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("gnome-apps gnome")

build_deps=("gnome-menus python-gobject python-cairo gtk3 libxslt docbook-xsl")

adddep=("gnome-menus python-gobject python-cairo")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --localstatedir=/var
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  python -m compileall -d /usr ${pkgdir}/usr
  python -O -m compileall -d /usr ${pkgdir}/usr
}
