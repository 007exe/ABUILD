pkgname=gnome-commander
pkgver=1.16.1
pkgbuild=1
arch=("auto")

shortdesc=("Graphical two-pane filemanager for Gnome.")

source=("https://download.gnome.org/sources/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("gnome-apps apps")

adddep=("libgsf exiv2 taglib poppler-glib libunique gtk2")

build_deps=("${adddep} perl-xml-parser itstool yelp-tools meson ninja")

build() {
  go_src_dir
  burn_patches
  meson build \
    --prefix=/usr \
    --buildtype=plain
  ninja -C build
  GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=${pkgdir} ninja -C build install
}
