pkgname=gnome-disk-utility
pkgver=42.0
pkgbuild=1
arch=("auto")

shortdesc=("Disk Management Utility for GNOME.")
longdesc=("The GNOME Disk Utility package provides applications used for dealing with storage devices.")

source=("https://gitlab.gnome.org/GNOME/gnome-disk-utility/-/archive/${pkgver}/gnome-disk-utility-${pkgver}.tar.gz")

tags=("gnome gnome-apps")

build_deps=("meson docbook-xsl udisks gtk3 libsecret libpwquality libcanberra libdvdread libnotify parted libhandy")

adddep=("udisks parted")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
