pkgname=libdrm
pkgver=2.4.110
pkgbuild=1
arch=("auto")

shortdesc=("Userspace interface to kernel DRM services.")
longdesc=("X.Org libdrm library.")

source=("https://dri.freedesktop.org/$pkgname/$pkgname-$pkgver.tar.xz")

tags=("libs x11-misc")

build_deps=("python-docutils meson libpciaccess")

build(){
  go_src_dir
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D udev=false
  ninja -C build
  DESTDIR=${pkgdir} meson install -C build
}
