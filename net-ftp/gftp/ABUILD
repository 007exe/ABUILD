#ABUILD created by: khvalera, khvalera at narod.ru 
pkgname=gftp
pkgver=2.0.19
pkgbuild=3
arch=('auto')

shortdesc="gFTP is a free multithreaded file transfer client for *NIX."

source=("http://${pkgname}.seul.org/${pkgname}-${pkgver}.tar.bz2")

tags="net-ftp network"

build_deps="make gcc pkg-config gtk+2 gettext ncurses readline openssl"

adddep="readline"

BUILD_SYSTEM="autotools"

BUILD_WORD="LDFLAGS=\"${SLKLDFLAGS}\" CFLAGS=\"${SLKCFLAGS}\" CXXFLAGS=\"${SLKCFLAGS}\" ./configure"

BUILD_KEYS="--prefix=/usr \
--sysconfdir=/etc \
--localstatedir=/var \
--libdir=/usr/lib${LIBDIRSUFFIX} \
--disable-static \
--mandir=/usr/man \
--docdir=/usr/doc/${pkgname}-${pkgver} \
--program-prefix= \
--program-suffix= \
--enable-gtk20 \
--enable-gtkport \
--enable-textport \
--enable-ssl \
--enable-largefile \
--disable-glibtest \
--disable-gtktest \
--enable-nls \
--disable-threads \
--without-dmalloc"

INSTALL_KEYS="DESTDIR=${pkgdir}"
