pkgname=gftp
pkgver=2.9.1b
pkgbuild=1
arch=("auto")

shortdesc=("A multithreaded ftp client for X Windows.")

source=("https://github.com/masneyb/gftp/archive/refs/tags/${pkgver}.tar.gz")

tags=("net-ftp network")

build_deps=("intltool gtk2 openssl readline")

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --mandir=/usr/share/man \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
