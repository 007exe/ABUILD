pkgname=nano
pkgver=6.4
pkgbuild=1
arch=("auto")

shortdesc=("Pico editor clone with enhancements.")
longdesc=("The Nano package contains a small, simple text editor which aims to replace Pico, the default editor in the Pine package.")

source=("http://www.nano-editor.org/dist/v6/${pkgname}-${pkgver}.tar.gz")

tags=("console app-editors")

build_deps=("ncurses file")

config_files=("etc/nanorc")

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --enable-utf8 \
    --enable-color \
    --enable-nanorc \
    --enable-multibuffer
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -DTm644 ${srcdir}/${pkgname}-${pkgver}/doc/sample.nanorc ${pkgdir}/etc/nanorc
}
