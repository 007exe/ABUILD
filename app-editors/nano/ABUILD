pkgname=nano
pkgver=6.0
pkgbuild=1
arch=('auto')

shortdesc=("Tiny console text editor that aims to emulate Pico")
longdesc=("nano (Nano's ANOther editor) is the editor formerly known as TIP (TIP Isn't Pico). It aims to emulate Pico as closely as possible while also offering a few enhancements.")

source=("http://www.nano-editor.org/dist/v6/${pkgname}-${pkgver}.tar.gz")

tags="console app-text"

config_files="etc/nanorc"
build_deps="ncurses"

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --enable-color \
    --enable-nanorc \
    --enable-multibuffer
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -DTm644 ${srcdir}/${pkgname}-${pkgver}/doc/sample.nanorc ${pkgdir}/etc/nanorc
}
