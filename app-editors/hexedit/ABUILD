pkgname=hexedit
pkgver=1.6
pkgbuild=1
arch=("auto")

shortdesc=("View and edit files in hexadecimal or in ASCII.")

source=("https://github.com/pixel/hexedit/archive/${pkgver}.tar.gz")

tags=("develop app-editors")

build_deps=("ncurses")

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make prefix=${pkgdir}/usr install
}
