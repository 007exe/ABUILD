pkgname=mousepad
pkgver=0.5.7
pkgbuild=1
arch=('auto')

shortdesc=("Simple Xfce oriented text editor")
longdesc=("Mousepad is a text editor for Xfce based on Leafpad. The initial reason for Mousepad was to provide printing support, which would have been difficult for Leafpad for various reasons.")

source=("http://archive.xfce.org/src/apps/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2")

tags="xfce xfce-base"

build_deps="gtksourceview4 intltool desktop-file-utils"

adddep="hicolor-icon-theme"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-dbus \
    --enable-keyfile-settings \
    --enable-gtksourceview4 \
    --disable-static \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
