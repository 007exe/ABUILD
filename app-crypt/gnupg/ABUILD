pkgname=gnupg
pkgver=2.2.41
pkgbuild=1
arch=("auto")

shortdesc=("Complete and free implementation of the OpenPGP standard.")

source=("https://gnupg.org/ftp/gcrypt/${pkgname}/${pkgname}-${pkgver}.tar.bz2")

tags=("app-crypt network")

# libldap
build_deps=("libusb-compat libgpg-error libgcrypt bzip2 readline
gnutls sqlite zlib glibc libassuan libksba npth pcsclite pinentry")

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --enable-maintainer-mode \
    --sysconfdir=/etc
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  ln -s gpg ${pkgdir}/usr/bin/gpg2
  ln -s gpgv ${pkgdir}/usr/bin/gpgv2
}
