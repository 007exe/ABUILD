pkgname=rofi
pkgver=1.7.0
pkgbuild=1
arch=('auto')

shortdesc=("A window switcher, application launcher and dmenu replacement.")
longdesc=("Rofi is a dmenu replacement. Rofi, like dmenu, will provide the user with a textual list of options where one or more can be selected. This can either be, running an application, selecting a window or options provided by an external script.")

source=("https://github.com/DaveDavenport/rofi/releases/download/$pkgver/rofi-$pkgver.tar.xz")

tags="utils x11-misc"
# libxdg-basedir
build_deps="startup-notification libxkbcommon-x11 xcb-util-wm xcb-util-xrm librsvg xcb-util-cursor"

build() {
  go_src_dir
  burn_patches
  autoreconf -i
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libdir=/usr/lib${LIBDIRSUFFIX}
  make -j${numjobs}
  make install install-man DESTDIR="$pkgdir"

  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
  install -dm755 "$pkgdir/usr/share/doc/$pkgname/examples"
  install -Dm755 Examples/*.sh "$pkgdir/usr/share/doc/$pkgname/examples"
}
