BUILD_KEYS="--prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --libdir=/usr/lib${LIBDIRSUFFIX} \
            --disable-static \
            --mandir=/usr/share/man \
	    --docdir=/usr/share/doc/${pkgname}-${pkgver} \
            --program-prefix= \
            --program-suffix= \
            --without-ewf \
            --enable-sudo"

INSTALL_KEYS="DESTDIR=${pkgdir}"
