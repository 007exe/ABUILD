pkgname=iftop
pkgver=1.0pre4
pkgbuild=1
arch=("auto")

shortdesc=("Display bandwidth usage on an interface.")

source=("http://www.ex-parrot.com/~pdw/${pkgname}/download/${pkgname}-${pkgver}.tar.gz")

tags=("net-analyzer console")

build_deps=("libpcap ncurses")

build() {
  go_src_dir
  burn_patches
  CFLAGS+=' -fcommon'
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sbindir=/usr/bin \
    --mandir=/usr/share/man \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
