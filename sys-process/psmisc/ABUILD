pkgname=psmisc
pkgver=23.4
pkgbuild=1
arch=("auto")

shortdesc="Miscellaneous procfs tools"
longdesc="Utilities for managing processes on your system"

tags=("base sys-base")

source=("http://downloads.sourceforge.net/psmisc/${pkgname}-${pkgver}.tar.xz")

build_deps="gcc ncurses"

build() {
  go_src_dir
  ./configure --prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --sysconfdir=/etc
  make
  make DESTDIR=${pkgdir} install
}
