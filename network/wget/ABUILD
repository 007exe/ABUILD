# ABUILD generated by mkpkg_generator.sh

pkgname=wget

pkgver=1.20.3
pkgbuild=3
arch=("auto")

shortdesc=("wget (a non-interactive network retriever)")
longdesc=("GNU Wget is a free network utility to retrieve files from the World Wide Web using HTTP and FTP, the two most widely used Internet protocols. It works non-interactively, thus enabling work in the background after having logged off. The author of Wget is Hrvoje Niksic <hniksic@srce.hr>.")

tags=("network net-misc")

source=("http://ftp.gnu.org/gnu/wget/wget-${pkgver}.tar.gz")

### Следует перевести на pcre2
build_deps="glibc-solibs openssl libidn pcre util-linux-ng"
adddep="ca-certificates"
config_files="etc/wgetrc"

BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --mandir=/usr/man --sysconfdir=/etc --with-ssl=openssl --enable-nls"
INSTALL_KEYS="DESTDIR=$pkgdir"


after_build() {
	  cat >> "$pkgdir/etc/wgetrc" <<EOF

# default root certs location
ca_certificate=/etc/ssl/certs/ca-certificates.crt
EOF
}
