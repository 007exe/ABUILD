pkgname=iputils
pkgver=20210202
pkgbuild=1
arch=("auto")

shortdesc=("Network monitoring tools including ping")
longdesc=("The iputils package contains ping, a basic networking tool. The ping command sends a series of ICMP protocol ECHO_REQUEST packets to a specified network host and can tell you if that machine is alive and receiving network traffic.")

tags=("network net-misc")

source=("https://github.com/iputils/iputils/archive/${pkgver}.tar.gz")

build_deps="perl-sgmls docbook-xsl meson libcap libidn2"

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  meson --prefix=/usr --sbindir=/usr/bin --mandir=/usr/share/man -DBUILD_RARPD=true -DBUILD_TFTPD=true ..
  ninja
  DESTDIR="$pkgdir" ninja install
}
