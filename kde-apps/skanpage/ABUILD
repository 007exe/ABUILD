pkgname=skanpage
pkgver=22.08.0
pkgbuild=1
arch=("auto")

shortdesc=("Utility to scan images and multi-page documents.")
longdesc=("Multi-page scanning application supporting image and pdf files.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("apps kde-apps")

build_deps=("ksanecore kirigami2 purpose tesseract extra-cmake-modules")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
