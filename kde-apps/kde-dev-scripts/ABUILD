pkgname=kde-dev-scripts
pkgver=22.04.3
pkgbuild=1
arch=("auto")

shortdesc=("KDE Development Scripts.")
longdesc=("Scripts and setting files useful during development of KDE software.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("apps kde-apps")

build_deps=("perl extra-cmake-modules kdoctools")

# NOTE: Это опциональные зависимости
removedep=("")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  mkdir -p ${pkgdir}/usr/share/kde-dev-scripts
  cp -r kde-devel-* gdb ${pkgdir}/usr/share/kde-dev-scripts
}
