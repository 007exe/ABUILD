pkgname=akonadi-contacts
pkgver=22.04.3
pkgbuild=1
arch=("auto")

shortdesc=("Library for akonadi contact integration.")
longdesc=("Libraries and daemons to implement Contact Management in Akonadi.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("libs kde-apps")

build_deps=("libakonadi kcontacts kmime prison grantleetheme extra-cmake-modules qt5-tools doxygen")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
