pkgname=poxml
pkgver=22.04.3
pkgbuild=1
arch=("auto")

shortdesc=("Translates DocBook XML files using gettext po files.")
longdesc=("KDE utility to translate DocBook XML files using gettext po files.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("apps kde-apps")

build_deps=("qt5-base gettext extra-cmake-modules kdoctools")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
