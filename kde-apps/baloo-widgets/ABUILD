pkgname=baloo-widgets
pkgver=22.04.1
pkgbuild=1
arch=("auto")

shortdesc=("Widgets for Baloo.")
longdesc=("Widget library for baloo.")

source=("ftp://ftp.kde.org/pub/kde/stable/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde-apps kde")

build_deps=("extra-cmake-modules kdoctools baloo")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
