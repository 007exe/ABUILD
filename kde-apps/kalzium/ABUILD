pkgname=kalzium
pkgver=22.04.3
pkgbuild=1
arch=("auto")

shortdesc=("Periodic Table of Elements.")
longdesc=("Periodic table of the elements.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("apps kde-apps")

build_deps=("kparts knewstuff kplotting kunitconversion qt5-script avogadrolibs-qt5
openbabel extra-cmake-modules kdoctools eigen ocaml facile python")

adddep=("hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
