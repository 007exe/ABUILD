pkgname=pimcommon
pkgver=22.04.3
pkgbuild=1
arch=("auto")

shortdesc=("Common PIM libraries.")
longdesc=("Common libraries for KDE PIM.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("libs kde-apps")

build_deps=("libkdepim kimap kldap akonadi-contacts akonadi-search purpose kpimtextedit extra-cmake-modules qt5-tools doxygen")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
