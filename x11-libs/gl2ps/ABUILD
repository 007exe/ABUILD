pkgname=gl2ps
pkgver=1.4.2
pkgbuild=1
arch=("auto")

shortdesc=("GL2PS: an OpenGL to PostScript printing library")
longdesc=("GL2PS: an OpenGL to PostScript printing library")

tags=('x11-libs libs compat32')

source=("https://geuz.org/gl2ps/src/gl2ps-${pkgver}.tgz")
#texlive-core
build_deps="cmake libpng libglvnd"

build() {
  go_src_dir
  burn_patches
  export FORCE_SOURCE_DATE=1 # make pdftex adhere to SOURCE_DATE_EPOCH
  mkdir build
  cd build
  cmake .. \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_SUFFIX=${LIBDIRSUFFIX} \
    -DCMAKE_EXE_LINKER_FLAGS=-lm
  make -j${numjobs}
  make DESTDIR="$pkgdir/" install
}
