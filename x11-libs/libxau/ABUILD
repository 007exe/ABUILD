pkgname=libxau
pkgver=1.0.9
pkgbuild=2
arch=("auto")

shortdesc=("X authorization file management library.")
longdesc=("The libXau package contains a library implementing the X11 Authorization Protocol. This is useful for restricting client access to the display.")

source=("http://xorg.freedesktop.org/releases/individual/lib/libXau-${pkgver}.tar.bz2")

tags=("x11-libs xserver")

build_deps=("glibc xorgproto")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
