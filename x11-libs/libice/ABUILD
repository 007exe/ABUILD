pkgname=libice
pkgver=1.0.10
pkgbuild=1
arch=("auto")

shortdesc=("X11 Inter-Client Exchange library")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

tags=('x11-libs xserver compat32')

source=("http://xorg.freedesktop.org/archive/individual/lib/libICE-${pkgver}.tar.bz2")

build_deps=("glibc xorgproto pkg-config xorg-util-macros xtrans")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
