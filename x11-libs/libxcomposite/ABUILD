pkgname=libxcomposite
pkgver=0.4.5
pkgbuild=2
arch=("auto")

shortdesc=("X11 Composite extension library")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

source=("http://xorg.freedesktop.org/archive/individual/lib/libXcomposite-${pkgver}.tar.bz2")

tags=("x11-libs xserver")

build_deps=("libxfixes xorg-util-macros xorgproto")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
