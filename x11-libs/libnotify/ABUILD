pkgname=libnotify
pkgver=0.8.3
pkgbuild=1
arch=("auto")

shortdesc=("Library for sending desktop notifications.")

source=("https://gitlab.gnome.org/GNOME/libnotify/-/archive/${pkgver}/libnotify-${pkgver}.tar.gz")

tags=("libs x11-libs")

adddep=("gdk-pixbuf")

build_deps=("${adddep} docbook-xsl gi-docgen gobject-introspection gtk3 meson xmlto")

# FIXME: Проблемы со сборкой документации

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D man=false
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
