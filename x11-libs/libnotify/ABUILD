pkgname=libnotify
pkgver=0.7.9
pkgbuild=1
arch=('auto')

shortdesc=("Library for sending desktop notifications")
longdesc=("The libnotify library is used to send desktop notifications to a notification daemon, as defined in the Desktop Notifications spec. These notifications can be used to inform the user about an event or display some form of information without getting in the user's way.")

source=("https://gitlab.gnome.org/GNOME/libnotify/-/archive/${pkgver}/libnotify-${pkgver}.tar.gz")

tags="libs x11-libs"

build_deps="gtk3 gobject-introspection git meson docbook-xsl xmlto gtk-doc"

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D man=false
  meson compile -C build
  meson install -C build --destdir "$pkgdir"
}
