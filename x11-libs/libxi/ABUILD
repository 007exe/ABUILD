pkgname=libxi
pkgver=1.8
pkgbuild=1
arch=("auto")

shortdesc=("X11 Input extension library")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

tags=('x11-libs xserver compat32')

source=("http://xorg.freedesktop.org/archive/individual/lib/libXi-${pkgver}.tar.bz2")

build_deps="pkg-config xorg-util-macros libxfixes xorgproto libxext"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
