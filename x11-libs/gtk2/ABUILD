pkgname=gtk2
pkgver=2.24.33
pkgbuild=3
arch=("auto")

shortdesc=("The GTK+ 2 package contains libraries used for creating graphical user interfaces for applications.")

source=("https://download.gnome.org/sources/gtk+/${pkgver%.*}/gtk+-${pkgver}.tar.xz")

tags=("libs x11-libs")

adddep=("gtk-update-icon-cache shared-mime-info hicolor-icon-theme")

build_deps=("${adddep} at-spi2-core pango gdk-pixbuf libxcursor libxinerama libxrandr libxi libxcomposite
libxdamage cairo gobject-introspection libcups librsvg desktop-file-utils gtk-doc gdk-pixbuf pango")

config_files=("etc/gtk-2.0/im-multipress.conf")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --with-xinput=yes \
    --disable-gtk-doc

  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dt ${pkgdir}/usr/share/gtk-2.0 -m644 ${filedir}/gtkrc

  rm ${pkgdir}/usr/bin/gtk-update-icon-cache
}
