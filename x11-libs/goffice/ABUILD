pkgname=goffice
pkgver=0.10.53
pkgbuild=1
arch=("auto")

shortdesc=("A GLib/GTK+ set of document-centric objects and charting library.")

source=("https://download.gnome.org/sources/goffice/${pkgver%.*}/goffice-${pkgver}.tar.xz")

tags=("libs x11-libs")

build_deps=("intltool gtk-doc gobject-introspection autoconf-archive librsvg gtk3 libgsf libspectre libxslt lasem")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --enable-introspection \
    --disable-maintainer-mode \
    --disable-gtk-doc \
    --with-gtk \
    --with-config-backend=gsettings
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
