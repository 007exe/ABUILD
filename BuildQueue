dev-libs/gobject-introspection
gnome-libs/gnome-games
app-arch/unace
app-cdr/cdemu-daemon
msgpack-c
app-editors/jedit
app-editors/neovim
app-forensics/foremost
app-i18n/poedit
app-office/abiword
app-office/gnucash
app-office/gnumeric
app-office/libreoffice
app-office/scribus
app-office/unoconv
strip-nondeterminism
media-sound/clementine
sys-power/apcupsd
xorg-apps/xorg-xdm
xorg-libs/mesa
net-voip/telepathy-salut
multilib-lib32/lib32-libx11
multilib-lib32/lib32-libxcb
app-emulation/libvirt
app-emulation/wine
dev-util/vulkan-tools
sci-libs/avogadrolibs
net-fs/cifs-utils
sys-libs/js78
games-misc/openttd
games-misc/openttd-bin
sys-fs/xfsprogs
mail-mta/postfix
dev-lang/php
media-libs/opencv
www-client/firefox
www-client/seamonkey
dev-qt/qt5-webengine
dev-qt/qt6-webengine
dev-qt/qt5-webkit"

STARTD=`pwd`
LOGFILE=~/build.log

echo "============================= Начало сборки `date` =============================" >> $LOGFILE

for i in $LIST ; do
    cd $STARTD/$i
    CATEGORY="$(echo $i | cut -d '/' -f 1)"
    if mkpkg -ba -wd ~/mkpkg/build -pod ~/mkpkg/repository/$CATEGORY -si ; then
           echo "$i ГОТОВ" >> $LOGFILE
           cd $STARTD
    else
           echo "$i НЕ СОБРАН!!!" >> $LOGFILE
           cd $STARTD
          # exit
    fi
done

echo "============================= Завершено `date` =============================" >> $LOGFILE

#sudo poweroff
