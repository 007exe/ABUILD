#!/bin/bash

# NOTE: Этот скрипт предназначен для организации очереди сборки пакетов
# WARNING: Скрипт не умеер разделять мультипакеты на категории

# Осторожнео с пакетом file
LIST="sys-kernel/kernel
sys-libs/glibc
sys-kernel/kernel-zen
dev-python/python-pip
media-video/obs-studio
dev-python/python-requests-toolbelt
kde-gear/cantor
kde-gear/kitinerary
kde-gear/kdepim-addons
sys-libs/ldb
sys-apps/file
media-libs/opencv
media-libs/projectm
media-libs/libjxl
media-libs/libquvi
media-gfx/graphicsmagick
media-gfx/zbar
app-shells/bash
app-text/psutils
app-text/a2ps
app-text/dblatex
app-text/fbreader
app-text/openjade
app-text/texlive-bin
app-text/linuxdoc-tools
app-text/mupdf
app-text/docbook2x
app-text/pdftk
app-text/podofo
app-text/qpdf
app-text/xmldiff
app-text/xpdf
app-text/zathura
dev-java/ant
dev-java/bcprov
dev-java/eclipse-ecj
dev-java/icedtea-web
dev-java/jre-openjdk
dev-java/junit
dev-java/lucene
dev-java/rhino
dev-java/xerces
dev-cpp/clucene
dev-cpp/gtest
dev-cpp/lucene++
dev-cpp/tl-expected
dev-db/freetds
dev-db/mariadb-clients
dev-db/mariadb-libs
dev-db/mongodb
dev-db/mysql
dev-db/mysql-workbench
dev-db/mytop
dev-db/postgis
dev-db/postgresql-docs
dev-db/postgresql-libs
dev-db/redis
dev-db/sqlitebrowser
dev-libs/wayland-protocols
net-libs/wpewebkit
net-libs/webkit2gtk
net-libs/webkit2gtk-4.1
net-fs/samba
dev-python/python-idna
dev-python/python-pyrsistent
dev-python/python-keyring
dev-python/python-black
dev-python/python-pylint
dev-python/python-solidpython
dev-python/python-importlib-metadata
dev-python/python-poetry-core
dev-python/python-poetry
dev-python/python-virtualenv
dev-python/python-rich
dev-python/python-mako
app-admin/conky
app-misc/wayland-utils
app-misc/beep
app-misc/far2l
gnome-libs/gcab
gnome-libs/retro-gtk
gnome-libs/gnome-games
gnome-libs/telepathy-folks
app-arch/unace
app-cdr/cdemu-daemon
msgpack-c
app-editors/jedit
app-editors/neovim
app-forensics/foremost
app-i18n/poedit
app-office/abiword
app-office/gnucash
app-office/gnumeric
app-office/libreoffice
app-office/scribus
app-office/unoconv
strip-nondeterminism
media-sound/clementine
sys-power/apcupsd
xorg-apps/xorg-xdm
xorg-libs/mesa
net-voip/telepathy-salut
multilib-lib32/lib32-freetype
multilib-lib32/lib32-harfbuzz
multilib-lib32/lib32-libx11
multilib-lib32/lib32-libxcb
app-emulation/libvirt
app-emulation/wine
dev-util/vulkan-tools
sci-libs/avogadrolibs
net-fs/cifs-utils
www-client/firefox
www-client/seamonkey"

STARTD=`pwd`
LOGFILE=~/build.log

echo "============================= Начало сборки `date` =============================" >> $LOGFILE

for i in $LIST ; do
    cd $STARTD/$i
    CATEGORY="$(echo $i | cut -d '/' -f 1)"
    if mkpkg -ba -wd ~/mkpkg/build -pod ~/mkpkg/repository/$CATEGORY -si ; then
           echo "`date` || Пакет: $i ГОТОВ" >> $LOGFILE
           cd $STARTD
    else
           echo "`date` || ОШИБКА пакет: $i НЕ СОБРАН!!!" >> $LOGFILE
           cd $STARTD
          # exit
    fi
done

echo "============================= Завершено `date` =============================" >> $LOGFILE

#sudo poweroff
