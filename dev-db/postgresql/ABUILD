pkgname=postgresql
pkgver=13.4
pkgbuild=1
arch=("auto")

shortdesc=("Sophisticated object-relational DBMS")
longdesc=("PostgreSQL is an advanced object-relational database management system (ORDBMS), derived from the Berkeley Postgres database management system.")

tags=("server dev-db")

source=("https://ftp.postgresql.org/pub/source/v${pkgver}/postgresql-${pkgver}.tar.bz2")

build_deps=("krb5 libxml2 python perl tcl>=8.6.0 openssl>=1.0.0 linux-pam zlib icu llvm clang libxslt")

pkglist="postgresql-libs postgresql-docs"

config_files="etc/logrotate.d/postgresql
etc/conf.d/postgresql"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --with-tcl \
    --with-perl \
    --with-python \
    --with-ldap \
    --with-openssl \
    --with-krb5 \
    --with-pam \
    --with-libxml \
    --with-libxslt \
    --with-system-tzdata=/usr/share/zoneinfo \
    --enable-thread-safety \
    --enable-nls
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}

postgresql-libs() {
  pkgname=postgresql-libs
  shortdesc=("Libraries for use with PostgreSQL")
  longdesc=("PostgreSQL is an advanced object-relational database management system (ORDBMS), derived from the Berkeley Postgres database management system.")
  arch=('auto')
}

postgresql-libs_prep() {

  cd "${srcdir}/postgresql-${pkgver}"

# install license
  install -D -m644 COPYRIGHT "${pkgdir}/usr/share/licenses/postgresql-libs/LICENSE"

# install libs
  for dir in src/interfaces src/bin/pg_config src/bin/psql src/bin/pg_dump; do
    make -C ${dir} DESTDIR="${pkgdir}" install
  done

  install -D -m644 doc/src/sgml/man1/pg_config.1 "${pkgdir}/usr/share/man/man1/pg_config.1"
  install -D -m644 doc/src/sgml/man1/pg_dump.1 "${pkgdir}/usr/share/man/man1/pg_dump.1"
  install -D -m644 doc/src/sgml/man1/pg_dumpall.1 "${pkgdir}/usr/share/man/man1/pg_dumpall.1"
  install -D -m644 doc/src/sgml/man1/pg_restore.1 "${pkgdir}/usr/share/man/man1/pg_restore.1"
  install -D -m644 doc/src/sgml/man1/psql.1 "${pkgdir}/usr/share/man/man1/psql.1"
  cd src/include
  mkdir -p "${pkgdir}"/usr/include/{libpq,postgresql/internal/libpq}

# these headers are needed by the public headers of the interfaces
  install -m644 pg_config.h "${pkgdir}/usr/include/"
  install -m644 pg_config_os.h "${pkgdir}/usr/include/"
  install -m644 postgres_ext.h "${pkgdir}/usr/include/"
  install -m644 libpq/libpq-fs.h "${pkgdir}/usr/include/libpq/"
  install -m644 pg_config_manual.h "${pkgdir}/usr/include/"

# these headers are needed by the not-so-public headers of the interfaces
  install -m644 c.h "${pkgdir}/usr/include/postgresql/internal/"
  install -m644 port.h "${pkgdir}/usr/include/postgresql/internal/"
  install -m644 postgres_fe.h "${pkgdir}/usr/include/postgresql/internal/"
  install -m644 libpq/pqcomm.h "${pkgdir}/usr/include/postgresql/internal/libpq/"
}


postgresql-docs() {
  pkgname=postgresql-docs
  shortdesc=("HTML documentation for PostgreSQL")
  longdesc=("PostgreSQL is an advanced object-relational database management system (ORDBMS), derived from the Berkeley Postgres database management system.")
  arch=('noarch')
}

postgresql-docs_prep() {

  cd "${srcdir}/postgresql-${pkgver}"

# install license
  install -D -m644 COPYRIGHT "${pkgdir}/usr/share/licenses/postgresql-docs/LICENSE"
  make -C doc/src/sgml DESTDIR="${pkgdir}" install-html
# chown -R root:root "${pkgdir}/usr/share/doc/postgresql/html/"

# clean up
  rmdir "${pkgdir}"/usr/share/man/man{1,3,7}
  rmdir "${pkgdir}"/usr/share/man
}


after_build() {
  go_src_dir
  cd contrib
  make -j${numjobs}
  make install DESTDIR=${pkgdir}
  cd ..

  mkdir -p ${pkgdir}/var/log/pgsql
  touch ${pkgdir}/var/log/pgsql/serverlog.new
  install -D -m0644 $filedir/postgresql.logrotate ${pkgdir}/etc/logrotate.d/postgresql
  install -Dm0755 ${filedir}/postgresql.init ${pkgdir}/etc/init.d/postgresql
  install -Dm0755 ${filedir}/postgresql.conf.d ${pkgdir}/etc/conf.d/postgresql
  install -Dm 644 COPYRIGHT -t "${pkgdir}/usr/share/licenses/${pkgname}"
  install -D -m0644 $filedir/postgresql.logrotate ${pkgdir}/etc/logrotate.d/postgresql
  install -Dm 755 ${filedir}/postgresql-check-db-dir -t "${pkgdir}/usr/bin"
  install -Dm 644 ${filedir}/${pkgname}.pam "${pkgdir}/etc/pam.d/${pkgname}"


  mkdir -p ${pkgdir}/var/lib/pgsql
#  chown -R pgsql:pgsql ${pkgdir}/var/log/pgsql
#  chown pgsql:pgsql ${pkgdir}/var/lib/pgsql

  for dir in src/interfaces src/bin/pg_config src/bin/psql src/bin/pg_dump; do
    make -C ${dir} DESTDIR="${pkgdir}" uninstall
  done

  rm -rf "${pkgdir}/usr/include/postgresql/internal"
  rm -rf "${pkgdir}/usr/include/libpq"
  find "${pkgdir}/usr/include" -maxdepth 1 -type f -execdir rm {} +
}
