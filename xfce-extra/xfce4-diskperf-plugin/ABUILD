pkgname=xfce4-diskperf-plugin
pkgver=2.7.0
pkgbuild=1
arch=('auto')

shortdesc=("Plugin for the Xfce4 panel displaying instant disk/partition performance.")
longdesc=("Disk performance panel plugin for the Xfce Desktop Environment.")

source=("https://archive.xfce.org/src/panel-plugins/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2")

tags=("xfce xfce-extra")

build_deps=("xfce4-panel intltool")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --disable-static \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
