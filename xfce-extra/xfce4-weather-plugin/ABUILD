pkgname=xfce4-weather-plugin
pkgver=0.11.0
pkgbuild=1
arch=("auto")

shortdesc=("A weather plug-in for the Xfce desktop environment")

source=("https://archive.xfce.org/src/panel-plugins/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2")

tags=("xfce xfce-extra")

build_deps=("xfce4-panel libxml2 libsoup intltool")

adddep=("hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --disable-static \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
