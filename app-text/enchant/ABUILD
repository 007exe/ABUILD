pkgname=enchant
pkgver=2.3.1
pkgbuild=1
arch=('auto')

shortdesc=("An Enchanting Spell Checking Library")
longdesc=("A library that wraps other spell checking backends.")

source=("https://github.com/AbiWord/enchant/releases/download/v$pkgver/enchant-$pkgver.tar.gz")

tags="libs dev-libs"

build_deps="glib2"

before_build() {
  go_src_dir
  autoreconf -vfi
}

build(){
  go_src_dir
  ./configure \
    --prefix=/usr \
    --disable-static \
    --disable-ispell \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --enable-relocatable \
    --with-myspell-dir=/usr/share/myspell
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}

