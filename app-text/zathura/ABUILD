pkgname=zathura
pkgver=0.4.9
pkgbuild=1
arch=("auto")

shortdesc=("Minimalistic document viewer.")

source=("https://github.com/pwmt/zathura/archive/${pkgver}.tar.gz")

tags=("apps app-office")

build_deps=("python-sphinx texlive-bin meson ninja appstream-glib check
girara sqlite desktop-file-utils file libsynctex")

adddep=("girara sqlite desktop-file-utils file libsynctex")

# NOTE: Это опциональные зависимости
removedep=("zathura-djvu zathura-pdf-poppler zathura-pdf-mupdf zathura-ps zathura-cb")

build(){
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  cd build
  ninja
  DESTDIR=${pkgdir} ninja install
  install -D -m664 ../LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
