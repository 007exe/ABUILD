pkgname=tree
pkgver=2.0.4
pkgbuild=1
arch=("auto")

shortdesc=("Utility which displays a tree view of directory contents.")
longdesc=("The tree utility recursively displays the contents of directories in a tree-like format.")

source=("http://deb.debian.org/debian/pool/main/t/tree/${pkgname}_${pkgver}.orig.tar.gz")

tags=("utils app-text")

build_deps=("glibc")

build() {
  go_src_dir
  make -j${numjobs}
  make prefix=${pkgdir}/usr MANDIR=${pkgdir}/usr/share/man/man1 LIBDIR=/usr/lib install
}
