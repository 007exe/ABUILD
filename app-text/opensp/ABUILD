pkgname=opensp
pkgver=1.5.2
pkgbuild=1
arch=("auto")

shortdesc=("A library and a set of tools for validating, parsing and manipulating SGML and XML documents")

tags=("app-text develop")

source=("http://download.sourceforge.net/openjade/OpenSP-$pkgver.tar.gz")

build_deps="docbook-xsl xmlto docbook-xml"
adddep="perl-xml-sax"

BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr \
	--libdir=/usr/lib$LIBDIRSUFFIX \
	--mandir=/usr/man \
	--sysconfdir=/etc \
	--enable-http \
	--enable-default-catalog=/etc/sgml/catalog:/etc/xml/catalog \
	--enable-default-search-path=/usr/share/sgml:/usr/share/xml \
	--disable-doc-build \
	--enable-xml-messages"
INSTALL_KEYS="DESTDIR=$pkgdir"

after_build() {
	( cd ${pkgdir}/usr/bin ; ln -s onsgmls nsgmls )
}
