pkgname=a2ps
pkgver=4.14
pkgbuild=1
arch=("auto")

shortdesc=("An Any to PostScript filter.")

source=("https://ftp.gnu.org/gnu/a2ps/${pkgname}-${pkgver}.tar.gz")

tags=("console app-text")

build_deps=("gperf psutils imagemagick perl")

adddep=("psutils")

before_build() {
  go_src_dir
  sed -i -e '/^AM_C_PROTOTYPES/d' -e '/^AUTOMAKE_OPTIONS.*ansi2knr/d' -e 's:AM_CONFIG_HEADER:AC_CONFIG_HEADERS:' \
      -e 's:AM_PROG_CC_STDC:AC_PROG_CC:' configure.in {contrib/sample,lib,src}/Makefile.am m4/protos.m4
  sed -i "s:^countdictstack: \0:" contrib/psset.in
  burn_patches
}

before_build(){
  go_src_dir
  libtoolize --force --copy
  autoreconf --force --install -I m4
  LIBS+="-lm" ./configure --prefix=/usr --sysconfdir=/etc/a2ps \
    --includedir=/usr/include --enable-shared --enable-nls
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
