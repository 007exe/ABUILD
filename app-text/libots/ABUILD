pkgname=libots
pkgver=0.5.0
pkgbuild=1
arch=("auto")

shortdesc=("Open Text Summarizer.")

source=("https://sources.archlinux.org/other/packages/libots/ots-${pkgver}.tar.gz")

tags=("utils app-text")

build_deps=("libxml2 glib2 popt")

build() {
  go_src_dir
  touch gtk-doc.make
  sed 's/en.xml$//' -i dic/Makefile.am
  burn_patches
  libtoolize --force
  aclocal
  automake --add-missing --force
  autoconf
  ./configure \
    --prefix=/usr
  make -j1
  make DESTDIR=${pkgdir} install
}
