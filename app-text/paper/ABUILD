pkgname=paper
pkgver=2.0.4
pkgbuild=1
arch=("auto")

shortdesc=("Replacement for Debian's libpaper.")

source=("https://github.com/rrthomas/libpaper/archive/refs/tags/v${pkgver}.tar.gz")

tags=("app-text libs")

build_deps=("help2man perl")

build() {
  go_src_dir
  burn_patches
  ./bootstrap
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
