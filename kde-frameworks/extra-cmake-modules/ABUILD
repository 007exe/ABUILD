pkgname=extra-cmake-modules
pkgver=5.95.0
pkgbuild=1
arch=("noarch")

shortdesc=("Extra modules and scripts for CMake.")
longdesc=("Extra modules and scripts for CMake.")

tags=("kde-frameworks kf5")

strict_version=1
source=("git:https://github.com/KDE/${pkgname}.git")
#source=("https://github.com/KDE/${pkgname}/archive/refs/tags/v${pkgver}.tar.gz")
#source=("https://download.kde.org/stable/frameworks/${pkgver}/${pkgname}-${pkgver}.tar.xz")

build_deps=("python-sphinx python-requests qt5-tools cmake")

adddep=("cmake")

before_build() {
  go_src_dir
  git checkout v${pkgver}
}

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_HTML_DOCS=ON \
    -DBUILD_QTHELP_DOCS=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
