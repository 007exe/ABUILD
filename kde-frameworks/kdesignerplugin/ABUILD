pkgname=kdesignerplugin
pkgver=5.94.0
pkgbuild=1
arch=("auto")

shortdesc=("Integration of Frameworks widgets in Qt Designer/Creator.")
longdesc=("Integration of Frameworks widgets in Qt Designer/Creator.")

source=("https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

build_deps=("extra-cmake-modules qt5-tools kdoctools kconfig kcoreaddons")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
