pkgname=kactivities
pkgver=5.95.0
pkgbuild=1
arch=("auto")

shortdesc=("Core components for KDE Activities.")
longdesc=("Framework for working with KDE activities.")

strict_version=1
source=("git:https://github.com/KDE/${pkgname}.git")
#source=("https://github.com/KDE/${pkgname}/archive/refs/tags/v${pkgver}.tar.gz")
#source=("https://download.kde.org/stable/frameworks/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

build_deps=("extra-cmake-modules boost doxygen qt5-tools qt5-declarative ")

# NOTE: Это опциональная зависимость
removedep=("qt5-declarative")

before_build() {
  go_src_dir
  git checkout v${pkgver}
}

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build
  DESTDIR=${pkgdir} cmake --install build
}
