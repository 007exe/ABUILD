pkgname=kpackage
pkgver=5.94.0
pkgbuild=1
arch=("auto")

shortdesc=("Framework that lets applications manage user installable packages of non-binary assets.")
longdesc=("Framework to install and load packages of non binary content.")

source=("https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

# qt5-doc
build_deps=("extra-cmake-modules qt5-tools kdoctools doxygen karchive ki18n kcoreaddons")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
