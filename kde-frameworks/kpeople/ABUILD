pkgname=kpeople
pkgver=5.107.0
pkgbuild=1
arch=("auto")

shortdesc=("KDE contact person abstraction library.")
longdesc=("A library that provides access to all contacts and the people who hold them.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

build_deps=("extra-cmake-modules doxygen qt5-tools qt5-declarative kcoreaddons ki18n kwidgetsaddons kitemviews")

# NOTE: Это опциональная зависимость
removedep=("qt5-declarative")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
