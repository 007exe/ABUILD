pkgname=kpty
pkgver=5.94.0
pkgbuild=1
arch=("auto")

shortdesc=("Pty abstraction.")
longdesc=("Framework for pseudo terminal devices and running child processes.")

source=("https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

# qt5-doc
build_deps=("extra-cmake-modules doxygen qt5-tools kcoreaddons ki18n libutempter")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
