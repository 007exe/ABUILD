pkgname=kitemmodels
pkgver=5.106.0
pkgbuild=1
arch=("auto")

shortdesc=("Models for Qt Model/View system.")
longdesc=("Framework providing data models to help with tasks such as sorting and filtering.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

build_deps=("extra-cmake-modules clang doxygen qt5-tools qt5-declarative qt5-base")

# NOTE: Это опциональная зависимость
removedep=("qt5-declarative")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
