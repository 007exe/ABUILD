pkgname=kemoticons
pkgver=5.94.0
pkgbuild=1
arch=("auto")

shortdesc=("Support for emoticons and emoticons themes.")
longdesc=("Framework for converting text emoticons to graphical representations.")

source=("https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

# qt5-doc
build_deps=("extra-cmake-modules doxygen qt5-tools karchive kservice")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
