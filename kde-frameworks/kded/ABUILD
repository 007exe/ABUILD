pkgname=kded
pkgver=5.109.0
pkgbuild=1
arch=("auto")

shortdesc=("Extensible deamon for providing system level services.")
longdesc=("Central daemon of KDE workspaces.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

build_deps=("extra-cmake-modules kdoctools kservice kcrash")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
# Удаляем бесполезный модуль systemd
  rm -r ${pkgdir}/usr/lib/systemd
}
