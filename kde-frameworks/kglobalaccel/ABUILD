pkgname=kglobalaccel
pkgver=5.94.0
pkgbuild=1
arch=("auto")

shortdesc=("Add support for global workspace shortcuts.")
longdesc=("Framework to handle global shortcuts.")

source=("https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

# qt5-doc
build_deps=("extra-cmake-modules doxygen qt5-tools kdbusaddons kconfig kcrash")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
# Удаляем бесполезный модуль systemd
  rm -r ${pkgdir}/usr/lib/systemd
}
