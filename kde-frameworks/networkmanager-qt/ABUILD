pkgname=networkmanager-qt
pkgver=5.105.0
pkgbuild=1
arch=("auto")

shortdesc=("Qt wrapper for NetworkManager API.")
longdesc=("NetworkManager bindings for Qt.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-frameworks kf5")

build_deps=("extra-cmake-modules doxygen qt5-tools networkmanager qt5-base")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
