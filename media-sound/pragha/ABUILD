pkgname=pragha
pkgver=1.3.4
pkgbuild=1
arch=("auto")

shortdesc=("Lightweight GTK music player and manager")

source=("https://github.com/pragha-music-player/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.bz2")

tags=("media-sound apps")

adddep=("cairo gdk-pixbuf glib2 gstreamer gst-plugins-base gst-plugins-base-libs gst-plugins-good
gtk3 hicolor-icon-theme libgudev libpeas pango sqlite taglib totem-pl-parser")

build_deps=("${adddep} intltool glyr gobject-introspection grilo libcddb libcdio-paranoia libclastfm libkeybinder3 libmtp libnotify libsoup")

# NOTE: Это опциональные зависимости
removedep=("glyr grilo gst-libav gst-plugins-bad gst-plugins-ugly libcddb libcdio-paranoia libclastfm libkeybinder3 libmtp libnotify libsoup")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
