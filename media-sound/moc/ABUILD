pkgname=moc
pkgver=2.6-alpha3
pkgbuild=1
arch=("auto")

shortdesc=("An ncurses console audio player designed to be powerful and easy to use")

#source=("http://ftp.daper.net/pub/soft/moc/stable/${pkgname}-${pkgver}.tar.xz")
source=("http://ftp.daper.net/pub/soft/moc/unstable/${pkgname}-${pkgver}.tar.xz")

tags=("console media-sound")

adddep=("libmad libid3tag jack curl libtool file")

build_deps=("${adddep} speex ffmpeg taglib libmpcdec wavpack libmodplug faad2")

# NOTE: Это опциональные зависимости
removedep=("speex ffmpeg taglib libmpcdec wavpack faad2 libmodplug")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --with-samplerate \
    --with-musepack \
    --with-wavpack \
    --with-sndfile \
    --with-modplug \
    --with-vorbis \
    --without-ffmpeg \
    --without-rcc \
    --with-speex \
    --with-alsa \
    --with-jack \
    --with-flac \
    --with-curl \
    --with-aac \
    --with-mp3 \
    --with-oss \
    --disable-cache \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
# FIXME: --with-ffmpeg На данный момент сборка с пятой версией ffmpeg не возможна
