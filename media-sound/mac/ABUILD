pkgname=mac
pkgver=9.04
pkgbuild=1
arch=("auto")

shortdesc=("APE codec and decompressor.")

source=("https://monkeysaudio.com/files/MAC_${pkgver//./}_SDK.zip")

tags=("libs media-sound")

build_deps=("python-html2text gcc-libs")

build(){
  cd ${srcdir}
  burn_patches
  make -C Source/Projects/NonWindows
  make DESTDIR=${pkgdir} prefix=/usr install -C Source/Projects/NonWindows
}
