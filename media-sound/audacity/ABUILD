BUILD_SYSTEM="autotools"

BUILD_WORD="LDFLAGS=\"$SLKLDFLAGS\" CFLAGS=\"$SLKCFLAGS\" CXXFLAGS=\"$SLKCFLAGS\" \
	./configure" #--help"

BUILD_KEYS="--prefix=/usr \
--sysconfdir=/etc \
--localstatedir=/var \
--libdir=/usr/lib${LIBDIRSUFFIX} \
--disable-static \
--mandir=/usr/man \
--program-prefix= \
--program-suffix= \
--docdir=/usr/doc/${pkgname}-${pkgver} \
--enable-unicode \
--with-portaudio \
--with-libsamplerate \
--without-libresample \
--with-libmad \
--with-id3tag \
--with-libflac \
--with-libvorbis \
--with-libexpat \
--with-libsndfile \
--with-soundtouch \
--without-taglib \
--without-ffmpeg \
--disable-debug \
--disable-quicktime"

INSTALL_KEYS="DESTDIR=$pkgdir"

