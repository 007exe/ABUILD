pkgname=audacious
pkgver=4.3.1
pkgbuild=1
arch=("auto")

shortdesc=("Lightweight and versatile audio player.")

source=("https://distfiles.audacious-media-player.org/${pkgname}-${pkgver}.tar.bz2")

tags=("apps media-sound")

adddep=("qt5-base qt5-svg qt5-imageformats glib2 audacious-plugins hicolor-icon-theme
desktop-file-utils")

build_deps=("${adddep}")

# NOTE: Это опциональные зависимости
removedep=("unzip")

build(){
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-gtk \
    --with-buildstamp='AgiliaLinux'
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 contrib/audacious.appdata.xml -t ${pkgdir}/usr/share/metainfo
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
