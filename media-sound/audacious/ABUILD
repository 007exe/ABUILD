pkgname=audacious
pkgver=4.2
pkgbuild=1
arch=("auto")

shortdesc=("Lightweight and versatile audio player.")
longdesc=("Lightweight, advanced audio player focused on audio quality.")

source=("https://distfiles.audacious-media-player.org/${pkgname}-${pkgver}.tar.bz2")

tags=("apps media-sound")

build_deps=("qt5-base qt5-svg glib2 libguess libsm desktop-file-utils python")

adddep=("libguess libsm audacious-plugins hicolor-icon-theme desktop-file-utils")

build(){
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-gtk \
    --with-buildstamp='AgiliaLinux'
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 contrib/audacious.appdata.xml -t ${pkgdir}/usr/share/metainfo
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
