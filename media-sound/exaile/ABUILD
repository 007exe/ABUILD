pkgname=exaile
pkgver=4.1.2
pkgbuild=1
arch=("auto")

shortdesc=("A full-featured Amarok-style media player for GTK+")

source=("https://github.com/exaile/exaile/archive/${pkgver}.tar.gz")

tags=("media-sound apps")

build_deps=("pygobject-devel help2man
gtk3 python gst-plugins-base gst-plugins-good dbus-python python-cairo python-gobject python-bsddb gst-python python-mutagen")

adddep=("gtk3 python gst-plugins-base gst-plugins-good dbus-python python-cairo python-gobject python-bsddb gst-python python-mutagen")

build() {
  go_src_dir
  burn_patches
  make PREFIX="/usr"
  make PREFIX="/usr" DESTDIR=${pkgdir} install
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
