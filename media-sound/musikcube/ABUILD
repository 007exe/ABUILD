pkgname=musikcube
pkgver=3.0.1
pkgbuild=1
arch=("auto")

shortdesc=("A terminal-based cross-platform music player, audio engine, metadata indexer, and server.")

source=("https://github.com/clangen/musikcube/archive/refs/tags/${pkgver}.tar.gz")

tags=("console media-sound")

adddep=("faad2 libogg libvorbis flac libmicrohttpd lame ncurses pipewire pulseaudio libpulse libev alsa-lib curl ffmpeg taglib libgme")

# patchelf
build_deps=("${adddep} asio cmake")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/${pkgver}.tar.gz
}

build() {
  go_src_dir
  burn_patches
  mkdir build
  cd build
  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DNO_NCURSESW=ON
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 ../LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
