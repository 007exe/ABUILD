pkgname=sleuthkit
pkgver=4.11.1
pkgbuild=1
arch=("auto")

shortdesc=("File system and media management forensic analysis tools.")

source=("https://github.com/$pkgname/$pkgname/releases/download/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("app-admin utils")

# libewf
build_deps=("perl sqlite")

build() {
  go_src_dir
  burn_patches
  aclocal
  automake
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -Dm0644 licenses/* ${pkgdir}/usr/share/licenses/${pkgname}
}
