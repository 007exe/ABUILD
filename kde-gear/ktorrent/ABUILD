pkgname=ktorrent
pkgver=23.08.3
pkgbuild=1
arch=("auto")

shortdesc=("A powerful BitTorrent client for KDE.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-network")

adddep=("libktorrent kcmutils knotifyconfig kparts phonon-qt5 qt5-webengine")

build_deps=("${adddep} extra-cmake-modules kdoctools boost plasma-workspace kdnssd taglib syndication kplotting geoip")

# NOTE: Это опциональные зависимости
removedep=("plasma-workspace kdnssd taglib geoip syndication kplotting")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
