pkgname=ktorrent
pkgver=22.12.1
pkgbuild=1
arch=("auto")

shortdesc=("A powerful BitTorrent client for KDE.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-network")

build_deps=("libktorrent kcmutils knotifyconfig kparts phonon extra-cmake-modules
kdoctools boost kdnssd taglib syndication kplotting geoip qt5-webengine plasma-workspace")

# NOTE: Это опциональные зависимости
removedep=("plasma-workspace kdnssd taglib geoip syndication kplotting")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
