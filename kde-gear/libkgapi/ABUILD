pkgname=libkgapi
pkgver=22.08.3
pkgbuild=1
arch=("auto")

shortdesc=("Library for accessing Google calendar and contact resources.")
longdesc=("A KDE-based library for accessing various Google services via their public API.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("libs kde-gear")

build_deps=("kcalendarcore kcontacts kwallet extra-cmake-modules qt5-tools")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
