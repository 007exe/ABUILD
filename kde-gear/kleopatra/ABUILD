pkgname=kleopatra
pkgver=22.08.0
pkgbuild=1
arch=("auto")

shortdesc=("Certificate Manager and Unified Crypto GUI.")
longdesc=("Certificate manager and GUI for OpenPGP and CMS cryptography.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("apps kde-apps")

build_deps=("libkleo kidentitymanagement kmailtransport extra-cmake-modules kdoctools")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
