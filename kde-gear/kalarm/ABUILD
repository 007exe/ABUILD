pkgname=kalarm
pkgver=22.08.2
pkgbuild=1
arch=("auto")

shortdesc=("Personal alarm scheduler.")
longdesc=("Application to manage alarms and other timer based alerts for the desktop.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-pim")

build_deps=("extra-cmake-modules kdoctools phonon kidletime knotifyconfig pimcommon kmailtransport kholidays kcalutils")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
