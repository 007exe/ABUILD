pkgname=kio-extras
pkgver=22.12.0
pkgbuild=1
arch=("auto")

shortdesc=("Additional components to increase the functionality of KIO.")
longdesc=("KIO plugins present a filesystem-like view of arbitrary data.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-network")

build_deps=("kio kdnssd libssh smbclient libmtp phonon syntax-highlighting kdsoap-ws-discovery-client
libxcursor extra-cmake-modules kdoctools gperf taglib libappimage openexr kactivities-stats")

# NOTE: Это опциональные зависимости
removedep=("qt5-imageformats perl kimageformats taglib libappimage icoutils openexr kactivities-stats")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
