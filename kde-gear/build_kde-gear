STARTD=`pwd`

LOGFILE=~/build.log

echo "============================= Начало сборки `date` =============================" >> $LOGFILE
for i in $LIST ; do
    cd $STARTD/$i
    if mkpkg -ba -wd ~/mkpkg/build -si -bv $KDE_GEAR_VERSION -bb 1; then
           echo "$i ГОТОВ" >> $LOGFILE
           cd $STARTD
    else
           echo "$i НЕ СОБРАН!!!" >> $LOGFILE
           cd $STARTD
    fi
done

echo "============================= Завершено `date` =============================" >> $LOGFILE
