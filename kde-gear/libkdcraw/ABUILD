pkgname=libkdcraw
pkgver=22.12.0
pkgbuild=1
arch=("auto")

shortdesc=("A C++ interface used to decode RAW picture.")
longdesc=("Digital camera raw image library wrapper.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("libs kde-gear")

build_deps=("qt5-base libraw extra-cmake-modules")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
