pkgname=ksirk
pkgver=23.04.0
pkgbuild=1
arch=("auto")

shortdesc=("A computerized version of a well known strategy game.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-games")

build_deps=("extra-cmake-modules kdoctools libkdegames qca-qt5 phonon hicolor-icon-theme")

adddep=("libkdegames qca-qt5 phonon hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
