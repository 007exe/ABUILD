pkgname=lokalize
pkgver=22.08.0
pkgbuild=1
arch=("auto")

shortdesc=("Computer-Aided Translation System.")
longdesc=("Localization tool for KDE software and other free and open source software.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("apps kde-apps")

build_deps=("kio hunspell extra-cmake-modules kdoctools")

adddep=("hicolor-icon-theme")

# NOTE: Это опциональные зависимости
removedep=("languagetool")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
