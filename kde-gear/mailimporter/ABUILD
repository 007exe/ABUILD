pkgname=mailimporter
pkgver=22.08.0
pkgbuild=1
arch=("auto")

shortdesc=("Mail importer library.")
longdesc=("Library to import mail from various sources.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("libs kde-gear")

build_deps=("pimcommon extra-cmake-modules qt5-tools doxygen")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
