pkgname=kturtle
pkgver=22.08.3
pkgbuild=1
arch=("auto")

shortdesc=("Educational Programming Environment.")
longdesc=("Educational programming environment using the Logo programming language.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-education")

build_deps=("knewstuff extra-cmake-modules kdoctools")

adddep=("hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
