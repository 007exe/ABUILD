pkgname=libkdepim
pkgver=22.12.1
pkgbuild=1
arch=("auto")

shortdesc=("Common PIM libraries.")
longdesc=("Libraries for KDE PIM applications.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("libs kde-gear")

build_deps=("kcompletion kconfigwidgets kitemviews kjobwidgets extra-cmake-modules qt5-tools doxygen")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
