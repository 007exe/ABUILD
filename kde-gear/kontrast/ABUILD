pkgname=kontrast
pkgver=22.12.1
pkgbuild=1
arch=("auto")

shortdesc=("Tool to check contrast for colors to verify they are correctly accessible.")
longdesc=("Tool to check contrast for colors that allows verifying that your colors are correctly accessible.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-accessibility")

build_deps=("kirigami2 kdeclarative qt5-svg extra-cmake-modules")

adddep=("hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
