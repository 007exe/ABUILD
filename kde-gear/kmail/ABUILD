pkgname=kmail
pkgver=22.12.1
pkgbuild=1
arch=("auto")

shortdesc=("KDE mail client.")
longdesc=("Email client, supporting POP3 and IMAP mailboxes.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-pim")

build_deps=("kdepim-runtime kmail-account-wizard akonadi-import-wizard mbox-importer
pim-data-exporter pim-sieve-editor kontactinterface ktnef extra-cmake-modules kdoctools")

# NOTE: Это опциональные зависимости
removedep=("kleopatra kdepim-addons")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
