pkgname=kwordquiz
pkgver=22.12.0
pkgbuild=1
arch=("auto")

shortdesc=("Flash Card Trainer.")
longdesc=("Powerful flashcard and vocabulary learning program.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-education")

build_deps=("knotifyconfig libkeduvocdocument knewstuff phonon extra-cmake-modules kdoctools")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
