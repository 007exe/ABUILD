pkgname=k3b
pkgver=22.08.3
pkgbuild=1
arch=("auto")

shortdesc=("Feature-rich and easy to handle CD burning application.")
longdesc=("Full-featured burning and ripping application based on KDE Frameworks.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-multimedia")

build_deps=("libkcddb kcmutils knotifyconfig libmad kfilemetadata knewstuff libmpcdec
libdvdread libburn libsamplerate qt5-webkit extra-cmake-modules kdoctools")

# NOTE: Это опциональные зависимости
removedep=("cdrtools dvd+rw-tools vcdimager emovix cdrdao cdparanoia transcode")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
