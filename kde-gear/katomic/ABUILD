pkgname=katomic
pkgver=23.08.1
pkgbuild=1
arch=("auto")

shortdesc=("A fun and educational game built around molecular geometry.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-games")

build_deps=("extra-cmake-modules kdoctools libkdegames hicolor-icon-theme perl")

adddep=("libkdegames hicolor-icon-theme perl")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
