pkgname=gwenview
pkgver=22.12.3
pkgbuild=1
arch=("auto")

shortdesc=("Image viewer by KDE.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-graphics")

build_deps=("kactivities baloo libkdcraw kparts kitemmodels cfitsio phonon purpose perl kimageannotator extra-cmake-modules kdoctools")

# NOTE: Это опциональные зависимости
removedep=("qt5-imageformats kimageformats kamera")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
