pkgname=kmix
pkgver=22.08.0
pkgbuild=1
arch=("auto")

shortdesc=("KDE volume control program.")
longdesc=("Volume control gui based on KDE Frameworks.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/release-service/${pkgver}/src/${pkgname}-${pkgver}.tar.xz")

tags=("kde kde-multimedia")

build_deps=("extra-cmake-modules kdoctools knotifications kxmlgui solid kcompletion")

adddep=("hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
