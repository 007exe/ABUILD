pkgname=python-rapidfuzz-capi
pkgver=1.0.5
pkgbuild=2
arch=("auto")

shortdesc=("C-API of RapidFuzz, which can be used to extend RapidFuzz from separate packages.")

_name=rapidfuzz_capi
source=("https://files.pythonhosted.org/packages/source/${_name::1}/rapidfuzz_capi/rapidfuzz_capi-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-setuptools python-wheel")

build() {
  go_src_dir
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm644 -t ${pkgdir}/usr/share/licenses/${pkgname} LICENSE
}
