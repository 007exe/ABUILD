pkgname=qt6-quick3d
pkgver=6.3.0
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("Qt module and API for defining 3D content in Qt Quick.")
longdesc=("Qt Quick 3D enables anyone to introduce 3D content into their Qt Quick applications.")

tags=("qt6 dev-qt")

source=("git:https://invent.kde.org/qt/qt/qtquick3d.git")

build_deps=("qt6-declarative assimp git qt6-base")

# NOTE: это опциональная зависимость
removedep=("qt6-shadertools assimp")

before_build() {
  go_src_dir
  git checkout v${pkgver}
}

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
