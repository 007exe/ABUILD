pkgname=qt5-imageformats
pkgver=5.15.5
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("Plugins for additional image formats: TIFF, MNG, TGA, WBMP.")
longdesc=("Additional format plugins for the Qt image I/O system.")

tags=("qt5 dev-qt")

source=("git:https://invent.kde.org/qt/qt/qtimageformats.git")

build_deps=("qt5-base jasper libmng libwebp git")

before_build() {
  go_src_dir
  git checkout v${pkgver}-lts-lgpl
}

build() {
  go_src_dir
  burn_patches

  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
