pkgname=qt6-serialport
pkgver=6.5.3
pkgbuild=1
arch=("auto")

shortdesc=("Provides access to hardware and virtual serial ports.")

source=("https://www.nic.funet.fi/pub/mirrors/download.qt-project.org/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtserialport-everywhere-src-${pkgver}.tar.xz")

tags=("qt6 dev-qt")

build_deps=("cmake ninja qt6-base")

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
