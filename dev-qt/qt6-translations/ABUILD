pkgname=qt6-translations
pkgver=6.3.0
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("A cross-platform application and UI framework (Translations).")
longdesc=("Translation files for the Qt6 framework.")

tags=("qt6 dev-qt")

source=("git:https://invent.kde.org/qt/qt/qttranslations.git")

build_deps=("cmake ninja qt6-tools git qt6-base")

before_build() {
  go_src_dir
  git checkout v${pkgver}
}

build() {
  go_src_dir
  burn_patches
  export PATH="/usr/lib/qt6/bin:$PATH"
  cmake -B build -G Ninja
  cmake --build build -j1
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
