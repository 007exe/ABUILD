pkgname=qt5-3d
pkgver=5.15.4
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("C++ and QML APIs for easy inclusion of 3D graphics.")
longdesc=("3D rendering module for the Qt5 framework.")

tags=("qt5 dev-qt")

source=("git:https://invent.kde.org/qt/qt/qt3d.git")

build_deps=("qt5-declarative assimp git vulkan-headers")

before_build() {
  go_src_dir
  git checkout v${pkgver}-lts-lgpl
}

build() {
  go_src_dir
  burn_patches

  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install

  find ${pkgdir}/usr/lib -type f -name '*.prl' -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
