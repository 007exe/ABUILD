pkgname=qt5-svg
pkgver=5.15.4
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("Classes for displaying the contents of SVG files.")
longdesc=("SVG rendering library for the Qt5 framework.")

source=("git:https://invent.kde.org/qt/qt/qtsvg.git")

tags=("qt5 dev-qt")

build_deps=("git qt5-base")

before_build() {
  go_src_dir
  git checkout v${pkgver}-lts-lgpl
}

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install

  find ${pkgdir}/usr/lib -type f -name '*.prl' \
    -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
