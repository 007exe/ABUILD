pkgname=qt5-declarative
pkgver=5.15.5
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("Classes for QML and JavaScript languages.")
longdesc=("The QML and Quick modules for the Qt5 framework.")

tags=("qt5 dev-qt")

source=("git:https://invent.kde.org/qt/qt/qtdeclarative")

build_deps=("qt5-base python vulkan-headers git")

before_build() {
  go_src_dir
# FIXME: Фатальная ошибка при попытке сборки lts версии
 git checkout v${pkgver}-lts-lgpl
#  echo "***************************************************"
#  echo "*           Переключаюсь на 5.15.4 r19            *"
#  echo "*                                                 *"
#  echo "* коммит 2454c808bfe99b50084aea59adb917e805c27afa *"
#  echo "***************************************************"
#  git checkout 2454c808bfe99b50084aea59adb917e805c27afa
}

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  qmake .. CONFIG+=fat-static-lto
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install

# Симлинки для обратной совместимости
  for b in ${pkgdir}/usr/bin/*; do
    ln -s $(basename $b) ${pkgdir}/usr/bin/$(basename $b)-qt5
  done

  find ${pkgdir}/usr/lib -type f -name '*.prl' -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
