pkgname=qt5-declarative
pkgver=5.15.3+r20
# NOTE: Коммит 5.15.3+r20
_commit=02105099301450c890e1caba977ef44efdc43da7
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("Classes for QML and JavaScript languages.")
longdesc=("The QML and Quick modules for the Qt5 framework.")

tags=("libs dev-qt")

source=("git:https://invent.kde.org/qt/qt/qtdeclarative")

build_deps=("qt5-base python vulkan-headers")

build() {
  go_src_dir
  burn_patches
  git checkout ${_commit}
  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install

# Симлинки для обратной совместимости
  for b in ${pkgdir}/usr/bin/*; do
    ln -s $(basename $b) ${pkgdir}/usr/bin/$(basename $b)-qt5
  done

  find ${pkgdir}/usr/lib -type f -name '*.prl' -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
