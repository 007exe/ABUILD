pkgname=qt6-charts
pkgver=6.6.0
pkgbuild=1
arch=("auto")

shortdesc=("Provides a set of easy to use chart components.")

tags=("qt6 dev-qt")

source=("https://www.nic.funet.fi/pub/mirrors/download.qt-project.org/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtcharts-everywhere-src-${pkgver}.tar.xz")

adddep=("qt6-declarative")

build_deps=("${adddep} cmake ninja git qt6-base")

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
