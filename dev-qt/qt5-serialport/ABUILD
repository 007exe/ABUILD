pkgname=qt5-serialport
pkgver=5.15.5
pkgbuild=2
arch=("auto")

shortdesc=("Provides access to hardware and virtual serial ports.")
longdesc=("Serial port abstraction library for the Qt5 framework.")

tags=("qt5 dev-qt")

source=("https://mirror.yandex.ru/mirrors/qt.io/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtserialport-everywhere-opensource-src-${pkgver}.tar.xz")

build_deps=("qt5-base git")

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install
  find ${pkgdir}/usr/lib -type f -name '*.prl' -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
