pkgname=qt5-serialport
pkgver=5.15.3
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("Provides access to hardware and virtual serial ports.")
longdesc=("Serial port abstraction library for the Qt5 framework.")

tags=("libs dev-qt")

source=("git:https://invent.kde.org/qt/qt/qtserialport.git")

build_deps=("qt5-base git")

build() {
  go_src_dir
  git checkout v${pkgver}-lts-lgpl
  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install

  find ${pkgdir}/usr/lib -type f -name '*.prl' -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
