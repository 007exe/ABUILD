pkgname=qt6-remoteobjects
pkgver=6.4.0
pkgbuild=1
arch=("auto")

shortdesc=("Support for XPath, XQuery, XSLT and XML schema validation.")
longdesc=("The Qt Remote Objects module provides an easy to use mechanism for sharing a QObject's API between processes.")

tags=("qt6 dev-qt")

source=("https://mirror.yandex.ru/mirrors/qt.io/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtremoteobjects-everywhere-src-${pkgver}.tar.xz")

build_deps=("cmake ninja qt6-declarative git qt6-base")

# NOTE: это опциональная зависимость
removedep=("qt6-declarative")

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
