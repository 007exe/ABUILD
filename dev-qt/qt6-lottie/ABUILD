pkgname=qt6-lottie
pkgver=6.4.0
pkgbuild=1
arch=("auto")

shortdesc=("A family of player software for a certain json-based file format for describing 2d vector graphics animations.")
longdesc=("A family of player software for a certain json-based file format for describing 2d vector graphics animations.")

tags=("qt6 dev-qt")

source=("https://mirror.yandex.ru/mirrors/qt.io/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtlottie-everywhere-src-${pkgver}.tar.xz")

build_deps=("cmake ninja qt6-declarative git qt6-base")

# NOTE: Это опциональная зависимость
removedep=("qt6-declarative")

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
