pkgname=qt5-speech
pkgver=5.15.2
pkgbuild=1
arch=("auto")

shortdesc=("Qt module to make text to speech and speech recognition easy.")
longdesc=("Text-to-speech library for the Qt5 framework.")

tags=("libs x11-libs")

source=("https://download.qt.io/archive/qt/${pkgver%.*}/${pkgver}/submodules/qtspeech-everywhere-src-${pkgver}.tar.xz")

build_deps=("flite speech-dispatcher qt5-multimedia")

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT="$pkgdir" install
# Drop QMAKE_PRL_BUILD_DIR because reference the build dir
  find "$pkgdir/usr/lib${LIBDIRSUFFIX}" -type f -name '*.prl' -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;

  install -d "$pkgdir"/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base "$pkgdir"/usr/share/licenses/${pkgname}
}
