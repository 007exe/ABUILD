pkgname=qt5-webchannel
pkgver=5.15.5
pkgbuild=2
arch=("auto")

shortdesc=("Qt5 module for integrating C++ and QML applications with HTML/JavaScript clients.")
longdesc=("Provides access to QObject or QML objects from HTML clients for seamless integration of Qt applications with HTML/JavaScript clients.")

#source=("https://mirror.yandex.ru/mirrors/qt.io/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtwebchannel-everywhere-opensource-src-${pkgver}.tar.xz")
strict_version=1
source=("git:https://invent.kde.org/qt/qt/qtwebchannel.git")

tags=("qt5 dev-qt")

build_deps=("qt5-declarative git")

before_build() {
  go_src_dir
  git checkout v${pkgver}-lts-lgpl
}

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install
  find ${pkgdir}/usr/lib -type f -name '*.prl' -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
