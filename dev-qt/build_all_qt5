#!/bin/bash

QT_VERSION=5.15.6
BUILD_VERSION=1
# NOTE: Измени значение переменной _qtbasever в файле qt5-webengine/ABUILD
WEBENGINE_VERSION=5.15.10
BUILD_VERSION_WEB=2

WEBKIT_VERSION=5.212.0alpha4
BUILD_VERSION_WEBKIT=3

# NOTE: После сборки qt5-base следует пересобрать qt5-webkit и qt5-webengine
# WARNING: Пакет qt5-webengine собирается очень долго

MLIST="qt5-base
qt5-declarative
qt5-3d
qt5-charts
qt5-connectivity
qt5-datavis3d
qt5-gamepad
qt5-graphicaleffects
qt5-imageformats
qt5-location
qt5-lottie
qt5-multimedia
qt5-networkauth
qt5-purchasing
qt5-quick3d
qt5-quickcontrols
qt5-quickcontrols2
qt5-quicktimeline
qt5-remoteobjects
qt5-script
qt5-scxml
qt5-sensors
qt5-serialport
qt5-serialbus
qt5-speech
qt5-svg
qt5-tools
qt5-translations
qt5-virtualkeyboard
qt5-wayland
qt5-webchannel
qt5-websockets
qt5-webglplugin
qt5-x11extras
qt5-xmlpatterns
"
#qt5-webengine
#qt5-webview

CWD=~
STARTD=`pwd`

LOGFILE=~/build.log

echo "============================= Начало сборки `date` =============================" >> $LOGFILE

for i in $MLIST ; do
    cd $STARTD/$i
    if mkpkg -ba -wd ~/mkpkg/build -pod ~/mkpkg/repository/dev-qt -si -bv $QT_VERSION -bb $BUILD_VERSION; then
            echo "`date` || Пакет: $i ГОТОВ" >> $LOGFILE
            cd $STARTD
    else
            echo "`date` || ОШИБКА пакет: $i НЕ СОБРАН!!!" >> $LOGFILE
            cd $STARTD
    fi
done

#################################################################################################################

cd $STARTD/qt5-webkit
if mkpkg -ba -wd ~/mkpkg/build -pod ~/mkpkg/repository/dev-qt -si -ib -bv $WEBKIT_VERSION -bb $BUILD_VERSION_WEBKIT; then
        echo "`date` || Пакет: qt5-webkit ГОТОВ" >> $LOGFILE
        cd $STARTD
else
        echo "`date` || ОШИБКА пакет: qt5-webkit НЕ СОБРАН!!!" >> $LOGFILE
        cd $STARTD
fi

#################################################################################################################

cd $STARTD/qt5-webengine
# Изменить версию "_qtbasever=" на QT_VERSION
if mkpkg -ba -wd ~/mkpkg/build -pod ~/mkpkg/repository/dev-qt -si -bv $WEBENGINE_VERSION -bb $BUILD_VERSION_WEB; then
        echo "`date` || Пакет: qt5-webengine ГОТОВ" >> $LOGFILE
        cd $STARTD
else
        echo "`date` || ОШИБКА пакет: qt5-webengine НЕ СОБРАН!!!" >> $LOGFILE
        cd $STARTD
fi

#################################################################################################################

cd $STARTD/qt5-webview
if mkpkg -ba -wd ~/mkpkg/build -pod ~/mkpkg/repository/dev-qt -si -bv $QT_VERSION -bb $BUILD_VERSION; then
        echo "`date` || Пакет: qt5-webengine ГОТОВ" >> $LOGFILE
        cd $STARTD
else
        echo "`date` || ОШИБКА пакет: qt5-webengine НЕ СОБРАН!!!" >> $LOGFILE
        cd $STARTD
fi

echo "============================= Завершено `date` =============================" >> $LOGFILE
