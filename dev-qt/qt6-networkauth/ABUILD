pkgname=qt6-networkauth
pkgver=6.6.0
pkgbuild=1
arch=("auto")

shortdesc=("Network authorization library for the Qt6 framework.")

source=("https://www.nic.funet.fi/pub/mirrors/download.qt-project.org/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtnetworkauth-everywhere-src-${pkgver}.tar.xz")

tags=("qt6 dev-qt")

build_deps=("git cmake ninja qt6-base")

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
