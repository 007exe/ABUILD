pkgname=qt6-websockets
pkgver=6.6.0
pkgbuild=1
arch=("auto")

shortdesc=("Provides WebSocket communication compliant with RFC 6455.")

source=("https://www.nic.funet.fi/pub/mirrors/download.qt-project.org/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtwebsockets-everywhere-src-${pkgver}.tar.xz")

tags=("qt6 dev-qt")

build_deps=("cmake ninja qt6-declarative qt6-base")

# NOTE: это опциональная зависимость
removedep=("qt6-declarative")

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
