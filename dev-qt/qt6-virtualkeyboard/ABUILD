pkgname=qt6-virtualkeyboard
pkgver=6.3.1
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("Virtual keyboard framework.")
longdesc=("Customizable input framework and virtual keyboard for Qt.")

tags=("qt6 dev-qt")

source=("git:https://invent.kde.org/qt/qt/qtvirtualkeyboard.git")

build_deps=("cmake ninja qt6-declarative qt6-svg hunspell git qt6-base")

adddep=("hunspell")

before_build() {
  go_src_dir
  git checkout v${pkgver}
}

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
