pkgname=qt6-tools
pkgver=6.3.0
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("A cross-platform application and UI framework.")
longdesc=("A cross-platform application and UI framework (Development Tools, QtHelp)")

tags=("qt6 dev-qt")

source=("git:https://invent.kde.org/qt/qt/qttools")

build_deps=("cmake ninja qt6-declarative clang llvm qt6-base")

# NOTE: Это опциональные зависимости
removedep=("qt6-declarative clang")

before_build() {
  go_src_dir
  git checkout v${pkgver}
}

build() {
  go_src_dir
  burn_patches
  cmake -B build -G Ninja \
    -DINSTALL_PUBLICBINDIR=usr/bin
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

# Символические ссылки для пользовательских инструментов
  cd ${pkgdir}
  mkdir usr/bin
  while read _line; do
    ln -s $_line
  done < ${srcdir}/qt6-tools_git_qttools.src/build/user_facing_tool_links.txt

  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt6-base ${pkgdir}/usr/share/licenses/${pkgname}
}
