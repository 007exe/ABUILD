pkgname=qt5-quickcontrols
pkgver=5.15.11
pkgbuild=1
arch=("auto")

shortdesc=("Reusable Qt Quick based UI controls to create classic desktop-style user interfaces.")

source=("https://www.nic.funet.fi/pub/mirrors/download.qt-project.org/official_releases/qt/${pkgver%.*}/${pkgver}/submodules/qtquickcontrols-everywhere-opensource-src-${pkgver}.tar.xz")
#strict_version=1
#source=("git:https://invent.kde.org/qt/qt/qtquickcontrols.git")

tags=("qt5 dev-qt")

build_deps=("git qt5-base")

#before_build() {
#  go_src_dir
#  git checkout v${pkgver}-lts-lgpl
#}

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  qmake ..
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install
  find ${pkgdir}/usr/lib -type f -name '*.prl' -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
  install -d ${pkgdir}/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base ${pkgdir}/usr/share/licenses/${pkgname}
}
