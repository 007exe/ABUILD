# NOTE: Обнови vulkan-icd-loader
pkgname=vulkan-headers
pkgver=1.3.235
pkgbuild=1
arch=("auto")

shortdesc=("Vulkan header files.")
longdesc=("Vulkan Header files and API registry.")

source=("https://github.com/KhronosGroup/Vulkan-Headers/archive/v${pkgver}.tar.gz")

tags=("dev-util develop")

build_deps=("cmake")

build() {
  go_src_dir
  rm -rf build
  mkdir build
  cd build
  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/v${pkgver}.tar.gz
}
