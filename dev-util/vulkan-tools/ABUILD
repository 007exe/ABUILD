pkgname=vulkan-tools
pkgver=1.3.235
pkgbuild=1
arch=("auto")

shortdesc=("Vulkan Utilities and Tools.")
longdesc=("Official Vulkan Tools and Utilities for Windows, Linux, Android, and MacOS.")

source=("https://github.com/KhronosGroup/Vulkan-Tools/archive/v${pkgver}.tar.gz")

tags=("utils dev-util")

build_deps=("libx11 wayland cmake python vulkan-headers vulkan-icd-loader wayland-protocols glslang spirv-tools")

build() {
  go_src_dir
  burn_patches
  rm -rf build{,-wayland}
  mkdir build{,-wayland}

  cd build
  cmake .. \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_SYSCONFDIR=/etc \
    -DCMAKE_INSTALL_DATADIR=/usr/share \
    -DCMAKE_SKIP_RPATH=ON \
    -DBUILD_WSI_XCB_SUPPORT=On \
    -DBUILD_WSI_XLIB_SUPPORT=On \
    -DBUILD_WSI_WAYLAND_SUPPORT=On \
    -DBUILD_CUBE=ON \
    -DBUILD_VULKANINFO=ON \
    -DBUILD_ICD=OFF \
    -DGLSLANG_INSTALL_DIR=/usr
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  cd ../build-wayland
  cmake ..\
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_SYSCONFDIR=/etc \
    -DCMAKE_INSTALL_DATADIR=/usr/share \
    -DCMAKE_SKIP_RPATH=ON \
    -DBUILD_WSI_XCB_SUPPORT=OFF \
    -DBUILD_WSI_XLIB_SUPPORT=OFF \
    -DBUILD_WSI_WAYLAND_SUPPORT=On \
    -DBUILD_CUBE=ON \
    -DCUBE_WSI_SELECTION=WAYLAND \
    -DBUILD_VULKANINFO=OFF \
    -DBUILD_ICD=OFF \
    -DGLSLANG_INSTALL_DIR=/usr
  make -j${numjobs}

  install -m755 cube/vkcube-wayland ${pkgdir}/usr/bin/

  install -dm755 ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 ../LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/
}


# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/v${pkgver}.tar.gz
}
