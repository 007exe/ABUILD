pkgname=spirv-headers
pkgver=1.3.211.0
pkgbuild=1
arch=("auto")

shortdesc=("SPIR-V Headers")
longdesc=("Machine-readable files for the SPIR-V Registry.")

source=("https://github.com/KhronosGroup/SPIRV-Headers/archive/refs/tags/sdk-${pkgver}.tar.gz")

tags=("develop dev-util")

build_deps="cmake git"

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr .
  make -j${numjobs} -C build
  make -C build DESTDIR=${pkgdir} install
  install -Dm644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}/
}
