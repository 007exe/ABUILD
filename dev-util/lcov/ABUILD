pkgname=lcov
pkgver=1.16
pkgbuild=1
arch=("auto")

shortdesc=("Front-end for GCC's coverage testing tool gcov.")

source=("https://github.com/linux-test-project/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("dev-util develop")

build_deps=("perl")

adddeps=("perl")

build() {
  go_src_dir
  burn_patches
  make PREFIX=${pkgdir} install
}
