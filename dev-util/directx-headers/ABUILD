pkgname=directx-headers
pkgver=1.606.4
pkgbuild=1
arch=("auto")

shortdesc=("DirectX headers for using D3D12.")

source=("https://github.com/microsoft/DirectX-Headers/archive/refs/tags/v${pkgver}.tar.gz")

tags=("dev-util develop")

build_deps=("meson")

build() {
  go_src_dir
  export CXXFLAGS="$CXXFLAGS -fno-lto"
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D build-test=false
  ninja -C build
  DESTDIR=${pkgdir} meson install -C build
  install -m644 -Dt ${pkgdir}/usr/share/licenses/${pkgname} LICENSE
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/v${pkgver}.tar.gz
}
