pkgname=dialog
pkgver=1.3_20221229
pkgbuild=1
arch=("auto")

shortdesc=("A tool to display dialog boxes from shell scripts.")

source=("https://invisible-mirror.net/archives/dialog/${pkgname}-${pkgver//_/-}.tgz")

tags=("utils dev-util")

build_deps=("ncurses")

build(){
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --with-ncursesw \
    --enable-nls \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install-full
}
