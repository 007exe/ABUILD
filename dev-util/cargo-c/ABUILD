pkgname=cargo-c
pkgver=0.9.14
pkgbuild=1
arch=("auto")

shortdesc=("Helper program to build and install c-like libraries.")
longdesc=("A cargo subcommand to build and install C-ABI compatibile dynamic and static libraries.")

source=("https://github.com/lu-zero/cargo-c/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("dev-util libs")

build_deps=("curl openssl zlib rust")

build() {
  go_src_dir
  burn_patches
  cargo build \
    --release
  cargo install \
    --no-track \
    --root ${pkgdir}/usr \
    --path .
  install -D -m644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}
