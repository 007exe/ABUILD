pkgname=cmake
pkgver=3.25.1
pkgbuild=1
arch=("auto")

shortdesc=("Cross-platform, open-source make system.")
longdesc=("The CMake package contains a modern toolset used for generating Makefiles.")

source=("http://www.cmake.org/files/v${pkgver%.*}/${pkgname}-${pkgver}.tar.gz")

tags=("utils dev-util")

build_deps=("libarchive curl rhash python-sphinx jsoncpp qt6-base")

gendeps_blacklist=("usr/bin/cmake-gui")

# NOTE: Это опциональные зависимости
removedep=("qt6-base")

build() {
  go_src_dir
  burn_patches
  export CXXFLAGS+=" ${CPPFLAGS}"
  ./bootstrap \
    --prefix=/usr \
    --mandir=/share/man \
    --docdir=/share/doc/cmake \
    --datadir=/share/cmake \
    --sphinx-man \
    --sphinx-html \
    --system-libs \
    --parallel=$(/usr/bin/getconf _NPROCESSORS_ONLN)
#   --qt-gui Этот араметр, включает сборку графического интерфейса
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 Copyright.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
