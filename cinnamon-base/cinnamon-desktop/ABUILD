pkgname=cinnamon-desktop
pkgver=5.6.1
pkgbuild=1
arch=("auto")

shortdesc=("Library with common API for various Cinnamon modules.")

source=("https://github.com/linuxmint/${pkgname}/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs cinnamon-base")

adddep=("accountsservice gtk3 libxkbfile libpulse")

build_deps=("${adddep} meson samurai gobject-introspection intltool")

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  meson \
    --prefix=/usr \
    --libdir=/usr/lib ..
  samu
  DESTDIR=${pkgdir} samu install
}

