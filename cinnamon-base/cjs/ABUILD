pkgname=cjs
pkgver=5.6.1
pkgbuild=1
arch=("auto")

shortdesc=("Javascript Bindings for Cinnamon.")

source=("https://github.com/linuxmint/${pkgname}/archive/${pkgver}.tar.gz")

tags=("cinnamon cinnamon-base")

# gobject-introspection-runtime
adddep=("gtk3 js78")

build_deps=("${adddep} meson samurai gobject-introspection")

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  meson \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D buildtype=plain \
    -D installed_tests=false ..
  samu
  DESTDIR=${pkgdir} samu install
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
