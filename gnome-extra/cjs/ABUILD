pkgname=cjs
pkgver=5.0.1
pkgbuild=1
arch=('auto')

shortdesc=("Javascript Bindings for Cinnamon.")
longdesc=("Javascript Bindings for Cinnamon.")

source=("https://github.com/linuxmint/${pkgname}/archive/${pkgver}.tar.gz")

tags="games games-board"
# gobject-introspection-runtime
build_deps="meson samurai gtk3 gobject-introspection js78"

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  meson \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --buildtype=plain \
    -Dinstalled_tests=false ..
  samu
  DESTDIR="${pkgdir}" samu install
}
