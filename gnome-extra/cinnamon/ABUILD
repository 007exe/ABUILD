pkgname=cinnamon
pkgver=5.0.7
pkgbuild=1
arch=('auto')

shortdesc=("Linux desktop which provides advanced innovative features and a traditional user experience.")
longdesc=("Linux desktop which provides advanced innovative features and a traditional user experience.")

source=("https://github.com/linuxmint/cinnamon/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags="gnome gnome-extra"
#                                                        |
build_deps="meson samurai gobject-introspection intltool accountsservice caribou cinnamon-control-center cinnamon-menus cinnamon-screensaver cinnamon-session cinnamon-settings-daemon cjs gnome-backgrounds gnome-themes-extra gstreamer libcroco libgnomekbd libkeybinder3 librsvg muffin network-manager-applet nemo polkit-gnome python-cairo dbus-python python-gobject python-pam python-pexpect python-pillow python-pyinotify python-pytz python-tinycss2 python-xapp timezonemap xapp cinnamon-translations"

adddep="gnome-themes-extra dbus-python python-pam python-pillow python-pyinotify python-tinycss2 cinnamon-translations"

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  meson .. \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX}
  samu
  DESTDIR="${pkgdir}" samu install
}
