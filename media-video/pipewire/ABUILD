alsa-card-profiles() {
  pkgname=alsa-card-profiles
  shortdesc=("Low-latency audio/video router and processor - ALSA card profiles.")
}

alsa-card-profiles_prep() {
  echo "===============> alsa-card-profiles <==============="
  cd ${srcdir}
  mv ${srcdir}/acp/* ${pkgdir}
}

