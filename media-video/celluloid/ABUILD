pkgname=celluloid
pkgver=0.25
pkgbuild=1
arch=("auto")

shortdesc=("Simple GTK+ frontend for mpv.")

source=("https://github.com/celluloid-player/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("apps media-video")

adddep=("gtk4 mpv libadwaita")

build_deps=("${adddep} appstream-glib meson")

build(){
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  meson compile -C build
  DESTDIR=${pkgdir} meson install -C build
}
