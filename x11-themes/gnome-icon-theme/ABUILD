pkgname=gnome-icon-theme
pkgver=3.12.0
pkgbuild=1
arch=('noarch')

shortdesc=("GNOME icon theme")
longdesc=("The GNOME Icon Theme package contains an assortment of non-scalable icons of different sizes and themes.")

source=("https://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz")

tags="x11-themes themes"

build_deps="intltool icon-naming-utils"

adddep="gtk-update-icon-cache icon-naming-utils hicolor-icon-theme"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
