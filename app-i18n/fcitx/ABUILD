pkgname=fcitx
pkgver=4.2.9.8
pkgbuild=1
arch=('auto')

shortdesc=("Flexible Context-aware Input Tool with eXtension.")
longdesc=("Fcitx (Flexible Context-aware Input Tool with eXtension) input method framework.")

source=("https://download.fcitx-im.org/$pkgname/$pkgname-${pkgver}_dict.tar.xz")

tags=("base app-i18n")

build_deps=("extra-cmake-modules doxygen gtk2 gtk3 mesa opencc iso-codes gobject-introspection enchant python pango libxinerama gtk-update-icon-cache shared-mime-info hicolor-icon-theme desktop-file-utils libxkbfile libxfixes dbus icu libxkbcommon")

build() {
  go_src_dir
  burn_patches
  mkdir -p build
  cd build
  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_SUFFIX=${LIBDIRSUFFIX} \
    -DSYSCONFDIR=/etc \
    -DFORCE_OPENCC=ON \
    -DFORCE_PRESAGE=ON \
    -DFORCE_ENCHANT=ON \
    -DENABLE_TEST=ON \
    -DENABLE_QT=OFF \
    -DENABLE_GTK2_IM_MODULE=ON \
    -DENABLE_GTK3_IM_MODULE=ON \
    -DENCHANT_INCLUDE_DIR=/usr/include/enchant-2/ \
    -DENCHANT_LIBRARIES=/usr/lib${LIBDIRSUFFIX}/libenchant-2.so
  make -j${numjobs}
  make DESTDIR="$pkgdir" install
}
