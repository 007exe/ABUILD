pkgname=scim
pkgver=1.4.18
pkgbuild=1
arch=("auto")

shortdesc=("Input method user interface and development platform.")
longdesc=("Smart Common Input Method (SCIM) is an Input Method (IM) development platform.")

source=("https://github.com/scim-im/scim/archive/${pkgver}.tar.gz")

tags=("develop app-i18n")

build_deps=("libltdl gtk2 intltool gtk3")

# NOTE: Это опциональные зависимости
removedep=("gtk3")

build() {
  go_src_dir
  burn_patches
  ./bootstrap
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --with-gtk-version=2
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
