pkgname=spice-gtk
pkgver=0.41
pkgbuild=1
arch=("auto")

shortdesc=("GTK+ client library for SPICE.")

source=("https://www.spice-space.org/download/gtk/${pkgname}-${pkgver}.tar.xz")

tags=("net-misc apps")

build_deps=("gobject-introspection meson spice-protocol usbutils vala phodav
wayland-protocols gst-plugins-base gst-plugins-good libcacard polkit usbredir")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
