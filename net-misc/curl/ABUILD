pkgname=curl
pkgver=7.87.0
pkgbuild=3
arch=("auto")

shortdesc=("The cURL package contains an utility and a library used for transferring files with URL syntax to any of the following protocols: FTP, FTPS, HTTP, HTTPS, SCP, SFTP, TFTP, TELNET, DICT, LDAP, LDAPS and FILE. Its ability to both download and upload files can be incorporated into other programs to support functions like streaming media.")

source=("http://curl.haxx.se/download/${pkgname}-${pkgver}.tar.xz")

tags=("network net-misc")

build_deps=("krb5 libidn2 libnghttp2 libssh2 openssl zlib zstd libpsl brotli ca-certificates")

adddep=("ca-certificates")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --mandir=/usr/share/man \
    --disable-ldap \
    --disable-ldaps \
    --disable-manual \
    --disable-static \
    --enable-ipv6 \
    --enable-threaded-resolver \
    --with-gssapi \
    --with-libssh2 \
    --with-openssl \
    --with-random=/dev/urandom \
    --with-ca-bundle=/etc/ssl/certs/ca-certificates.crt
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}

  make DESTDIR=${pkgdir} install
  make DESTDIR=${pkgdir} install -C scripts

  install -Dt ${pkgdir}/usr/share/licenses/${pkgname} -m644 COPYING
}
