pkgname=network-manager-applet
pkgver=1.32.0
pkgbuild=1
arch=("auto")

shortdesc=("Applet for managing network connections.")

source=(" https://download.gnome.org/sources/network-manager-applet/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("network net-misc")

adddep=("networkmanager ppp libappindicator-gtk3 libmm-glib libnma libsecret networkmanager")

build_deps=("${adddep} gobject-introspection gtk-doc libgudev meson")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D appindicator=no \
    -D selinux=false
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
