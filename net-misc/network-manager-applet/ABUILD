pkgname=network-manager-applet
pkgver=1.28.0
pkgbuild=1
arch=("auto")

shortdesc=("Applet for managing network connections.")
longdesc=("The NetworkManager Applet provides a tool and a panel applet used to configure wired and wireless network connections through GUI. It's designed for use with any desktop environment that uses GTK+, such as Xfce and LXDE.")

source=("https://gitlab.gnome.org/GNOME/network-manager-applet/-/archive/${pkgver}/network-manager-applet-${pkgver}-dev.tar.gz")

tags=("network net-misc")

build_deps=("libsecret libnotify libmm-glib gobject-introspection gtk-doc meson libnma libnma-common libgudev")

adddep=("networkmanager ppp")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D appindicator=no \
    -D selinux=false
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
