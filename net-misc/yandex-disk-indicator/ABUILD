pkgname=yandex-disk-indicator
pkgver=1.11.0
pkgbuild=1
arch=("x86_64")

shortdesc=("Panel indicator (GUI) for YandexDisk CLI client for Linux.")
longdesc=("Desktop panel indicator for YandexDisk CLI client for Linux (GTK+).")

source=("https://github.com/slytomcat/yandex-disk-indicator/archive/${pkgver}.tar.gz")

tags=("network net-misc")

build_deps=("python python-pyinotify pygobject-devel python-gobject libappindicator-gtk3 xclip zenity")

adddep=("yandex-disk python python-pyinotify pygobject-devel python-gobject libappindicator-gtk3 xclip zenity")

build() {
  go_src_dir
  cd build
  chmod +x prepare.sh
  mkdir ${pkgdir}/usr
  export TARGET=${pkgdir}/usr
  sh prepare.sh
}
