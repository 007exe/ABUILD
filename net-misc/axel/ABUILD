pkgname=axel
pkgver=2.17.11
pkgbuild=1
arch=("auto")

shortdesc=("Light command line download accelerator.")

source=("https://github.com/axel-download-accelerator/axel/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("net-misc network")

build_deps=("glibc openssl")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
