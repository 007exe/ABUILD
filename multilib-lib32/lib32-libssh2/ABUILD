pkgname=lib32-libssh2
pkgver=1.10.0
pkgbuild=1
arch=("auto")

shortdesc=("A library implementing the SSH2 protocol as defined by Internet Drafts (32-bit).")
longdesc=("Libssh2 package is a client-side C library implementing the SSH2 protocol.")

source=("http://www.libssh2.org/download/libssh2-${pkgver}.tar.gz")

tags=("lib32 net-misc")

build_deps=("lib32-glibc lib32-openssl lib32-zlib")

adddep=("lib32-glibc lib32-openssl lib32-zlib libssh2")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  rm -rf ${pkgdir}/usr/{include,share,bin,sbin}
  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s libssh2 ${pkgdir}/usr/share/licenses/${pkgname}
}
