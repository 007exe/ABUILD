pkgname=lib32-linux-pam
pkgver=1.5.2
pkgbuild=1
arch=("auto")

shortdesc=("A security tool which provides authentication for applications (32-bit).")

source=("https://github.com/linux-pam/linux-pam/releases/download/v$pkgver/Linux-PAM-${pkgver}.tar.xz")

tags=("lib32 sys-libs")

# w3m
build_deps=("docbook-xml docbook-xsl lib32-flex lib32-libtirpc")

adddep=("linux-pam")

build() {
  go_src_dir
  burn_patches
  autoreconf
  export CC='gcc -m32'
  export CXX='g++ -m32'
  export PKG_CONFIG_PATH='/usr/lib32/pkgconfig'
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sbindir=/usr/bin \
    --disable-db
  make -j${numjobs}
  make DESTDIR=${pkgdir} SCONFIGDIR=/etc/security install

  rm -rf ${pkgdir}/{etc,usr/{bin,include,lib,share}}
}
