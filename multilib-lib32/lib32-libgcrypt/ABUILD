pkgname=lib32-libgcrypt
pkgver=1.10.1
pkgbuild=2
arch=("auto")

shortdesc=("General purpose cryptographic library based on the code from GnuPG (32-bit).")
longdesc=("The libgcrypt package contains a general purpose crypto library based on the code used in GnuPG. The library provides a high level interface to cryptographic building blocks using an extendable and flexible API.")

source=("https://gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-${pkgver}.tar.bz2")

tags=("dev-libs lib32")

build_deps=("lib32-libgpg-error lib32-gcc-libs libtool")

adddep=("libgcrypt")

build() {
  go_src_dir
  burn_patches
# Использовать 32-разрядный ассемблер
  sed 's:i\[34567\]86\*-\*-\*:x86_64-*-*:' -i mpi/config.links
  sed 's:x86_64-\*-\*:ignore:;s:i?86-\*-\*:x86_64-*-*:' -i configure.ac
  autoreconf -vfi
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  ./configure \
    --prefix=/usr \
    --disable-static \
    --disable-padlock-support \
    --libdir=/usr/lib32 \
    --enable-shared
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  rm -rf ${pkgdir}/usr/{include,share,bin,sbin}
}
