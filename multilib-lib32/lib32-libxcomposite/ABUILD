pkgname=lib32-libxcomposite
pkgver=0.4.6
pkgbuild=1
arch=("auto")

shortdesc=("X11 Composite extension library (32-bit).")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

source=("https://xorg.freedesktop.org/releases/individual/lib/libXcomposite-${pkgver}.tar.xz")

tags=("lib32 xorg-libs")

build_deps=("libxfixes xorg-util-macros lib32-gcc-libs lib32-glibc lib32-libxfixes")

adddep=("libxcomposite")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  rm -rf ${pkgdir}/usr/{include,share,bin}
  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s libxcomposite ${pkgdir}/usr/share/licenses/${pkgname}
}
