pkgname=lib32-zlib
pkgver=1.2.12
pkgbuild=1
arch=("auto")

shortdesc=("Compression library implementing the deflate compression method found in gzip and PKZIP (32-bit).")
longdesc=("The Zlib package contains compression and decompression routines used by some programs.")

source=("https://zlib.net/zlib-${pkgver}.tar.gz")

tags=("lib32 sys-libs")

build_deps=("lib32-glibc")

adddep=("lib32-glibc zlib")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  rm -rf ${pkgdir}/usr/{include,share,bin}
  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s zlib ${pkgdir}/usr/share/licenses/${pkgname}
}
