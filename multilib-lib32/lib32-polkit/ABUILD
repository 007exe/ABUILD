pkgname=lib32-polkit
pkgver=122
pkgbuild=1
arch=("auto")

shortdesc=("Application development toolkit for controlling system-wide privileges (32-bit).")

source=("https://gitlab.freedesktop.org/polkit/polkit/-/archive/${pkgver}/polkit-${pkgver}.tar.gz")

tags=("lib32 sys-auth")

build_deps=("lib32-expat lib32-linux-pam meson lib32-glib2")

adddep=("polkit")

build(){
  go_src_dir
  burn_patches
  export CC='gcc -m32'
  export CXX='g++ -m32'
  export PKG_CONFIG='i686-pc-linux-gnu-pkg-config'
  export PKG_CONFIG_PATH=/usr/lib32/pkgconfig
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib32 \
    -D systemdsystemunitdir=/tmp \
    -D session_tracking=libelogind \
    -D introspection=false \
    -D libs-only=true \
    -D os_type=redhat \
  meson compile -C build
  meson install -C build --destdir ${pkgdir}

  rm -r ${pkgdir}/{etc,usr/{include,lib,share}}
}
