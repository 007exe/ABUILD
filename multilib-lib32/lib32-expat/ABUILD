pkgname=lib32-expat
pkgver=2.4.9
pkgbuild=1
arch=("auto")

shortdesc=("An XML Parser library (32-bit).")
longdesc=("The Expat package contains a stream oriented C library for parsing XML.")

source=("http://downloads.sourceforge.net/sourceforge/expat/expat-${pkgver}.tar.bz2")

tags=("lib32 dev-libs")

build_deps=("lib32-glibc lib32-gcc-libs cmake")

adddep=("lib32-glibc expat")

build() {
  go_src_dir
  burn_patches
  export CC='gcc -m32'
  export CXX='c++ -m32'
  export PKG_CONFIG_PATH=/usr/lib32/pkgconfig
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -vDm 644 COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}/
  rm -rf ${pkgdir}/usr/{bin,include,share/man,share/doc}
}
