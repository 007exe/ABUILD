pkgname=lib32-libogg
pkgver=1.3.5
pkgbuild=1
arch=("auto")

shortdesc=("Ogg bitstream and framing library (32-bit).")
longdesc=("Libogg is a library for manipulating ogg bitstreams. It handles both making ogg bitstreams and getting packets from ogg bitstreams.")

source=("http://downloads.xiph.org/releases/ogg/libogg-${pkgver}.tar.xz")

tags=("libs media-libs")

build_deps=("lib32-glibc cmake ninja")

adddep=("libogg")

build() {
  go_src_dir
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG=i686-pc-linux-gnu-pkg-config
  cmake -B build -G Ninja \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib32 \
    -DINSTALL_DOCS=OFF \
    -DBUILD_SHARED_LIBS=ON
  cmake --build build
  DESTDIR=${pkgdir} cmake --install build
  rm -r ${pkgdir}/usr/include
  install -Dm 644 COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}/
}
