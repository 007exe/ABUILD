pkgname=lib32-libxfixes
pkgver=6.0.0
pkgbuild=1
arch=("auto")

shortdesc=("X11 miscellaneous fixes extension library (32-bit).")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

source=("http://xorg.freedesktop.org/archive/individual/lib/libXfixes-${pkgver}.tar.bz2")

tags=("libs xorg-libs")

build_deps=("lib32-libx11 lib32-gcc-libs")

adddep=("libxfixes")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG="i686-pc-linux-gnu-pkg-config"
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  rm -rf ${pkgdir}/usr/{include,share,bin}
  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s libxfixes ${pkgdir}/usr/share/licenses/${pkgname}
}
