pkgname=lib32-openal
pkgver=1.23.1
pkgbuild=1
arch=("auto")

shortdesc=("Cross-platform 3D audio library, software implementation (32-bit).")

source=("https://github.com/kcat/openal-soft/archive/refs/tags/${pkgver}.tar.gz")

tags=("lib32 media-libs")

adddep=("lib32-gcc-libs openal")

# lib32-fluidsynth lib32-jack lib32-libpulse lib32-pipewire lib32-portaudio
build_deps=("${adddep} lib32-gcc-libs cmake lib32-alsa-lib ninja")

# NOTE: Это опциональные зависимости
removedep=("lib32-fluidsynth")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/${pkgver}.tar.gz
}

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32 -mstackrealign"
  export CXX="g++ -m32 -mstackrealign"
  export PKG_CONFIG=i686-pc-linux-gnu-pkg-config
  cmake -S . -B build \
    -G Ninja \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=None \
    -DCMAKE_INSTALL_LIBDIR=lib32
  cmake --build build
  DESTDIR=${pkgdir} cmake --install build
  rm -rv ${pkgdir}/usr/{include,share,bin}
}
