pkgname=lib32-libdrm
pkgver=2.4.114
pkgbuild=1
arch=("auto")

shortdesc=("X.Org libdrm library (32-bit).")
longdesc=("Userspace interface to kernel DRM services.")

source=("https://dri.freedesktop.org/libdrm/libdrm-${pkgver}.tar.xz")

tags=("lib32 xorg-misc")

build_deps=("meson lib32-libpciaccess")

build(){
  go_src_dir
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib32 \
    -D udev=false \
    -D man-pages=disabled \
    -D etnaviv=disabled \
    -D freedreno=disabled \
    -D vc4=disabled \
    -D valgrind=disabled
  meson compile -C build
  meson install -C build --destdir ${pkgdir}

  rm -rf ${pkgdir}/usr/{include,share,bin}
  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s libdrm ${pkgdir}/usr/share/licenses/${pkgname}
}
