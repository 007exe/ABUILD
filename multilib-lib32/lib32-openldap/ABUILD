pkgname=lib32-openldap
pkgver=2.6.6
pkgbuild=1
arch=("auto")

shortdesc=("Lightweight Directory Access Protocol (LDAP) client and server (32-bit).")

source=("http://www.openldap.org/software/download/OpenLDAP/openldap-release/openldap-${pkgver}.tgz")

tags=("lib32 net-misc")

build_deps=("lib32-glibc lib32-openssl lib32-gcc-libs")

adddep=("lib32-glibc lib32-openssl openldap")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc \
    --mandir=/usr/share/man \
    --localstatedir=/var/lib/openldap \
    --enable-crypt \
    --enable-dynamic \
    --with-threads \
    --disable-wrappers \
    --disable-spasswd \
    --without-cyrus-sasl \
    --disable-bdb \
    --disable-hdb
  cd include
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  cd ../libraries
  make depend
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  rm -rf ${pkgdir}/usr/{include,libexec,share,bin} ${pkgdir}/etc
  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s openldap ${pkgdir}/usr/share/licenses/${pkgname}
}
