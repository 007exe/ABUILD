pkgname=lib32-libsamplerate
pkgver=0.2.2
pkgbuild=1
arch=("auto")

shortdesc=("An audio sample rate conversion library (32-bit).")
longdesc=("libsamplerate is a sample rate converter for audio.")

source=("https://github.com/libsndfile/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("lib32 media-libs")

build_deps=("cmake lib32-alsa-lib lib32-libsndfile lib32-opus lib32-glibc")

adddep=("libsamplerate")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  cmake -S . -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib32 \
    -DCMAKE_BUILD_TYPE='None' \
    -DBUILD_SHARED_LIBS=ON \
    -Wno-dev
  make VERBOSE=1 -C build

  ./configure
    --prefix=/usr \
    --libdir=/usr/lib32
  make

  make DESTDIR=${pkgdir} install -C build

  rm -rfv ${pkgdir}/usr/{include,share,bin}
  install -vDm 644 {AUTHORS,NEWS,README.md,ChangeLog} -t ${pkgdir}/usr/share/doc/${pkgname}
  install -vDm 644 COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}
}
