pkgname=lib32-libsm
pkgver=1.2.3
pkgbuild=1
arch=("auto")

shortdesc=("X11 Session Management library (32-bit).")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

source=("http://xorg.freedesktop.org/archive/individual/lib/libSM-${pkgver}.tar.bz2")

tags=("libs xorg-libs")

build_deps=("lib32-libice lib32-util-linux lib32-gcc-libs xorg-util-macros xorgproto xtrans")

adddep=("libsm")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  rm -rf ${pkgdir}/usr/{include,share}

  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s libsm ${pkgdir}/usr/share/licenses/${pkgname}
}
