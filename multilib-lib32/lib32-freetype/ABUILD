pkgname=lib32-freetype
pkgver=2.12.1
pkgbuild=1
arch=("auto")

shortdesc=("Font rasterization library (32-bit).")
longdesc=("The FreeType2 package contains a library which allows applications to properly render TrueType fonts.")

source=("http://downloads.sourceforge.net/sourceforge/freetype/freetype-${pkgver}.tar.xz")

tags=("lib32 media-libs")

build_deps=("meson freetype lib32-zlib lib32-bzip2 lib32-libpng lib32-harfbuzz lib32-brotli")

# lib32-zlib lib32-bzip2 lib32-libpng lib32-harfbuzz lib32-brotli
adddep=("freetype")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export CXX="g++ -m32"
  export PKG_CONFIG="i686-pc-linux-gnu-pkg-config"
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  rm -r ${pkgdir}/usr/include
}
