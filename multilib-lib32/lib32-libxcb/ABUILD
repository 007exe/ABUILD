pkgname=lib32-libxcb
pkgver=1.15
pkgbuild=1
arch=("auto")

shortdesc=("X11 client-side library (32-bit).")
longdesc=("The libxcb package provides an interface to the X Window System protocol, which replaces the current Xlib interface. Xlib can also use XCB as a transport layer, allowing software to make requests and receive responses with both.")

source=("https://xorg.freedesktop.org/archive/individual/lib/libxcb-${pkgver}.tar.xz")

tags=("lib32 xorg-libs")

build_deps=("lib32-glibc lib32-libxdmcp lib32-libxau lib32-gcc-libs pkgconf libxslt python xorg-util-macros autoconf xorgproto")

adddep=("lib32-glibc lib32-libxdmcp lib32-libxau libxcb")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  export CFLAGS="${CFLAGS} -O1"
  ./autogen.sh \
    --prefix=/usr \
    --enable-xinput \
    --enable-xkb \
    --libdir=/usr/lib32 \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  rm -rf ${pkgdir}/usr/{include,share}
  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s libxcb ${pkgdir}/usr/share/licenses/${pkgname}
}
