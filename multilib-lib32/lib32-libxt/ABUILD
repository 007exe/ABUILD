pkgname=lib32-libxt
pkgver=1.2.1
pkgbuild=1
arch=("auto")

shortdesc=("X11 toolkit intrinsics library (32-bit).")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

source=("http://xorg.freedesktop.org/archive/individual/lib/libXt-${pkgver}.tar.bz2")

tags=("lib32 xorg-libs")

build_deps=("lib32-libsm lib32-libx11 lib32-gcc-libs xorg-util-macros")

adddep=("libxt")

build() {
  go_src_dir
  burn_patches
  export CC="gcc -m32"
  export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  rm -rf ${pkgdir}/usr/{include,share}

  mkdir -p ${pkgdir}/usr/share/licenses
  ln -s libxt ${pkgdir}/usr/share/licenses/${pkgname}
}
