pkgname=gparted
pkgver=1.5.0
pkgbuild=1
arch=("auto")

shortdesc=("A Partition Magic clone, frontend to GNU Parted.")

source=("https://downloads.sourceforge.net/project/${pkgname}/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("sys-block apps")

# NOTE: Бошльшая часть зависчимостей является опциональными но мы их всё равно включим дабы gparted не потерял функциональности
adddep=("parted gtkmm3
dosfstools jfsutils f2fs-tools btrfs-progs exfatprogs ntfs-3g reiserfsprogs udftools xfsprogs nilfs-utils polkit gpart mtools xorg-xhost")

build_deps=("${adddep} intltool itstool yelp-tools polkit")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --libdir=/usr/lib \
    --enable-online-resize \
    --enable-libparted-dmraid \
    --enable-xhost-root
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -D -m0644 org.gnome.gparted.policy ${pkgdir}/usr/share/polkit-1/actions/org.gnome.gparted.policy
}
