pkgname=parted
pkgver=3.4
pkgbuild=1
arch=('auto')

shortdesc="Flexible partitioning tool"
longdesc="GNU Parted is a program that allows you to create, destroy, resize, move and copy hard disk partitions. This is useful for creating space for new operating systems, reorganising disk usage, and copying data to new hard disks."

tags=('base sys-apps')

source=("http://ftp.gnu.org/gnu/parted/${pkgname}-${pkgver}.tar.xz")

build_deps='glibc util-linux-ng'

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-rpath
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
