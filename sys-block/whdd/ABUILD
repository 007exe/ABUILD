pkgname=whdd
pkgver=3.0.1
pkgbuild=1
arch=("auto")

shortdesc=("Diagnostic and recovery tool for block devices (near to replace MHDD for Linux).")

source=("https://github.com/whdd/whdd/archive/${pkgver}.tar.gz")

tags=("sys-block utils")

build_deps=("ncurses dialog")

adddep=("ncurses dialog")

# NOTE: Это опциональные зависимости
removedep=("smartmontools")

build(){
  go_src_dir
  make -j${numjobs}
  install -D -m 755 ${pkgname} ${pkgdir}/usr/bin/${pkgname}
}
