pkgname=terminator
pkgver=2.1.3
pkgbuild=1
arch=("auto")

shortdesc=("Terminal emulator that supports tabs and grids.")

source=("https://github.com/gnome-terminator/terminator/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("x11-terms apps")

adddep=("gsettings-desktop-schemas libkeybinder3 libnotify python-cairo python-configobj
dbus-python python-psutil python-gobject vte3 xdg-utils")

build_deps=("${adddep} intltool python-pytest-runner python-setuptools python-wheel")

build(){
  go_src_dir
  burn_patches
  python setup.py build
  python setup.py install --skip-build --root=${pkgdir} --optimize=1
  rm -f ${pkgdir}/usr/share/icons/hicolor/icon-theme.cache
}
