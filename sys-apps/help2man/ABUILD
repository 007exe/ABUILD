pkgname=help2man
pkgver=1.48.3
pkgbuild=1
arch="auto"

shortdesc=("Create simple man pages from --help output")
longdesc=("help2man is a script to create simple man pages from the --help and --version output of programs.")

source=("https://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.xz")

tags="develop dev-util"

build_deps="perl-locale-gettext"

adddep="bash perl-locale-gettext"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --mandir=/usr/share/man \
    --infodir=/usr/share/info
  make
  make DESTDIR=${pkgdir} install
}

