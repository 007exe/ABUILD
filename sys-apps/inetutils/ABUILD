pkgname=inetutils
pkgver=2.2
pkgbuild=1
arch=("auto")

shortdesc=("A collection of common network programs")
longdesc=("Inetutils is a collection of common network programs. It includes: An inetd meta-server. An ftp client and server. A telnet client and server. An rsh client and server. An rlogin client and server. A tftp client and server. A talk client and server. A syslogd daemon. Network tools: ping, ping6, traceroute, whois. Admin tools: hostname, dnsdomainname, ifconfig, logger And more... Most of them are improved versions of programs originally from BSD. Some others are original versions, written from scratch.")

tags=("network sys-apps")

source=("http://ftp.gnu.org/gnu/inetutils/${pkgname}-${pkgver}.tar.xz")

build_deps="gcc linux-pam help2man"

config_files="etc/xinetd.d/telnet
etc/xinetd.d/talk
etc/xinetd.d/rlogin
etc/xinetd.d/rsh
etc/pam.d/rlogin
etc/pam.d/rsh"

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --libexec=/usr/bin \
    --libdir=/usr/lib$LIBDIRSUFFIX \
    --localstatedir=/var \
    --sysconfdir=/etc \
    --without-wrap \
    --with-pam \
    --enable-ftp \
    --enable-ftpd \
    --enable-telnet \
    --enable-telnetd \
    --enable-talk \
    --enable-talkd \
    --enable-rlogin \
    --enable-rlogind \
    --enable-rsh \
    --enable-rshd \
    --enable-rcp \
    --enable-hostname \
    --enable-dnsdomainname \
    --disable-rexec \
    --disable-rexecd \
    --disable-tftp \
    --disable-tftpd \
    --disable-ping \
    --disable-ping6 \
    --disable-logger \
    --disable-syslogd \
    --disable-inetd \
    --disable-whois \
    --disable-uucpd \
    --disable-ifconfig \
    --disable-traceroute
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}

after_build(){
  go_src_dir

  chmod -s "${pkgdir}"/usr/bin/{rcp,rlogin,rsh}

  install -D -m644 "${filedir}/xinetd.d/telnet.xinetd" "${pkgdir}/etc/xinetd.d/telnet"
  install -D -m644 "${filedir}/xinetd.d/talk.xinetd" "${pkgdir}/etc/xinetd.d/talk"
  install -D -m644 "${filedir}/xinetd.d/rlogin.xinetd" "${pkgdir}/etc/xinetd.d/rlogin"
  install -D -m644 "${filedir}/xinetd.d/rsh.xinetd" "${pkgdir}/etc/xinetd.d/rsh"

  install -D -m644 "${filedir}/pam/rlogin.pam" "${pkgdir}/etc/pam.d/rlogin"
  install -D -m644 "${filedir}/pam/rsh.pam" "${pkgdir}/etc/pam.d/rsh"

  install -D -m644 "${filedir}/init.d/ftpd" "${pkgdir}/etc/init.d/ftpd"
  install -D -m644 "${filedir}/init.d/rlogind" "${pkgdir}/etc/init.d/rlogind"
  install -D -m644 "${filedir}/init.d/rshd" "${pkgdir}/etc/init.d/rshd"
  install -D -m644 "${filedir}/init.d/telnet" "${pkgdir}/etc/init.d/telnet"
}
