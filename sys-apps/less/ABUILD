pkgname=less
pkgver=633
pkgbuild=1
arch=("auto")

shortdesc=("A terminal based program for viewing text files.")

source=("http://www.greenwoodsoftware.com/${pkgname}/${pkgname}-${pkgver}.tar.gz")

tags=("base sys-apps")

build_deps=("glibc pcre2 ncurses")

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --with-regex=pcre2
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
