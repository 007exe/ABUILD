pkgname=grep
pkgver=3.10
pkgbuild=1
arch=("auto")

shortdesc=("A string search utility")

tags=("base sys-apps")

source=("https://ftp.gnu.org/gnu/grep/grep-${pkgver}.tar.xz")

build_deps=("glibc texinfo pcre")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
