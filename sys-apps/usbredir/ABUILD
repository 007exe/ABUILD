pkgname=usbredir
pkgver=0.13.0
pkgbuild=1
arch=("auto")

shortdesc=("USB traffic redirection protocol.")

tags=("sys-apps apps")

source=("https://spice-space.org/download/usbredir/${pkgname}-${pkgver}.tar.xz")

build_deps=("libusb glib2 meson")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
