pkgname=hwinfo
pkgver=22.1
pkgbuild=1
arch=("auto")

shortdesc=("Hardware detection tool from openSUSE.")

source=("https://github.com/openSUSE/hwinfo/archive/refs/tags/${pkgver}.tar.gz")

tags=("sys-apps utils")

build_deps=("flex libx86emu sysfsutils perl-xml-parser perl-xml-writer")

adddep=("perl-xml-parser perl-xml-writer libx86emu")

build() {
  go_src_dir
  burn_patches
  echo touch changelog > git2log
  sed -i '/linux\/fs.h/d' src/hd/hd.c
  make -j1 CFLAGS+="-fPIC -I$srcdir/$pkgname/src/hd -w" \
    HWINFO_VERSION=${pkgver} \
    LIBDIR=/usr/lib
  make DESTDIR=${pkgdir} LIBDIR=/usr/lib install
  mv ${pkgdir}/usr/sbin ${pkgdir}/usr/bin
  rmdir ${pkgdir}/sbin
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
