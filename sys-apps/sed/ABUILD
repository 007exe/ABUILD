pkgname=sed
pkgver=4.9
pkgbuild=1
arch=("auto")

shortdesc=("GNU stream editor.")
longdesc=("The Sed package contains a stream editor.")

tags=("base sys-apps")

source=("https://ftp.gnu.org/pub/gnu/sed/${pkgname}-${pkgver}.tar.xz")

build_deps="glibc acl attr gettext acl>=2.3.1 glibc>=2.36"

adddep=("acl attr")

build() {
  go_src_dir
  ./configure \
    --prefix=/usr
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
