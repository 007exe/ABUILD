pkgname=diffutils
pkgver=3.9
pkgbuild=1
arch=("auto")

shortdesc=("Utility programs used for creating patch files.")

source=("https://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.xz")

tags=("base sys-apps")

build_deps=("glibc")

adddep=("bash")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
