pkgname=diffutils
pkgver=3.8
pkgbuild=1
arch=("auto")

shortdesc=("Utility programs used for creating patch files")
longdesc=("The GNU diff utilities finds differences between files. A major use for this package is to make source code patches.")

tags=("console sys-devel")

source=("ftp://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.xz")

build_deps="glibc"

adddep="bash"

build() {
  go_src_dir
  ./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX}
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
