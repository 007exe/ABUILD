pkgname=gawk
pkgver=5.2.2
pkgbuild=1
arch=("auto")

shortdesc=("The Gawk package contains programs for manipulating text files.")

source=("https://ftp.gnu.org/pub/gnu/${pkgname}/${pkgname}-${pkgver}.tar.gz")

tags=("base sys-apps")

build_deps=("glibc readline mpfr gmp")

adddep=("bash")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --without-libsigsegv
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
