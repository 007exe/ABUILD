pkgname=attr
pkgver=2.5.1
pkgbuild=2
arch=("auto")

shortdesc=("Extended attribute support library for ACL support.")
longdesc=("The attr package contains utilities to administer the extended attributes on filesystem objects.")

source=("http://download.savannah.gnu.org/releases/attr/attr-$pkgver.tar.xz")

tags=("base sys-apps")

build_deps=("glibc gettext")

config_files=("etc/xattr.conf")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --enable-shared \
    --enable-lib64
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

# Обратная совместимость
  mkdir -p ${pkgdir}/lib${LIBDIRSUFFIX}
  cp -r ${pkgdir}/usr/lib${LIBDIRSUFFIX} ${pkgdir}
  rm -r ${pkgdir}/lib${LIBDIRSUFFIX}/pkgconfig
  rm ${pkgdir}/lib${LIBDIRSUFFIX}/libattr.a
}
