pkgname=dmidecode
pkgver=3.5
pkgbuild=1
arch=("auto")

shortdesc=("Desktop Management Interface table related utilities.")

source=("https://download.savannah.nongnu.org/releases/${pkgname}/${pkgname}-${pkgver}.tar.xz")

tags=("sys-apps console")

build_deps=("glibc")

build(){
  go_src_dir
  burn_patches
  sed -i "s:sbin:bin:g" Makefile
  make prefix=/usr CFLAGS="${CFLAGS}" LDFLAGS="${LDFLAGS}"
  make prefix=/usr DESTDIR=${pkgdir} install
}
