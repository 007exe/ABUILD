pkgname=pax-utils
pkgver=1.3.3
pkgbuild=1
arch=("auto")

shortdesc=("'ELF utils that can check files for security relevant properties.")
longdesc=("ELF utils that can check files for security relevant properties.")

source=("https://distfiles.gentoo.org/distfiles//${pkgname}-${pkgver}.tar.xz")

tags=("app-misc console")

build_deps=("bash libcap libseccomp python python-pyelftools")

adddep=("bash python-pyelftools")

build(){
  go_src_dir
  burn_patches
  sed -E 's|(  paths =) \[\]|\1 ["/usr/lib"]|g' -i lddtree.py
  ./configure \
    --prefix=/usr \
    --with-caps \
    --with-seccomp \
    --with-python
  make USE_SECCOMP=yes USE_CAP=yes USE_PYTHON=yes
  make DESTDIR=${pkgdir} install
}
