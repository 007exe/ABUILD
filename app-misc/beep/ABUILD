pkgname=beep
pkgver=1.4.12
pkgbuild=1
arch=("auto")

shortdesc=("Advanced PC speaker beeping program.")

source=("https://github.com/spkr-beep/beep/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("app-misc console")

build_deps=("glibc")

build(){
  go_src_dir
  burn_patches
  make
  make DESTDIR=${pkgdir} install
}
