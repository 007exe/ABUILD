pkgname=wayland-utils
pkgver=1.0.0
pkgbuild=1
arch=("auto")

shortdesc=("Wayland tools to display information about current compositor.")
longdesc=("Display information about supported Wayland protocols and current compositor.")

source=("https://gitlab.freedesktop.org/wayland/${pkgname}/-/archive/${pkgname}-${pkgver}/${pkgname}-${pkgname}-${pkgver}.tar.gz")

tags=("utils app-misc")

build_deps=("wayland meson wayland-protocols")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  meson compile -C build
  meson install -C build --destdir ${pkgdir}

  install -Dm644 COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}
}
