pkgname=far2l
pkgver=2.5.0
pkgbuild=1
arch=("auto")

shortdesc=("Linux fork of FAR Manager v2.")

tags=("apps app-misc")

source=("https://github.com/elfmz/far2l/archive/refs/tags/v_${pkgver}.tar.gz")

# smbclient
build_deps="cmake gtkmm3 openssl gvfs spdlog xerces-c fmt uchardet libssh libnfs neon pcre libarchive"

build() {
  go_src_dir
  mkdir build
  cd build
  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_BUILD_TYPE=Release \
    -DUSEWX=yes \
    -DCMAKE_CXX_FLAGS=-w
  make -j${numjobs}
  make DESTDIR=$pkgdir install
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/v_${pkgver}.tar.gz
}
