# ABUILD generated by mkpkg_generator.sh

pkgname=splitvt
pkgver=1.6.6
pkgbuild=2
arch=("auto")

shortdesc=("splitvt (run multiple shells in a single window)")
longdesc=("This program splits the screen into two windows, one above the other, and runs a shell in each one. Splitvt was written by Sam Lantinga.")

tags=("base app-misc")

source=("http://slouken.libsdl.org/projects/splitvt/${pkgname}-${pkgver}.tar.gz")
build_deps="glibc-solibs ncurses"
docs="ANNOUNCE BLURB CHANGES NOTES"

build() {
  go_src_dir
  burn_patches

  sed -i -e "s:/usr/local/bin:${pkgdir}/usr/bin:g" \
         -e "s:/usr/local/man/:${pkgdir}/usr/man/:g" config.c || die

  ./configure || die "configure failed"
  make || die "make failed"

  mkdir -p "${pkgdir}/usr/bin" "${pkgdir}/usr/man/man1"
  make install || die "make install failed"
}
