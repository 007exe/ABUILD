pkgname=networkmanager-pptp
pkgver=1.2.10
pkgbuild=1
arch=("auto")
_pppver=2.4.9

shortdesc=("NetworkManager VPN plugin for PPTP.")
longdesc=("NetworkManager PPTP plugin. Adds support for VPN connections.")

source=("https://gitlab.gnome.org/GNOME/NetworkManager-pptp/-/archive/${pkgver}/NetworkManager-pptp-${pkgver}.tar.gz")

tags=("apps net-vpn")

build_deps=("libsecret ppp=$_pppver intltool python libnma-gtk4 pptpclient")

build() {
  go_src_dir
  burn_patches
  autoreconf -fvi
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib \
    --disable-static \
     --with-gtk4 \
    --with-pppd-plugin-dir=/usr/lib/pppd/$_pppver
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
