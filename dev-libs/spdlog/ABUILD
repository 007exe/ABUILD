pkgname=spdlog
pkgver=1.9.2
pkgbuild=1
arch=('auto')

shortdesc=("Very fast, header-only/compiled, C++ logging library.")
longdesc=("Very fast, header-only/compiled, C++ logging library.")

source=("https://github.com/gabime/spdlog/archive/v$pkgver.tar.gz")

tags="dev-libs libs"

build_deps="cmake fmt"

build() {
  go_src_dir
  burn_patches
  export CFLAGS+=" ${CPPFLAGS}"
  export CXXFLAGS+=" ${CPPFLAGS}"
  cmake -B build \
    -DSPDLOG_BUILD_BENCH=OFF \
    -DSPDLOG_FMT_EXTERNAL=ON \
    -DSPDLOG_BUILD_SHARED=ON \
    -DSPDLOG_BUILD_TESTS=ON \
    -DCMAKE_BUILD_TYPE=None \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib${LIBDIRSUFFIX} \
    -Wno-dev
  make -j${numjobs} -C build
  make -C build DESTDIR="$pkgdir" install
  install -Dm644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname/"
}
