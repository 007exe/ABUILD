pkgname=gmime
pkgver=2.6.23
pkgbuild=1
arch=("auto")

shortdesc=("A C/C++ MIME creation and parser library with support for S/MIME, PGP, and Unix mbox spools.")

source=("https://github.com/jstedfast/gmime/archive/refs/tags/${pkgver}.tar.gz")

tags=("dev-libs libs")

# docbook-utils gtk-sharp-2
build_deps=("glib2 gpgme zlib gobject-introspection gtk-doc git vala")

build() {
  go_src_dir
  burn_patches
  NOCONFIGURE=1 ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --program-prefix=${pkgname} \
    --disable-gtk-doc \
    --enable-mono \
    --enable-smime \
    --disable-static
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
