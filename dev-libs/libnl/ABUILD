pkgname=libnl
pkgver=3.5.0
pkgbuild=2
arch=("auto")

shortdesc=("Library for applications dealing with netlink sockets")
longdesc=("Libnl is a library for applications dealing with netlink sockets. The library provides an interface for raw netlink messaging and various netlink family specific interfaces.")

tags=("dev-libs libs")

source=("https://github.com/thom311/libnl/releases/download/libnl${pkgver//./_}/${pkgname}-${pkgver}.tar.gz")

build_deps="glibc"

config_files="/etc/libnl/classid
/etc/libnl/pktloc"

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --libdir=/usr/lib$LIBDIRSUFFIX \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
