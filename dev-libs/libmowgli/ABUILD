pkgname=libmowgli
pkgver=2.1.0
pkgbuild=1
arch=("auto")

shortdesc=("Performance and usability-oriented extensions to C.")

source=("https://github.com/atheme/libmowgli-2/archive/refs/tags/v${pkgver}.tar.gz")

tags=("libs dev-libs")

build_deps=("glibc")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -D -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/v${pkgver}.tar.gz
}
