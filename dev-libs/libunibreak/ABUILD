pkgname=libunibreak
pkgver=5.0
pkgbuild=1
arch=("auto")

shortdesc=("Line and word breaking library.")
longdesc=("An implementation of the line breaking algorithm as described in Unicode 5.2.0 Standard Annex 14, Revision 24.")

source=("https://github.com/adah1972/libunibreak/archive/libunibreak_${pkgver//./_}.tar.gz")

tags=("libs dev-libs")

build_deps=("glibc make")

build() {
  go_src_dir
  burn_patches
  ./bootstrap
  ./configure \
    --prefix=/usr
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  rm -f ${pkgdir}/usr/lib/*.a
  install -Dm644 LICENCE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
