pkgname=cudnn
pkgver=8.9.2.26
_cudaver=12
pkgbuild=1
arch=("auto")

shortdesc=("NVIDIA CUDA Deep Neural Network library.")

source=("https://developer.download.nvidia.com/compute/cudnn/redist/cudnn/linux-x86_64/cudnn-linux-x86_64-${pkgver}_cuda${_cudaver}-archive.tar.xz")

tags=("dev-libs libs")

#adddep=("cuda>='"${_cudaver}")

build_deps=("${adddep} glibc gcc-libs zlib")

build() {
  go_src_dir
  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}

  mv {include,lib} ${pkgdir}/usr/

  find ${pkgdir}/usr/lib -type f \( -iname "*.a" -or -iname "*.a.*" \) -print0 | while read -rd $'\0' _so_file; do
    chmod 644 "${_so_file}"
  done

  mv LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE

}
