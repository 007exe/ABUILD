pkgname=libisoburn
pkgver=1.5.6
pkgbuild=1
arch=("auto")

shortdesc=("Frontend for libraries libburn and libisofs.")

tags=("libs media-libs")

source=("http://files.libburnia-project.org/releases/${pkgname}-${pkgver}.tar.gz")

adddep=("libburn libisofs readline")

build_deps=("${adddep}")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
