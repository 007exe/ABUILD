pkgname=libedit
pkgver=20210910_3.1
pkgbuild=2
arch=("auto")

shortdesc=("BSD replacement for libreadline.")
longdesc=("Command line editor library providing generic line editing, history, and tokenization functions.")

source=("http://www.thrysoee.dk/editline/libedit-${pkgver/_/-}.tar.gz")

tags=("libs dev-libs")

build_deps=("ncurses glibc")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make V=1
  make DESTDIR=${pkgdir} install

  rm ${pkgdir}/usr/share/man/man3/history.3 # NOTE: Конфликт с readline
  install -Dm 644 ${pkgdir}/usr/share/man/man3/editline.3 ${pkgdir}/usr/share/man/man3/el.3

  install -Dm 644 ChangeLog -t ${pkgdir}/usr/share/doc/${pkgname}
  install -Dm 644 COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}
}
