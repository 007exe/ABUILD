pkgname=libmspack
pkgver=0.10.1alpha
pkgbuild=2
arch=("auto")

shortdesc=("A library for Microsoft compression formats.")
longdesc=("A library for Microsoft compression formats.")

source=("https://github.com/kyz/${pkgname}/archive/v${pkgver}.tar.gz")

tags=("libs dev-libs")

build_deps=("glibc")

build() {
  go_src_dir
  burn_patches
  cd libmspack
  autoreconf -vfi
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
