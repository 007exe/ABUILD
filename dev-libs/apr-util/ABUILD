pkgname=apr-util
pkgver=1.6.1
pkgbuild=3
arch=("auto")

shortdesc=("The Apache Portable Runtime.")
longdesc=("The Apache Portable Runtime Utility Library provides a predictable and consistent interface to underlying client library interfaces.")

source=("https://www.apache.org/dist/apr/apr-util-${pkgver}.tar.bz2")

tags=("dev-libs libs")

build_deps=("apr expat gdbm unixodbc openssl nss sqlite mariadb-libs db postgresql python postgresql-libs openldap")

# NOTE: Это опциональные зависимости
removedep=("gdbm libldap unixodbc mariadb-libs postgresql-libs db sqlite nss openssl")

build() {
  go_src_dir
  burn_patches
  ./buildconf --with-apr=`apr-1-config --srcdir`
  ./configure \
    --prefix=/usr \
    --with-apr=/usr \
    --with-ldap \
    --with-crypto \
    --with-gdbm=/usr \
    --with-sqlite3=/usr \
    --with-nss=/usr \
    --with-odbc=/usr \
    --with-berkeley-db=/usr \
    --with-pgsql=/usr \
    --with-mysql=/usr \
    --with-oracle=/usr \
    --with-openssl=/usr
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
