pkgname=libcroco
pkgver=0.6.13
pkgbuild=2
arch=("auto")

shortdesc=("A CSS parsing library")
longdesc=("Libcroco is a standalone css2 parsing and manipulation library.")

tags=("dev-libs libs")

source=("https://gitlab.gnome.org/Archive/libcroco/-/archive/$pkgver/libcroco-$pkgver.tar.gz")

build_deps="intltool git gtk-doc glib2 libxml2"

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static \
    --enable-gtk-doc
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
