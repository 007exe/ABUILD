pkgname=protobuf
pkglist=("python_protobuf")
pkgver=24.4
pkgbuild=1
arch=("auto")

shortdesc=("Protocol Buffers - Google's data interchange format.")

source=("https://github.com/protocolbuffers/protobuf/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs dev-libs")

adddep=("gcc-libs glibc zlib abseil-cpp")

build_deps=("${adddep} cmake gtest python-build python-installer python-setuptools python-wheel")

build() {
  go_src_dir
  burn_patches
  sed -e 's|c++14|c++17|' -i python/setup.py
  cmake -B build \
    -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_INSTALL_LIBDIR=lib \
    -D CMAKE_BUILD_TYPE=None \
    -D protobuf_BUILD_SHARED_LIBS=ON \
    -D protobuf_USE_EXTERNAL_GTEST=ON \
    -D protobuf_ABSL_PROVIDER=package \
    -D protobuf_BUILD_TESTS=OFF \
    -W no-dev
  cmake --build build -j${numjobs} #--verbose

  ln -rs build src/.libs
  cd python
#  LDFLAGS+=" -L../build" \
  PROTOC=../build/protoc \
  python -m build --wheel --no-isolation

  cd ..
  DESTDIR=${pkgdir} cmake --install build
  install -vDm 644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
  install -vDm 644 editors/protobuf-mode.el -t ${pkgdir}/usr/share/emacs/site-lisp/
  install -vDm 644 editors/proto.vim -t ${pkgdir}/usr/share/vim/vimfiles/syntax
}

# python_protobuf ########################################################################################################

python_protobuf(){
  pkgname=python-protobuf
  shortdesc=("Python 3 bindings for Google Protocol Buffers.")
  tags=("libs dev-python")
  adddep=("protobuf=${pkgver} python")
}

python_protobuf_prep() {
  go_src_dir
  python -m installer --destdir=${pkgdir} python/dist/*.whl
  install -vDm 644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}
