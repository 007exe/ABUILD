pkgname=protobuf
pkglist=("python_protobuf")
pkgver=21.12
pkgbuild=2
arch=("auto")

shortdesc=("Protocol Buffers - Google's data interchange format.")

source=("https://github.com/protocolbuffers/protobuf/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs dev-libs")

adddep=("gcc-libs glibc zlib")

build_deps=("${adddep} python-setuptools cmake gtest")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -Dprotobuf_USE_EXTERNAL_GTEST=ON \
    -Dprotobuf_BUILD_SHARED_LIBS=ON
  cmake --build build -j${numjobs}

  ln -rs build src/.libs
  cd python
  PROTOC=../build/protoc \
  python -m build --wheel --no-isolation

  cd ..
  DESTDIR=${pkgdir} cmake --install build
  install -vDm 644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
  install -vDm 644 editors/protobuf-mode.el -t ${pkgdir}/usr/share/emacs/site-lisp/
  install -vDm 644 editors/proto.vim -t ${pkgdir}/usr/share/vim/vimfiles/syntax
}

#########################################################################################################

python_protobuf(){
  pkgname=python-protobuf
  shortdesc=("Python 3 bindings for Google Protocol Buffers.")
  tags=("libs dev-python")
  adddep=("protobuf=${pkgver} python")
}

python_protobuf_prep() {
  go_src_dir
  python -m installer --destdir=${pkgdir} python/dist/*.whl
  install -vDm 644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}
