pkgname=libpipeline
pkgver=1.5.3
pkgbuild=2
arch=("auto")

shortdesc="Library for manipulating pipelines of subprocesses"
longdesc="Development files for libpipeline, a library for manipluating pipelines of subprocesses"

tags=("libs dev-libs")

source=("http://download.savannah.gnu.org/releases/libpipeline/${pkgname}-${pkgver}.tar.gz")

build_deps="make gcc binutils glibc pkg-config check"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib$LIBDIRSUFFIX
  make DESTDIR=${pkgdir} install
}
