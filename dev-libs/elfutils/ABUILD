pkgname=elfutils
pkgver=0.190
pkgbuild=1
arch=("auto")

shortdesc=("Handle ELF object files and DWARF debugging information.")

source=("https://sourceware.org/ftp/elfutils/${pkgver}/elfutils-${pkgver}.tar.bz2")

tags=("develop dev-libs")

adddep=("gcc-libs glibc libarchive libmicrohttpd sqlite bzip2 curl xz zlib zstd")

build_deps=("${adddep}")

build() {
  go_src_dir
  burn_patches
  sed -e 's/run-backtrace-native.sh//g' -i tests/Makefile.am
  autoreconf -fiv
  CFLAGS+=" -g"
  CFLAGS+=" -ffat-lto-objects"
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --program-prefix="eu-" \
    --enable-deterministic-archives
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -vDm 644 {AUTHORS,ChangeLog,NEWS,NOTES,README} -t ${pkgdir}/usr/share/doc/${pkgname}
}
