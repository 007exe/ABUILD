pkgname=wayland-protocols
pkgver=1.27
pkgbuild=1
arch=("noarch")

shortdesc=("Specifications of extended Wayland protocols.")
longdesc=("Wayland-protocols contains Wayland protocols that adds functionality not available in the Wayland core protocol.")

source=("https://gitlab.freedesktop.org/wayland/${pkgname}/-/releases/${pkgver}/downloads/${pkgname}-${pkgver}.tar.xz")

tags=("dev-libs libs")

build_deps=("wayland meson ninja")

build() {
  go_src_dir
  burn_patches
  meson build \
    --prefix=/usr \
    --buildtype=release
  ninja -C build
  DESTDIR=${pkgdir} ninja -C build install

  install -Dt ${pkgdir}/usr/share/licenses/${pkgname} -m 644 COPYING
}
