pkgname=libgles
pkgver=1.6.0
pkgbuild=1
arch=("auto")

shortdesc=("The GL Vendor-Neutral Dispatch library.")

source=("https://gitlab.freedesktop.org/glvnd/libglvnd/-/archive/v${pkgver}/libglvnd-v${pkgver}.tar.gz")

tags=("libs dev-libs")

adddep=("libxext mesa")

build_deps=("${adddep} libxext libx11 xorgproto python meson")

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D gles1=false
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
}
