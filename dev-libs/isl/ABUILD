pkgname=isl
pkgver=0.24
pkgbuild=1
arch=("auto")

shortdesc=("Library for manipulating sets and relations of integer points bounded by linear constraints")

tags=("develop sys-devel")

source=("http://isl.gforge.inria.fr/$pkgname-$pkgver.tar.bz2")

build_deps="gmp glibc"


BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --docdir=/usr/share/doc --mandir=/usr/share/man --sysconfdir=/etc"
INSTALL_KEYS="DESTDIR=$pkgdir"

after_build() {
#Фикс совместимости
cd $pkgdir/usr/lib$LIBDIRSUFFIX
  ln -s libisl.so.23 libisl.so.22

  install -dm755 $pkgdir/usr/share/gdb/auto-load/usr/lib${LIBDIRSUFFIX}/
  mv $pkgdir/{,/usr/share/gdb/auto-load/}usr/lib${LIBDIRSUFFIX}/libisl.so.23.1.0-gdb.py
}
