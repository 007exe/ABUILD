pkgname=js78
pkgver=78.15.0
pkgbuild=3
arch=("auto")

shortdesc=("JavaScript interpreter and libraries - Version 78.")

source=("https://archive.mozilla.org/pub/firefox/releases/${pkgver}esr/source/firefox-${pkgver}esr.source.tar.xz")

tags=("libs dev-libs")

adddep=("gcc-libs readline zlib")

build_deps=("${adddep} zip autoconf2.13 python-setuptools python-psutil rust llvm clang lld")

build() {
  go_src_dir
  burn_patches
# First remove an obsolete flag in python code, that has been removed in python-3.11:
  grep -rl \"rU\" | xargs sed -i 's/"rU"/"r"/'
  COMPRESSZST+=(--long)
  mkdir -p ${srcdir}/mozbuild

  cat >../mozconfig <<END
ac_add_options --enable-application=js
mk_add_options MOZ_OBJDIR=${PWD@Q}/obj
ac_add_options --prefix=/usr
ac_add_options --enable-release
ac_add_options --enable-hardening
ac_add_options --enable-optimize
ac_add_options --enable-rust-simd
ac_add_options --enable-linker=lld
ac_add_options --disable-debug
ac_add_options --disable-debug-symbols
ac_add_options --disable-jemalloc
ac_add_options --disable-strip
# System libraries
ac_add_options --with-system-zlib
ac_add_options --without-system-icu
# Features
ac_add_options --enable-readline
ac_add_options --enable-shared-js
ac_add_options --enable-tests
ac_add_options --with-intl-api
END

  export MOZ_NOSPAM=1
  export MOZBUILD_STATE_PATH=${srcdir}/mozbuild

  cat >.mozconfig ../mozconfig - <<END
ac_add_options --enable-profile-generate=cross
END

  ./mach build
  (
    local js="$PWD/obj/dist/bin/js"
    export LLVM_PROFILE_FILE="$PWD/js-%p-%m.profraw"

    cd js/src/octane
    "$js" run.js

    cd ../../../third_party/webkit/PerformanceTests/ARES-6
    "$js" cli.js

    cd ../SunSpider/sunspider-0.9.1
    "$js" sunspider-standalone-driver.js
  )

  llvm-profdata merge -o merged.profdata *.profraw

  stat -c "Profile data found (%s bytes)" merged.profdata
  test -s merged.profdata

  ./mach clobber

  cat >.mozconfig ../mozconfig - <<END
ac_add_options --enable-lto=cross
ac_add_options --enable-profile-use=cross
ac_add_options --with-pgo-profile-path=${PWD@Q}/merged.profdata
END

  ./mach build

  cd obj
  make -C js/src check-jstests check-jit-test \
    JSTESTS_EXTRA_ARGS="${jstests_extra_args[*]}" \
    JITTEST_EXTRA_ARGS="${jittest_extra_args[*]}" \
    JITTEST_TEST_ARGS="${jittest_test_args[*]}"

  make DESTDIR=${pkgdir} install
  rm ${pkgdir}/usr/lib/*.ajs
  find ${pkgdir}/usr/{lib/pkgconfig,include} -type f -exec chmod -c a-x {} +
}
