pkgname=ocl-icd
pkgver=2.3.1
pkgbuild=2
arch=("auto")

shortdesc=("OpenCL ICD Bindings.")
longdesc=("Alternative to vendor specific OpenCL ICD loaders.")

source=("https://github.com/OCL-dev/${pkgname}/archive/v${pkgver}.tar.gz")

tags=("dev-libs libs")

build_deps=("ruby mesa xmlto asciidoc opencl-headers>=2.1 glibc")

build() {
  go_src_dir
  burn_patches
  autoreconf -fiv
  CFLAGS+=' -fcommon' # https://wiki.gentoo.org/wiki/Gcc_10_porting_notes/fno_common
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/ocl-icd
  install -m644 COPYING ${pkgdir}/usr/share/licenses/ocl-icd/
}

