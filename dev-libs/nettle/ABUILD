pkgname=nettle
pkgver=3.9
pkgbuild=1
arch=("auto")

shortdesc=("A low-level cryptographic library.")

source=("http://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.gz")

tags=("dev-libs libs")

build_deps=("gmp")

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
