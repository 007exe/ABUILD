pkgname=mpfr
_pkgver=4.2.0
_patchver=4
pkgver=${_pkgver}.p${_patchver}
pkgbuild=1
arch=("auto")

shortdesc=("Multiple-precision floating-point library.")

source=("https://ftp.gnu.org/gnu/mpfr/mpfr-${_pkgver}.tar.xz")

tags=("dev-libs libs")

adddep=("glibc gmp")

build_deps=("${adddep}")

build() {
  go_src_dir
  burn_patches
  autoreconf -fiv
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --enable-thread-safe \
    --enable-shared
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
