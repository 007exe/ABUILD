pkgname=mpfr
pkgver=4.1.0
pkgbuild=4
arch=("auto")

shortdesc=("Multiple-precision floating-point computations with correct rounding")
longdesc=("The MPFR library is a C library for multiple-precision floating-point computations with correct rounding.")

tags=("dev-libs libs")

build_deps="gmp"

source=("https://ftp.gnu.org/gnu/mpfr/mpfr-${pkgver}.tar.xz")

build() {
  go_src_dir
  burn_patches
#  autoreconf -fiv
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --enable-thread-safe \
    --enable-shared
  make DESTDIR="$pkgdir" install
}
