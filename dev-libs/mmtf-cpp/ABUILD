pkgname=mmtf-cpp
pkgver=1.0.0
pkgbuild=1
arch=("auto")

shortdesc=("The pure C++ implementation of the MMTF API, decoder and encoder.")
longdesc=("The pure C++ implementation of the MMTF API, decoder and encoder.")

source=("https://github.com/rcsb/mmtf-cpp/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs dev-libs")

# msgpack-cxx
build_deps=("cmake")

build() {
  cd ${srcdir}
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
  install -Dm644 ${pkgname}-${pkgver}/LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}
