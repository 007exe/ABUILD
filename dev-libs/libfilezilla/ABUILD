pkgname=libfilezilla
pkgver=0.45.0
pkgbuild=1
arch=("auto")

shortdesc=("Small and modern C++ library, offering some basic functionality to build high-performing, platform-independent programs.")

tags=("libs dev-libs")

source=("https://download.filezilla-project.org/libfilezilla/libfilezilla-${pkgver}.tar.xz")

adddep=("glibc gcc-libs nettle gnutls")

build_deps=("${adddep} clang")

build() {
  go_src_dir
  burn_patches
  export CXX=clang++
  export CC=clang
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
