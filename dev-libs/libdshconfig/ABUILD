pkgname=libdshconfig
pkgver=0.20.13
pkgbuild=1
arch=("auto")

shortdesc=("Library for parsing dsh-style configuration files. Required by dsh and other applications.")

source=("https://www.netfort.gr.jp/~dancer/software/downloads/${pkgname}-${pkgver}.tar.gz")

tags=("libs dev-libs")

build_deps=("glibc")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
