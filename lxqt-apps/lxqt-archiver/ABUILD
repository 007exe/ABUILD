pkgname=lxqt-archiver
pkgver=0.6.0
pkgbuild=1
arch=("auto")

shortdesc=("Qt GUI File Archiver.")
longdesc=("A simple & lightweight desktop-agnostic Qt file archiver.")

source=("https://github.com/lxqt/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("apps lxqt-apps")

build_deps=("libfm-qt qt5-x11extras glib2 json-glib libfm-qt cmake qt5-tools lxqt-build-tools")

# NOTE: Это опциональная зависимосить
removedep=("libarchive")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_BUILD_TYPE=None \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DCMAKE_INSTALL_LIBDIR=lib
  make -C build -j${numjobs}
  make -C build DESTDIR=${pkgdir} install
}
