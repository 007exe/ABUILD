pkgname=cabextract
pkgver=1.11
pkgbuild=1
arch=("auto")

shortdesc=("A program to extract Microsoft cabinet (.CAB) files.")

tags=("console app-arch")

source=("https://cabextract.org.uk/${pkgname}-${pkgver}.tar.gz")

build_deps=("glibc")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --mandir=/usr/share/man \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
