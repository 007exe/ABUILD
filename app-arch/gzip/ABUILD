pkgname=gzip
pkgver=1.11
pkgbuild=1
arch=("auto")

shortdesc=("GNU compression utility.")
longdesc=("The Gzip package contains programs for compressing and decompressing files.")

source=("https://ftp.gnu.org/pub/gnu/gzip/gzip-$pkgver.tar.xz")

tags=("base app-arch")

build_deps=("glibc")

adddep=("bash")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
