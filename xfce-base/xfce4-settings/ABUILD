pkgname=xfce4-settings
pkgver=4.18.1
pkgbuild=1
arch=("auto")

shortdesc=("Settings manager of the Xfce desktop.")
longdesc=("The Xfce4 Settings package contains a collection of programs that are useful for adjusting your Xfce preferences.")

source=("https://archive.xfce.org/src/xfce/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2")

tags=("xfce xfce-base")

build_deps=("exo garcon libxfce4ui xfconf libnotify libcanberra
colord libxklavier intltool xf86-input-libinput")

adddep=("adwaita-icon-theme gnome-themes-extra libcanberra")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --disable-static \
    --enable-xrandr \
    --enable-xcursor \
    --enable-libnotify \
    --enable-libxklavier \
    --enable-pluggable-dialogs \
    --enable-xrandr \
    --enable-upower-glib \
    --enable-libnotify \
    --enable-gio-unix \
    --enable-xcursor \
    --enable-sound-settings \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
