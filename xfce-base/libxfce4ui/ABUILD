pkgname=libxfce4ui
pkgver=4.16.1
pkgbuild=2
arch=("auto")

shortdesc=("Commonly used Xfce widgets among Xfce applications.")
longdesc=("The libxfce4ui package contains GTK widgets that are used by other Xfce applications.")

source=("https://archive.xfce.org/src/xfce/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2")

tags=("xfce xfce-base")

build_deps=("libxfce4util gtk3 xfconf libsm startup-notification libgtop libepoxy intltool gobject-introspection vala")

adddep=("hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --disable-debug \
    --disable-gladeui2 \
    --with-vendor-info='AgiliaLinux'
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
