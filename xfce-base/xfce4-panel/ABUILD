pkgname=xfce4-panel
pkgver=4.18.0
pkgbuild=1
arch=("auto")

shortdesc=("Panel for the Xfce desktop environment.")

source=("https://archive.xfce.org/src/xfce/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2")

tags=("xfce xfce-base")

adddep=("exo garcon libxfce4ui xfconf libwnck3 libdbusmenu-gtk3 hicolor-icon-theme desktop-file-utils")

build_deps=("${adddep} intltool gobject-introspection vala")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --disable-static \
    --enable-gio-unix \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
