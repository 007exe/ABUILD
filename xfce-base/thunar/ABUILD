pkgname=thunar
pkgver=4.18.6
pkgbuild=1
arch=("auto")

shortdesc=("Modern, fast and easy-to-use file manager for Xfce.")

tags=("xfce xfce-base")

source=("https://archive.xfce.org/src/xfce/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2")

addep=("desktop-file-utils libexif hicolor-icon-theme libnotify pcre2 libgudev exo libxfce4util libxfce4ui libpng thunar-volman")

build_deps=("${adddep} intltool gobject-introspection xfce4-panel")

removedep=("xfce4-panel")

build() {
  go_src_dir
  burn_patches
# Отключим установку сервиса systemd
  sed -i 's/\tinstall-systemd_userDATA/\t/' Makefile.in
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static \
    --sysconfdir=/etc \
    --enable-gio-unix \
    --enable-gudev \
    --enable-notifications \
    --enable-exif \
    --enable-pcre \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
