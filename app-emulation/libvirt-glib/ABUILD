pkgname=libvirt-glib
pkgver=4.0.0
pkgbuild=1
arch=("auto")

shortdesc=("GLib bindings for libvirt.")

source=("https://libvirt.org/sources/glib/${pkgname}-${pkgver}.tar.xz")

tags=("libs app-emulation")

adddep=("libvirt libcap-ng")

build_deps=("${adddep} meson intltool gobject-introspection vala python")

build() {
  go_src_dir
  burn_patches
  meson setup build \
    --prefix=/usr \
    --libdir=/usr/lib \
    --buildtype=plain
  ninja -C build
  meson install -C build --destdir ${pkgdir}
}
