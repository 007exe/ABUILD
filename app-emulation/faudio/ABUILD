pkgname=faudio
pkgver=23.03
pkgbuild=1
arch=("auto")

shortdesc=("XAudio2 reimplementation.")

source=("https://github.com/FNA-XNA/FAudio/archive/${pkgver}.tar.gz")

tags=("app-emulation apps")

build_deps=("cmake ninja sdl2 gst-libav")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -G Ninja \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DGSTREAMER=ON
  ninja -C build
  DESTDIR=${pkgdir} ninja -C build install
  install -Dm644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
