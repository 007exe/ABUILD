pkgname=xorg-iceauth
pkgver=1.0.8
pkgbuild=1
arch=("auto")

shortdesc=("ICE authority file utility")
longdesc=("The Xorg applications provide the expected applications available in previous X Window implementations.")

tags=('x11-apps xserver')

build_deps="xorg-util-macros xorgproto"

source=("http://xorg.freedesktop.org/archive/individual/app/iceauth-${pkgver}.tar.bz2")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
