pkgname=xorg-sessreg
pkgver=1.1.2
pkgbuild=1
arch=("auto")

shortdesc=("Register X sessions in system utmp/utmpx databases")
longdesc=("The Xorg applications provide the expected applications available in previous X Window implementations.")

tags=("x11-apps xserver")

build_deps="gcc "

source=("http://xorg.freedesktop.org/archive/individual/app/sessreg-${pkgver}.tar.gz")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
