pkgname=python-poetry
pkgver=1.1.13
pkgbuild=2
arch=("auto")

shortdesc=("Python dependency management and packaging made easy.")
longdesc=("Python dependency management and packaging made easy.")

_pkgname=poetry
_archive="$_pkgname-$pkgver"
source=("https://github.com/$pkgname/$_pkgname/archive/$pkgver/$_archive.tar.gz")

tags=("libs dev-python")

build_deps=("python python-m2r python-dephell-argparse python-dephell python-cachecontrol python-html5lib python-packaging python-pexpect python-requests python-tomlkit python-virtualenv python-cleo python-keyring python-lockfile python-pkginfo python-requests-toolbelt python-shellingham python-poetry-core python-cachy")

adddep=("python-cachecontrol python-html5lib python-packaging python-pexpect python-requests python-tomlkit python-virtualenv python-cleo python-keyring python-lockfile python-pkginfo python-requests-toolbelt python-shellingham python-poetry-core python-cachy")

build() {
  go_src_dir
  burn_patches
  dephell deps convert --from pyproject.toml --to setup.py
  install -m0755 -t ./ ${filedir}/poetry-completions-generator

  python setup.py build
  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
  install -Dm0644 -t "$pkgdir/usr/share/licenses/$pkgname/" LICENSE
# install completions, which for some crazy reason hardcode the filename
# used to invoke which is __main__.py if we use python -m poetry, and also
# adds the full directory path???
  ./poetry-completions-generator completions bash |
    sed "#$srcdir#d" |
    install -Dm644 /dev/stdin "$pkgdir/usr/share/bash-completion/completions/poetry"
  ./poetry-completions-generator completions zsh |
    sed "#$srcdir#d" |
    install -Dm644 /dev/stdin "$pkgdir/usr/share/zsh/site-functions/_poetry"
  ./poetry-completions-generator completions fish |
    install -Dm644 /dev/stdin "$pkgdir/usr/share/fish/vendor_completions.d/poetry.fish"
}
