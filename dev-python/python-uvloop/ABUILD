pkgname=python-uvloop
pkgver=0.17.0
pkgbuild=1
arch=("auto")

shortdesc=("Ultra fast asyncio event loop.")

source=("https://github.com/MagicStack/uvloop/archive/refs/tags/v${pkgver}.tar.gz")

tags=("libs dev-python")

adddep=("libuv")

build_deps=("python python-setuptools cython")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/v${pkgver}.tar.gz
}

build(){
  go_src_dir
  python setup.py build build_ext --use-system-libuv
  python setup.py install --root=${pkgdir} --optimize=1 --skip-build
  install -Dm 644 LICENSE-APACHE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE-APACHE
  install -Dm 644 LICENSE-MIT ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE-MIT
}
