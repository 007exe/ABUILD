pkgname=python-keyring
pkgve=23.11.0
pkgbuild=1
arch=("auto")

shortdesc=("Store and access your passwords safely.")

source=("https://github.com/jaraco/keyring/archive/refs/tags/v${pkgve}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-jaraco.classes python-jeepney python-secretstorage
python-build python-installer python-setuptools-scm python-wheel")

adddep=("python-jaraco.classes python-jeepney python-secretstorage")

build() {
  go_src_dir
  python -m build
  python -m installer -d ${pkgdir} dist/*.whl
  install -Dm 644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE

  rm -rf ${pkgdir}/usr/lib/python3.10/site-packages/keyring/tests
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета
after_build(){
  go_src_dir
  rm ${srcache}/v${pkgve}.tar.gz
}
