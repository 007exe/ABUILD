pkgname=python-mistune
pkgver=2.0.4
pkgbuild=1
arch=("auto")

shortdesc=("A fast yet powerful Python Markdown parser with renderers and plugins.")

source=("https://github.com/lepture/mistune/archive/refs/tags/v${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-install python-setuptools python-wheel")

build() {
  go_src_dir
  python -m build --wheel --skip-dependency-check --no-isolation
  python -m install --optimize=1 --destdir="$pkgdir" dist/*.whl
  install -vDm 644 README.md -t "$pkgdir/usr/share/doc/${pkgname}/"
  install -vDm 644 LICENSE -t "$pkgdir/usr/share/licenses/${pkgname}/"
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/v${pkgver}.tar.gz
}