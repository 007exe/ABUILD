pkgname=python-pyparsing
pkgver=3.1.1
pkgbuild=1
arch=("auto")

shortdesc=("General parsing module for Python.")

source=("https://github.com/pyparsing/pyparsing/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("dev-python libs")

build_deps=("python python-build python-installer python-flit-core")

build() {
  go_src_dir
  python -m build -nw
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}
