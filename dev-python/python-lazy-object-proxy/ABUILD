pkgname=python-lazy-object-proxy
pkgver=1.7.1
pkgbuild=1
arch=("auto")

shortdesc=("A fast and thorough lazy object proxy.")

source=("https://github.com/ionelmc/python-lazy-object-proxy/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-setuptools-scm")

build() {
  go_src_dir
  burn_patches
  export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
  python setup.py build
  python setup.py install --root=${pkgdir} --optimize=1
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
