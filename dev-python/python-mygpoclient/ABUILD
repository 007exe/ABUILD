pkgname=python-mygpoclient
pkgver=1.9
pkgbuild=1
arch=("auto")

shortdesc=("Python client Library for the gpodder.net web service.")

source=("https://github.com/gpodder/mygpoclient/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python")

build() {
  go_src_dir
  python setup.py build
  python setup.py install --root=${pkgdir} --optimize=1 --skip-build
}
