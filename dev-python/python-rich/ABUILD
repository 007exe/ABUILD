pkgname=python-rich
pkgver=13.3.1
pkgbuild=1
arch=("auto")

shortdesc=("Render rich text, tables, progress bars, syntax highlighting, markdown and more to the terminal.")

source=("https://github.com/willmcgugan/rich/archive/v${pkgver}/rich-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-poetry-core python-wheel
python-colorama python-commonmark python-pygments")

adddep=("python-colorama python-commonmark python-pygments")

build() {
  go_src_dir
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
