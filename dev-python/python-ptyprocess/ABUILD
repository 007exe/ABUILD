pkgname=python-ptyprocess
_pkgname=ptyprocess
pkgver=0.7.0
pkgbuild=1
arch=('auto')

shortdesc=("Run a subprocess in a pseudo terminal")
longdesc=("Launch a subprocess in a pseudo terminal (pty), and interact with both the process and its pty.")

source=("https://pypi.io/packages/source/p/$_pkgname/$_pkgname-$pkgver.tar.gz")

tags="develop dev-python"

build_deps="python python-setuptools"

build() {
  go_src_dir
  python3 setup.py install --root="$pkgdir/" --prefix=/usr --optimize=0
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/python-$_pkgname/LICENSE"
}
