pkgname=python-trio
pkgver=0.22.2
pkgbuild=1
arch=("auto")

shortdesc=("A friendly Python library for async concurrency and I/O.")

source=("https://github.com/python-trio/trio/archive/refs/tags/v${pkgver}.tar.gz")

tags=("libs dev-python")

adddep=("python-async_generator python-attrs python-exceptiongroup python-idna python-outcome python-sniffio python-sortedcontainers")

build_deps=("${adddep} python python-setuptools")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/v${pkgver}.tar.gz
}

build(){
  go_src_dir
  python setup.py build
  python setup.py install -O1 --root=${pkgdir} --skip-build
}
