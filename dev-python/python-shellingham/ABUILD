pkgname=python-shellingham
pkgver=1.5.0.post1
pkgbuild=2
arch=("auto")

shortdesc=("Detect what shell the current Python executable is running in.")

source=("https://github.com/sarugaku/shellingham/archive/${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps="python python-build python-installer python-wheel python-setuptools python>=3.11.1"

build() {
  go_src_dir
  python -m build -wn
  python -m installer -d ${pkgdir} dist/*.whl
  install -Dm0644 -t ${pkgdir}/usr/share/licenses/${pkgname}/ LICENSE
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
