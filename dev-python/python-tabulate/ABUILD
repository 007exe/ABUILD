pkgname=python-tabulate
pkgver=0.8.10
pkgbuild=1
arch=("auto")

shortdesc=("Pretty-print tabular data in Python, a library and a command-line utility.")
longdesc=("C version of reader, parser and emitter for ruamel.yaml derived from libyaml.")

_name=tabulate
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-setuptools python-wheel")

build() {
  go_src_dir
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -vDm 644 README.md -t ${pkgdir}/usr/share/doc/${pkgname}
  install -vDm 644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}/
}
