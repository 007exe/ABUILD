pkgname=python-pydantic
pkgver=1.10.9
pkgbuild=1
arch=("auto")

shortdesc=("Data parsing and validation using Python type hints.")

source=("https://github.com/pydantic/pydantic/archive/v${pkgver}.tar.gz")

tags=("libs dev-python")

# NOTE: Пакет python-typing-extensions это пакет python-typing_extensions

# FIXME: Какого то хрена не находит пакет python-pydantic хотя он присутствует
adddep=("python python-typing_extensions")

build_deps=("${adddep} python python-build python-installer python-setuptools
python-wheel python cython")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/v${pkgver}.tar.gz
}

build() {
  go_src_dir
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -vDm 644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}
