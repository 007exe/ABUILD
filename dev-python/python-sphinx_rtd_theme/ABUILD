pkgname=python-sphinx_rtd_theme
pkgver=1.0.0
pkgbuild=2
arch=("auto")

shortdesc=("Read the Docs theme for Sphinx.")

source=("https://github.com/readthedocs/sphinx_rtd_theme/archive/${pkgver}/sphinx_rtd_theme-${pkgver}.tar.gz")

tags=("libs dev-python")

# nodejs-lts-fermium
build_deps=("python npm python-setuptools-scm python-build python-installer python-wheel
python-sphinx")

adddep=("python-sphinx")

build(){
  go_src_dir
  npm ci
  python setup.py build
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm644 -t ${pkgdir}/usr/share/licenses/${pkgname} LICENSE
}
