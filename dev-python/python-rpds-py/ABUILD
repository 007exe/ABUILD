pkgname=python-rpds-py
pkgver=0.8.8
pkgbuild=1
arch=("auto")

shortdesc=("Python bindings to the Rust rpds crate for persistent data structures.")

source=("https://github.com/crate-py/rpds/archive/refs/tags/v${pkgver}.tar.gz")

tags=("dev-python libs")

adddep=("glibc gcc-libs")

# python-maturin
build_deps=("${adddep} python python-build python-installer")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/v${pkgver}.tar.gz
}

build() {
  go_src_dir
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
}
