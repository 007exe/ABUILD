pkgname=python-fissix
pkgver=21.6.6
pkgbuild=1
arch=('auto')

shortdesc=("Fork of lib2to3 with patch for Python issue33983 support")
longdesc=("Fork of lib2to3 with patch for Python issue33983 support")

#source="https://github.com/jreese/fissix/archive/refs/tags/v${pkgver}.tar.gz"
source="https://files.pythonhosted.org/packages/45/0f/d2d0a61c5b3bb1a2d5e677996ee12f3a3505551f70c3bad17cc1a2a631bb/fissix-${pkgver}.tar.gz"

tags="develop dev-python"

build_deps="python python-setuptools"

build() {
  go_src_dir
  python setup.py build
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}
