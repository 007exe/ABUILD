pkgname=python-gobject
pkgver=3.42.2
pkgbuild=1
arch=("auto")

shortdesc=("Python Bindings for GLib/GObject/GIO/GTK+.")
longdesc=("PyGObject is a Python package which provides bindings for GObject based libraries such as GTK, GStreamer, WebKitGTK, GLib, GIO and many more.")

source=("https://gitlab.gnome.org/GNOME/pygobject/-/archive/${pkgver}/pygobject-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("gobject-introspection python python-cairo gobject-introspection git meson")

adddep=("gobject-introspection")

conflicts=("pygobject-devel")

build() {
  go_src_dir
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  meson compile -C build
  meson install -C build --destdir ${pkgdir}
  python -m compileall -d /usr/lib ${pkgdir}/usr/lib
  python -O -m compileall -d /usr/lib ${pkgdir}/usr/lib
}
