pkgname=python-more-itertools
pkgver=9.0.0
pkgbuild=2
arch=("auto")

shortdesc=("More routines for operating on iterables, beyond itertools.")

source=("https://files.pythonhosted.org/packages/source/m/more-itertools/more-itertools-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-setuptools python-wheel python-flit")

build() {
  go_src_dir
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
