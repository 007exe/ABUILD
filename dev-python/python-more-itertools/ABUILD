pkgname=python-more-itertools
pkgver=8.10.0
pkgbuild=1
arch=("auto")

shortdesc=("Implements a lazy string for python useful for use with get-text")
longdesc=("The itertools library is a gem - you can compose elegant solutions for a variety of problems with its functions. More-itertools is a collection of building blocks, recipes, and routines for working with iterables.")

source=("https://files.pythonhosted.org/packages/source/m/more-itertools/more-itertools-$pkgver.tar.gz")

tags=("libs dev-python")

build_deps=("python python-setuptools")

build() {
  go_src_dir
  python3 setup.py install --root="$pkgdir/" --optimize=0
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
