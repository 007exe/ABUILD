pkgname=python-pastel
pkgver=0.2.1
pkgbuild=4
arch=("auto")

shortdesc=("Bring colors to your terminal.")

_pkgname=pastel
source=("https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/pastel/pastel-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-poetry")

build() {
  go_src_dir
  python -m build -wn
  python -m installer -d ${pkgdir} dist/*.whl
  install -Dm0644 -t ${pkgdir}/usr/share/licenses/${pkgname}/ LICENSE
}
