pkgname=python-pastel
pkgver=0.2.1
pkgbuild=2
arch=("auto")

shortdesc=("Bring colors to your terminal.")
longdesc=("Bring colors to your terminal.")

_pkgname=pastel
source=("https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/${_pkgname}/${_pkgname}-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-dephell python-setuptools python-chardet")

build() {
  go_src_dir
# poetry does not generate correct setup.py, nuke it and recreate from scratch
  dephell deps convert --from pyproject.toml --to setup.py
  python setup.py build
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}
