pkgname=python-exceptiongroup
pkgver=1.1.1
pkgbuild=1
arch=("auto")

shortdesc=("Backport of PEP 654 (exception groups).")

source=("https://github.com/agronholm/exceptiongroup/archive/$pkgver/exceptiongroup-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-wheel python-flit-scm")

build(){
  go_src_dir
  export SETUPTOOLS_SCM_PRETEND_VERSION=${pkgver}
  python -m build -wn
  python -m installer -d ${pkgdir} dist/*.whl
  install -Dm0644 -t ${pkgdir}/usr/share/licenses/${pkgname}/ LICENSE
}
