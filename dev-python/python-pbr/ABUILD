pkgname=python-pbr
pkgver=5.11.0
pkgbuild=1
arch=("auto")

shortdesc=("Python Build Reasonableness.")

source=("https://github.com/openstack-dev/pbr/archive/${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-importlib-metadata python-setuptools")

adddep=("python-setuptools")

build() {
  go_src_dir
  export PBR_VERSION=${pkgver}
  python setup.py build
  python setup.py install -O1 --root=${pkgdir}
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
