pkgname=python-hypothesis
pkgver=6.59.0
pkgbuild=1
arch=("auto")

shortdesc=("A library for property based testing.")

source=("https://pypi.io/packages/source/h/hypothesis/hypothesis-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-setuptools python-wheel
python-attrs python-sortedcontainers python-exceptiongroup")

adddep=("python-attrs python-sortedcontainers python-exceptiongroup")

build(){
  go_src_dir
  python -m build -nw
  python -m installer -d ${pkgdir} dist/*.whl
  rm -rf ${pkgdir}/usr/lib/python*/site-packages/tests
}
