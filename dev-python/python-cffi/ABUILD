pkgname=python-cffi
pkgver=1.15.0
pkgbuild=1
arch=("auto")

shortdesc=("Foreign Function Interface for Python calling C code")
longdesc=("Foreign Function Interface for Python calling C code. The aim of this project is to provide a convenient and reliable way of calling C code from Python. The interface is based on LuaJITs FFI")

source=("https://foss.heptapod.net/pypy/cffi/-/archive/v$pkgver/cffi-v$pkgver.tar.bz2")

tags=("libs dev-python")

build_deps=("python python-setuptools python-pycparser")

adddep=("python-pycparser")

build() {
  go_src_dir
  python setup.py build
  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}
