pkgname=python-myst-parser
pkgver=0.18.1
pkgbuild=1
arch=("auto")

shortdesc=("An extended commonmark compliant parser, with bridges to docutils/sphinx.")
longdesc=("Extended commonmark compliant parser, with bridges to sphinx.")

source=("https://github.com/executablebooks/MyST-Parser/archive/v${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-flit-core python-wheel
python-docutils python-jinja python-markdown-it-py python-mdit_py_plugins
python-typing_extensions python-sphinx python-yaml")

adddep=("python-docutils python-jinja python-markdown-it-py python-mdit_py_plugins
python-typing_extensions python-sphinx python-yaml")

build() {
  go_src_dir
  python -m build -wn
  python -m installer -d ${pkgdir} dist/*.whl
  install -Dm 644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета
after_build(){
  go_src_dir
  rm ${srcache}/v${pkgver}.tar.gz
}
