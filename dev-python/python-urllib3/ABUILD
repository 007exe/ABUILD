pkgname=python-urllib3
pkgver=1.26.12
pkgbuild=2
arch=("auto")

shortdesc=("HTTP library with thread-safe connection pooling and file post support.")

source=("https://github.com/urllib3/urllib3/archive/${pkgver}/${pkgbase}-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-setuptools python-sphinx python-pyasn1 python-pyopenssl
python-mock python-brotli python-sphinx-furo python-ndg-httpsclient python-pysocks")

build() {
  go_src_dir
  python setup.py build
  cd docs
  make html
  cd ..
  python setup.py install --root=${pkgdir}
  install -Dm644 LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.txt
  install -d ${pkgdir}/usr/share/doc
  cd docs
  cp -r _build/html ${pkgdir}/usr/share/doc/python-urllib3
}
