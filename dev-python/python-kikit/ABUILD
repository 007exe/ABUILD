pkgname=python-kikit
pkgver=1.1.2
pkgbuild=1
arch=("auto")

shortdesc=("Automation tools for KiCAD.")

source=("https://github.com/yaqwsx/KiKit/releases/download/v${pkgver}/KiKit-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-setuptools python-wheel
kicad python-numpy python-shapely python-click python-markdown2 python-pybars3
python-solidpython python-pcbnewtransition python-commentjson")

adddep=("kicad python-numpy python-shapely python-click python-markdown2 python-pybars3
python-solidpython python-pcbnewtransition python-commentjson")

build() {
  go_src_dir
  sed -i '/versioneer/d' setup.py
  python -m build -nw
  python -m installer -d ${pkgdir} dist/*.whl
  install -Dm 644 LICENCE ${pkgdir}/usr/share/licenses/${pkgname}/LICENCE
}
