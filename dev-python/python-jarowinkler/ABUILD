pkgname=python-jarowinkler
pkgver=1.2.3
pkgbuild=1
arch=("auto")

shortdesc=("A library for fast approximate string matching using Jaro and Jaro-Winkler similarity.")

_name=jarowinkler
source=("https://files.pythonhosted.org/packages/source/${_name::1}/jarowinkler/jarowinkler-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-setuptools python-scikit-build python-rapidfuzz-capi ninja")

build() {
  go_src_dir
  JAROWINKLER_BUILD_EXTENSION=1 \
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm644 -t ${pkgdir}/usr/share/licenses/${pkgname} LICENSE
}
