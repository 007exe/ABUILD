pkgname=python-distlib
pkgver=0.3.4
pkgbuild=1
arch=("auto")

shortdesc=("Low-level components of distutils2/packaging")
longdesc=("Low-level components of distutils2/packaging")

source=("https://files.pythonhosted.org/packages/source/d/distlib/distlib-${pkgver}.zip")

tags=("libs dev-python")

build_deps=("python unzip")

build() {
  go_src_dir
  rm distlib/*.exe
  python setup.py build
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
}
