pkgname=python-pyqt5
pkgver=5.15.6
pkgbuild=2
arch=("auto")

shortdesc=("A set of Python bindings for the Qt5 toolkit")
longdesc=("Python bindings for the Qt framework")

source=("https://pypi.python.org/packages/source/P/PyQt5/PyQt5-$pkgver.tar.gz")

tags=("dev-python libs")
#qt5-webkit
build_deps=("python-pyqt5-sip qt5-base dbus-python sip pyqt-builder python-opengl qt5-serialport qt5-connectivity qt5-multimedia qt5-tools qt5-speech qt5-websockets qt5-xmlpatterns qt5-remoteobjects qt5-quick3d")

adddep=("python-pyqt5-sip qt5-base")

# Это опциональные зависимости.
removedep=("qt5-serialport qt5-connectivity qt5-multimedia qt5-tools qt5-speech qt5-webkit qt5-websockets qt5-xmlpatterns qt5-remoteobjects qt5-quick3d")

build() {
  go_src_dir
  burn_patches
  sip-build \
    --confirm-license \
    --no-make \
    --api-dir /usr/share/qt/qsci/api/python
  cd build
  make -j${numjobs}
  make INSTALL_ROOT=${pkgdir} install -j1
# Удаляем неиспользуемую версию py2 модулей uic:
  rm -r ${pkgdir}/usr/lib/python*/site-packages/PyQt5/uic/port_v2
# Компилируем байт-код Python
  python -m compileall -d / ${pkgdir}/usr/lib
  python -O -m compileall -d / ${pkgdir}/usr/lib
}
