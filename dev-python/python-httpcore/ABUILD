pkgname=python-httpcore
pkgver=0.17.2
pkgbuild=1
arch=("auto")

shortdesc=("A minimal HTTP client.")

source=("https://github.com/encode/httpcore/archive/${pkgver}.tar.gz")

tags=("libs dev-python")

adddep=("python-anyio python-h11 python-sniffio python-certifi")

build_deps=("${adddep} python python-build python-installer python-wheel python-setuptools python-h2")

# NOTE: Это опциональные зависимости
removedep=("python-h2 python-socksio python-trio")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/${pkgver}.tar.gz
}

build() {
  go_src_dir
  sed -i '/\berror\b/d' setup.cfg
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm644 LICENSE.md ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.md
}
