pkgname=python-distribute
pkgver=2022.03.0
pkgbuild=1
arch=("auto")

shortdesc=("Distributed task scheduler for Dask.")
longdesc=("A library for distributed computation.")

source=("https://github.com/dask/distributed/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-cython python-click python-cloudpickle python-dask python-jinja python-msgpack
python-packaging python-psutil python-sortedcontainers python-tblib python-toolz python-tornado python-yaml python-zict")

adddep=("python-cython python-click python-cloudpickle python-dask python-jinja python-msgpack python-packaging
python-psutil python-sortedcontainers python-tblib python-toolz python-tornado python-yaml python-zict")

build() {
  go_src_dir
  burn_patches
  python setup.py build --with-cython
  python setup.py install --prefix=/usr --root=${pkgdir} --optimize=1 --skip-build --with-cython
  install -Dm644 LICENSE.txt -t ${pkgdir}/usr/share/licenses/${pkgname}/
}
