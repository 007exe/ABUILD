build() {
  go_src_dir
  export SETUPTOOLS_SCM_PRETEND_VERSION=${pkgver}
  SETUPTOOLS_USE_DISTUTILS=stdlib
  python setup.py build
  python setup.py install --prefix=/usr --root=${pkgdir} --optimize=1 --skip-build
}
