pkgname=python-sphinx-theme-builder
pkgver=0.2.0b1
pkgbuild=1
arch=("auto")

shortdesc=("Python build backend for Sphinx themes.")
longdesc=("Streamline the Sphinx theme development workflow, by building upon existing standardised tools..")

source=("https://github.com/pradyunsg/sphinx-theme-builder/archive/${pkgver}.tar.gz")

tags=("libs dev-python")

# python-pyproject-metadata
build_deps=("python python-build python-installer python-flit-core python-packaging python-rich
python-tomli python-nodeenv python-setuptools python-pep621")

# python-pyproject-metadata
adddep=("python-packaging python-rich python-tomli python-nodeenv python-setuptools python-pep621")

build() {
  go_src_dir
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm 644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
