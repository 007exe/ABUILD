pkgname=python-sphinx-theme-builder
pkgver=0.2.0b1
pkgbuild=4
arch=("auto")

shortdesc=("Python build backend for Sphinx themes.")

source=("https://github.com/pradyunsg/sphinx-theme-builder/archive/${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-flit-core python-packaging python-rich
python-tomli python-nodeenv python-setuptools python-pep621 python-pyproject-metadata")

adddep=("python-packaging python-rich python-tomli python-nodeenv python-setuptools python-pep621 python-pyproject-metadata")

build() {
  go_src_dir
  python -m build --wheel --no-isolation
  python -m installer --destdir=${pkgdir} dist/*.whl
  install -Dm 644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
