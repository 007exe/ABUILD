pkgname=python-mdurl
pkgver=0.1.2
pkgbuild=1
arch=("auto")

shortdesc=("URL utilities for markdown-it.")

source=("https://github.com/executablebooks/mdurl/archive/${pkgver}.tar.gz")

tags=("libs dev-python")

build_deps=("python python-build python-installer python-flit-core python-wheel python-uc-micro-py")

adddep=("python-uc-micro-py")

build() {
  go_src_dir
  python -m build -nw
  python -m installer -d ${pkgdir} dist/*.whl
  install -Dm 644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибками когда в кеше имеется архив с исходниками от другого пакета
after_build(){
  go_src_dir
  rm ${srcache}/${pkgver}.tar.gz
}
