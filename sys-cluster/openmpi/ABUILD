pkgname=openmpi
pkgver=4.1.5
pkgbuild=1
arch=("auto")

shortdesc=("High performance message passing library (MPI).")

source=("https://download.open-mpi.org/release/open-mpi/v${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2")

tags=("libs sys-cluster")

# openpmix
adddep=("gcc-libs glibc hwloc libevent libnl openssh zlib")

# --with-cuda=/opt/cuda \ cuda
build_deps=("${adddep} gcc-fortran inetutils valgrind")

# NOTE: Это опциональные зависимости
removedep=("cuda gcc-fortran perl")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc/${pkgname} \
    --enable-mpi-fortran=all \
    --libdir=/usr/lib/${pkgname} \
    --enable-builtin-atomics \
    --enable-mpi-cxx \
    --with-valgrind \
    --enable-memchecker \
    --enable-pretty-print-stacktrace \
    --without-slurm \
    --with-hwloc=/usr \
    --with-libltdl=/usr  \
    --with-libevent=/usr  \
    FC=/usr/bin/gfortran \
    LDFLAGS="${LDFLAGS} -Wl,-z,noexecstack"
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

# FS#28583
  install -dm 755 ${pkgdir}/usr/lib/pkgconfig
  for i in ${pkgdir}/usr/lib/openmpi/pkgconfig/*.pc; do
    ln -sf /usr/lib/openmpi/pkgconfig/$(basename ${i}) ${pkgdir}/usr/lib/pkgconfig/
  done

  install -dm 755 ${pkgdir}/etc/ld.so.conf.d
  echo /usr/lib/${pkgname} > ${pkgdir}/etc/ld.so.conf.d/${pkgname}.conf
  install -Dm 644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}
