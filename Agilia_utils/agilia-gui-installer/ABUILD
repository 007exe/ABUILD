pkgname=agilia-gui-installer
pkgver=1.1
pkgbuild=1
arch=("auto")

shortdesc=("AgiliaLinux system installer")
longdesc=("This is an AgiliaLinux installer. It is used to install this operating system from LiveCD. Also you can try to use it from real system.")

source=("git:git://github.com/007exe/mpkg.git")

tags="xapps sys-apps"

build_deps="mpkg-parted libagiliasetup"

build() {
  go_src_dir
  mkdir build
  cd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    ../guiinstaller
  make -j${numjobs}
  make install DESTDIR=${pkgdir}

  mkdir -p ${pkgdir}/usr/share/setup/help/{ru_RU,en_US}
  cp -v guiinstaller/helpfiles/ru/*.html ${pkgdir}/usr/share/setup/help/ru_RU/
  cp -v guiinstaller/helpfiles/en/*.html ${pkgdir}/usr/share/setup/help/en_US/

}
