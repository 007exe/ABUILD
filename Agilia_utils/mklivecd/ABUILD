pkgname=mklivecd
pkgver=1.1
pkgbuild=1
arch=("noarch")

shortdesc=("AgiliaLinux LiveCD build scripts")
longdesc=("This package contains mkpkg-like scripts to build LiveCDs from ISOBUILD specifications. For more info, see wiki page.")

source=("git:git://github.com/007exe/mpkg.git")

tags="xapps sys-apps"

adddep="bash wget rsync syslinux cdrtools fakeroot fakechroot mpkg-console squashfs-tools"

BUILD_KEYS=""
build_deps="cmake"

build() {
  go_src_dir
  burn_patches
  mkdir build
  cd build
  cmake ../chroot_installer \
    -DCMAKE_INSTALL_PREFIX=/usr
  make -j${numjobs}
  make install DESTDIR=${pkgdir}
}

