pkgname=agilia-gui-installer-qt5
pkgver=1.1
pkgbuild=1
arch=("auto")

shortdesc=("AgiliaLinux system installer, Qt5 port.")
longdesc=("This is an AgiliaLinux installer. It is used to install this operating system from LiveCD. Also you can try to use it from real system.")

source=("git:git://github.com/007exe/mpkg.git")

tags=("xapps sys-apps")

build_deps=("qt5-base libagiliasetup gcc-libs mpkg-parted mpkg-core mpkgsupport")

build() {
  go_src_dir
  mkdir build
  cd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    ../guiinstaller-qt5
  make -j${numjobs}
  make install DESTDIR=${pkgdir}

  mkdir -p ${pkgdir}/usr/share/setup/help/{ru_RU,en_US}
  cp -v ../guiinstaller-qt5/helpfiles/ru_RU/*.html ${pkgdir}/usr/share/setup/help/ru_RU/
  cp -v ../guiinstaller-qt5/helpfiles/en_EN/*.html ${pkgdir}/usr/share/setup/help/en_US/
}
