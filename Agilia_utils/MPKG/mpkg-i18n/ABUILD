# Build system
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr"
build() {
	go_src_dir
	burn_patches
	mkdir build
	cd build
	cmake $BUILD_KEYS ../i18n
	make -j${numjobs}
	make install DESTDIR=${pkgdir}

}
after_build() {
	go_src_dir
	mkdir -p ${pkgdir}/usr/share/man/ru/man1/
	cd i18n/man_ru
	for i in `find . -name '*.1'` ; do
		install -m0644 $i ${pkgdir}/usr/share/man/ru/man1/`basename $i`
	done
}
