# Package metadata
pkgname=agilia-text-installer
pkgver=2.1
pkgbuild=1
arch=("auto")

# Package description
shortdesc=("AgiliaLinux ncurses-based text mode system installer")
longdesc=("This is text version of AgiliaLinux installer.")

# Source URL
source=("git:git://github.com/007exe/mpkg.git")

# Tags
tags="xapps sys-apps"

build_deps="libagiliasetup gcc-libs mpkg-parted mpkg-core mpkgsupport nwidgets"

adddep="xdg-su"

# Build system
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr"

build() {
	go_src_dir
	burn_patches
	mkdir build
	cd build
	cmake $BUILD_KEYS ../textinstaller
	make -j${numjobs}
	make install DESTDIR=${pkgdir}
}

