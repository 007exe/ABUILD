pkgname=fontforge
pkgver=20230101
pkgbuild=1
arch=("auto")

shortdesc=("Outline and bitmap font editor.")

source=("https://github.com/${pkgname}/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("apps media-gfx")

# libuninameslis
adddep=("libtool pango giflib libtiff libxml2 libspiro python potrace woff2 gtk3")

build_deps=("${adddep} cmake python-sphinx")

build() {
  go_src_dir
  burn_patches
  mkdir build
  cd build
  cmake .. \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DENABLE_MAINTAINER_TOOLS=TRUE \
    -DENABLE_FONTFORGE_EXTRAS=TRUE \
    -DUNIX=TRUE
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 ../LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
