pkgname=imagemagick
pkgver=7.1.0.54
pkgbuild=1
arch=("auto")

shortdesc=("An image viewing/manipulation program.")
longdesc=("ImageMagick is a collection of tools and libraries to read, write, and manipulate an image in various image formats. Image processing operations are available from the command line. Bindings for Perl and C++ are also available.")

_relname=ImageMagick-${pkgver%%.*}
_tarname=ImageMagick-${pkgver%.*}-${pkgver##*.}

source=("https://imagemagick.org/archive/$_tarname.tar.xz")

tags=("media-gfx xapps")

build_deps=("ghostscript openexr libwmf librsvg libxml2 openjpeg2 libraw opencl-headers libwebp
libzip libjxl highway chrpath ocl-icd glu libheif jbigkit lcms2 libxext liblqr libraqm libpng djvulibre")

# NOTE: Очень много зависимостей
removedep=("util-linux libice openexr libsm libx11 libxau libxdmcp libxt brotli bzip2 cairo
djvulibre freetype gcc-libs glib2 harfbuzz libheif icu libjpeg-turbo libjxl xz openjpeg2
pango libraqm libraw librsvg libtiff libwebp libwmf libxcb libxml2 libzip perl")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --enable-shared \
    --disable-static \
    --with-dejavu-font-dir=/usr/share/fonts/TTF \
    --with-gs-font-dir=/usr/share/fonts/gsfonts \
    PSDelegate=/usr/bin/gs \
    XPSDelegate=/usr/bin/gxps \
    PCLDelegate=/usr/bin/gpcl6 \
    --enable-hdri \
    --enable-opencl \
    --without-gslib \
    --with-djvu \
    --with-jxl \
    --with-lqr \
    --with-modules \
    --with-openexr \
    --with-openjp2 \
    --with-perl \
    --with-perl-options=INSTALLDIRS=vendor \
    --with-rsvg \
    --with-webp \
    --with-wmf \
    --with-xml \
    --without-autotrace \
    --without-dps \
    --without-fftw \
    --without-fpx \
    --without-gcc-arch \
    --without-gvc
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
