#ABUILD created by/создан: khvalera, khvalera at narod.ru 

pkgname=doublecmd-gtk2
pkgver=0.9.8
pkgbuild=1
arch=('auto')
helpver=0.6.0

shortdesc="Double Commander is a cross platform open source file manager with two panels side by side."

source=("http://sourceforge.net/projects/doublecmd/files/Double%20Commander%20Source/doublecmd-${pkgver}-src.tar.gz"
"http://sourceforge.net/projects/doublecmd/files/Double%20Commander%20Source/doublecmd-help-${helpver}-src.tar.gz")

tags="app-misc xapps"

build_deps="fpc>=3.0.0 lazarus-gtk2>=1.6.4 gtk+2"

conflicts="doublecmd-qt doublecmd-qt4 doublecmd-qt5 doublecmd"

custom_opts="no_copydoc"

build(){
  go_src_dir
  ./build.sh beta gtk2
  install/linux/install.sh --install-prefix=${pkgdir}

  echo "End build"
}

after_build(){
  install -m 755 -d ${pkgdir}/usr/doc/
  ln -sf /usr/share/doublecmd/doc/ ${pkgdir}/usr/doc/${pkgname}-${pkgver}
  cp -a ${srcdir}/doublecmd-help-${helpver}/* ${pkgdir}/usr/share/doublecmd/doc/

  echo "End after_build"
}
