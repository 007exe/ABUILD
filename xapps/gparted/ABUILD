pkgname=gparted
pkgver=1.3.1
pkgbuild=1
arch=('auto')

shortdesc=("A Partition Magic clone, frontend to GNU Parted")
longdesc=("Gparted is the Gnome Partition Editor, a Gtk 3 GUI for other command line tools that can create, reorganise or delete disk partitions.")

tags=("sys-fs xapps")

source=("https://downloads.sourceforge.net/project/${pkgname}/${pkgname}/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.gz")

build_deps="gtkmm3 intltool itstool pkg-config yelp-tools polkit parted  dosfstools jfsutils f2fs-tools btrfs-progs exfatprogs ntfs-3g reiserfsprogs udftools xfsprogs nilfs-utils polkit gpart mtools xorg-xhost e2fsprogs"

adddep="e2fsprogs dosfstools jfsutils f2fs-tools btrfs-progs exfatprogs ntfs-3g reiserfsprogs udftools xfsprogs nilfs-utils polkit gpart mtools xorg-xhost"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --enable-online-resize \
    --enable-libparted-dmraid \
    --enable-xhost-root
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

 # Install policy file
  install -D -m0644 org.gnome.gparted.policy "${pkgdir}"/usr/share/polkit-1/actions/org.gnome.gparted.policy
}
