pkgname=mate-applets
pkgver=1.26.1
pkgbuild=1
arch=("auto")

shortdesc=("Applets for MATE panel.")

source=("https://pub.mate-desktop.org/releases/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("mate mate-extra")

# cpupower
adddep=("gtksourceview4 libgtop libnotify mate-panel polkit upower wireless_tools")

build_deps=("${adddep} intltool itstool gucharmap yelp-tools")

# NOTE: Это опциональные зависимости
removedep=("fortune-mod gucharmap")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --with-upower \
    --enable-polkit \
    --enable-ipv6
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
