pkgname=sratom
pkgver=0.6.14
pkgbuild=1
arch=("auto")

shortdesc=("An LV2 Atom RDF serialisation library.")
longdesc=("Library for serialising LV2 atoms to/from RDF, particularly the Turtle syntax.")

source=("https://download.drobilla.net/sratom-${pkgver}.tar.xz")

tags=("libs media-libs")

build_deps=("doxygen lv2 meson python-sphinx python-sphinx-lv2-theme serd sord")

build() {
  go_src_dir
  burn_patches
  sed -iE "s%install_dir: docdir / 'sratom-0',%install_dir: docdir / '${PF}',%g" doc/c/meson.build
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib
  meson compile -C build
  meson install -C build --destdir ${pkgdir}

  install -vDm 644 COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}
  install -vDm 644 {NEWS,README.md} -t ${pkgdir}/usr/share/doc/${pkgname}
}
