pkgname=exempi
pkgver=2.6.4
pkgbuild=1
arch=("auto")

shortdesc=("A library to parse XMP metadata.")

source=("https://libopenraw.freedesktop.org/download/${pkgname}-${pkgver}.tar.xz")

tags=("libs media-libs")

adddep=("expat gcc-libs glibc zlib")

build_deps=("${adddep} boost")

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}

