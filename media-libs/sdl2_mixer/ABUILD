pkgname=sdl2_mixer
pkgver=2.6.3
pkgbuild=1
arch=("auto")

shortdesc=("Simple Direct Media Layer Mixer Library.")

source=("https://www.libsdl.org/projects/SDL_mixer/release/SDL2_mixer-${pkgver}.tar.gz")

tags=("media-libs libs")

adddep=("sdl2 libvorbis libmodplug mpg123 flac opusfile")

build_deps=("${adddep} fluidsynth")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --enable-music-ogg-vorbis \
    --enable-music-flac-libflac \
    --enable-music-mp3-mpg123 \
    --disable-music-ogg-stb \
    --disable-music-flac-drflac \
    --disable-music-mp3-drmp3 \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 LICENSE.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
