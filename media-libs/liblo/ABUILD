pkgname=liblo
pkgver=0.31
pkgbuild=1
arch=("auto")

shortdesc=("A lightweight OSC (Open Sound Control) implementation.")

source=("https://github.com/radarsat1/$pkgname/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs media-libs")

build_deps=("doxygen")

build() {
  go_src_dir
  burn_patches
  ln -svf README.md README
  autoreconf -fiv
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
