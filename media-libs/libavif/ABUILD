pkgname=libavif
pkgver=1.0.1
pkgbuild=1
arch=("auto")

shortdesc=("Library for encoding and decoding .avif files.")

source=("https://github.com/AOMediaCodec/libavif/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("media-libs libs")

# libyuv
adddep=("glibc aom dav1d rav1e svt-av1 zlib libpng libjpeg-turbo")

build_deps=("${adddep} cmake nasm pkgconf gdk-pixbuf")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DAVIF_BUILD_APPS=ON \
    -DAVIF_CODEC_AOM=ON \
    -DAVIF_CODEC_DAV1D=ON \
    -DAVIF_CODEC_RAV1E=ON \
    -DAVIF_CODEC_SVT=ON \
    -DAVIF_BUILD_GDK_PIXBUF=ON
  make -C build
  make -C build DESTDIR=${pkgdir} install
  install -Dm644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}/
}
