pkgname=giflib
pkgver=5.2.1
pkgbuild=1
arch=('auto')

shortdesc=("Library for reading and writing gif images.")
longdesc=("The GIFLIB project maintains the giflib service library, which has been pulling images out of GIFs since 1989. It is deployed everywhere you can think of and some places you probably can't - graphics applications and web browsers on multiple operating systems, game consoles, smartphones, and likely your ATM too.")

source=("https://downloads.sourceforge.net/project/giflib/${pkgname}-${pkgver}.tar.gz")

tags="libs media-libs"

build_deps="glibc xmlto docbook-xml docbook-xsl"

build() {
  go_src_dir
  burn_patches
  make -j${numjobs}
  make PREFIX=/usr LIBDIR=/usr/lib${LIBDIRSUFFIX} DESTDIR="${pkgdir}" install
}
