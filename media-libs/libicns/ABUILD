pkgname=libicns
pkgver=0.8.1
pkgbuild=1
arch=("auto")

shortdesc=("Library for manipulating icns/IconFamily files.")

source=("https://downloads.sf.net/icns/${pkgname}-${pkgver}.tar.gz")

tags=("media-libs libs")

adddep=("libpng jasper")

build_deps=("${adddep}")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
