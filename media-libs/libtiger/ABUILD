pkgname=libtiger
pkgver=0.3.4
pkgbuild=1
arch=("auto")

shortdesc=("A rendering library for Kate streams using Pango and Cairo.")

source=("https://download.videolan.org/contrib/tiger/${pkgname}-${pkgver}.tar.gz")

tags=("libs media-libs")

adddep=("pango libkate")

build_deps=("${adddep} pkgconf")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --enable-static=no \
    --disable-doc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
