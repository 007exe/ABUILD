pkgname=libplacebo
pkgver=3.120.3
pkgbuild=1
arch=('auto')

shortdesc=("Reusable library for GPU-accelerated video/image rendering primitives")
longdesc=("libplacebo is, in a nutshell, the core rendering algorithms and ideas of mpv rewritten as an independent library. As of today, libplacebo contains a large assortment of video processing shaders, focusing on both quality and performance.")

source=("https://code.videolan.org/videolan/libplacebo/-/archive/v${pkgver}/libplacebo-v${pkgver}.tar.gz")

tags="libs media-libs"

build_deps="vulkan-icd-loader glslang lcms2 shaderc libepoxy libglvnd glibc gcc-libs meson ninja vulkan-headers python python-mako"

build() {
  go_src_dir
  CXXFLAGS+=" -I/usr/include/glslang"
  meson build \
    -D prefix=/usr \
    -D tests=true \
    -D vulkan=enabled \
    -D glslang=enabled \
    -D shaderc=enabled \
    -D lcms=enabled
  ninja -C build
  DESTDIR="${pkgdir}" ninja -C build install
  install -Dm 644 README.md -t "${pkgdir}/usr/share/doc/${pkgname}"
}
