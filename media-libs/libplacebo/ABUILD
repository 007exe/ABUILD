pkgname=libplacebo
pkgver=5.229.1
pkgbuild=1
arch=("auto")

shortdesc=("Reusable library for GPU-accelerated video/image rendering primitives.")
longdesc=("libplacebo is, in a nutshell, the core rendering algorithms and ideas of mpv rewritten as an independent library.")

source=("https://code.videolan.org/videolan/libplacebo/-/archive/v${pkgver}/libplacebo-v${pkgver}.tar.gz")

tags=("libs media-libs")

build_deps=("meson ninja vulkan-headers glad nuklear python python-setuptools python-mako python-markupsafe python-jinja
vulkan-icd-loader glslang lcms2 shaderc glibc gcc-libs libunwind")

adddep=("vulkan-icd-loader glslang lcms2 shaderc glibc gcc-libs libunwind")

build() {
  go_src_dir
  burn_patches
  CXXFLAGS+=" -I/usr/include/glslang"
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D tests=true \
    -D vulkan=enabled \
    -D glslang=enabled \
    -D shaderc=enabled \
    -D lcms=enabled \
    -D d3d11=disabled \
    -D demos=false
  ninja -C build
  DESTDIR=${pkgdir} ninja -C build install
  install -Dm 644 README.md -t ${pkgdir}/usr/share/doc/${pkgname}
}
