pkgname=libiptcdata
pkgver=1.0.5
pkgbuild=1
arch=("auto")

shortdesc=("Library for manipulating the IPTC metadata.")

source=("https://github.com/ianw/libiptcdata/releases/download/release_${pkgver//./_}/${pkgname}-${pkgver}.tar.gz")

tags=("libs media-libs")

adddep=("glibc")

build_deps=("${adddep} python")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --enable-python \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
