pkgname=libmpcdec
pkgver=1.2.6
pkgbuild=2
arch=("auto")

shortdesc=("Portable Musepack decoder library.")
longdesc=("Dynamic libraries from libmpcdec.")

source=("http://files.musepack.net/source/${pkgname}-${pkgver}.tar.bz2")

tags=("media-libs libs")

build_deps=("glibc")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/libmpcdec/COPYING
}
