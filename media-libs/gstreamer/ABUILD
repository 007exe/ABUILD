pkgname=gstreamer
pkglist=("gst-plugins-bad-libs gst-plugins-base-libs gst-plugins-base gst-plugins-good
gst-plugins-bad gst-plugin-gtk gst-plugin-msdk gst-plugin-opencv gst-plugin-qmlgl
gst-plugin-va gst-plugin-wpe gst-plugins-ugly gst-libav gst-rtsp-server gst-plugin-qsv
gst-editing-services gstreamer-vaapi gst-python gstreamer-docs")
# NOTE: пока не собирается gst-plugin-qml6
pkgver=1.22.7
strict_version=1
pkgbuild=1
arch=("auto")

shortdesc=("Multimedia graph framework - core.")

source=("git:https://gitlab.freedesktop.org/gstreamer/gstreamer.git"
"https://gstreamer.freedesktop.org/src/gstreamer-docs/gstreamer-docs-${pkgver}.tar.xz")

tags=("libs media-libs")

dep_gst_plugin_qsv=("libmfx")
dep_gst_plugin_gtk=("gtk3")
dep_gst_libav=("bzip2 ffmpeg")
dep_gst_plugin_msdk=("libmfx")
gst_editing_services=("python")
dep_gst_plugin_opencv=("opencv")
dep_gst_plugin_wpe=("wpewebkit")
dep_gstreamer_vaapi=("libxrandr")
dep_gst_python=("python-gobject")
dep_gst_plugin_qml6=("qt6-declarative qt6-wayland")
dep_gst_plugin_qmlgl=("qt5-declarative qt5-wayland qt5-x11extras")
dep_gst_plugins_ugly=("a52dec libcdio libdvdread libmpeg2 opencore-amr x264")
dep_gst_plugins_bad=("aom bzip2 chromaprint curl faac faad2 fluidsynth gsm json-glib lcms2 libass libavtp zvbi
libbs2b libdc1394 libdca libde265 libdvdnav libdvdread libfdk-aac libfreeaptx libgme libkate libldac neon x265
liblrdf libltc libmicrodns libmodplug libmpcdec libopenmpt librsvg libsndfile libsrtp libwebp libxml2 lilv srt
mjpegtools nettle openal openexr svt-hevc openjpeg2 openssl opus pango qrencode rtmpdump sbc soundtouch spandsp
zxing-cpp webrtc-audio-processing wildmidi zbar")
dep_gst_plugins_good=("aalib cairo flac gdk-pixbuf gst-plugins-base-libs lame libavc1394 libcaca libdv twolame
libgudev libiec61883 libpulse libraw1394 libshout libsoup3 libvpx libxdamage mpg123 nettle speex taglib v4l-utils wavpack")
dep_gst_plugins_base=("alsa-lib cdparanoia graphene libjpeg-turbo libpng libtheora libvorbis opus pango")
dep_gst_plugins_base_libs=("iso-codes libglvnd libgudev libxi libxv mesa orc wayland")
dep_gst_plugins_bad_libs=("libdrm libgudev libnice libusb libva libx11 libxkbcommon-x11 orc
vulkan-icd-loader wayland wayland-protocols")

adddep=("glib2 libcap elfutils libunwind libxml2")
build_deps=("${adddep} ${dep_gst_plugins_bad_libs} ${dep_gst_plugins_base_libs} ${dep_gst_plugins_base}
${dep_gst_plugins_good} ${dep_gst_plugins_bad} ${dep_gst_plugin_gtk} ${dep_gst_plugin_opencv} zlib nasm
${dep_gst_plugin_qmlgl} ${dep_gst_plugin_wpe} ${dep_gst_plugins_ugly} ${dep_gst_libav} qt5-base qt5-tools
${gst_editing_services} ${dep_gstreamer_vaapi} ${dep_gst_python} ${dep_gst_plugin_qsv} ${dep_gst_plugin_qml6}
bash-completion libvisual sdl2 ladspa git meson valgrind gobject-introspection jack vulkan-headers shaderc
bluez-libs lv2 vulkan-validation-layers")

##########################################################

_install() {
  local src dir
  for src in "${files[@]}"; do
    dir="$pkgdir/$(dirname "$src")"
    mkdir -p "$dir"
    mv -v "$src" "$dir"
  done
}

# gstreamer ###################################################################################

build() {
  cd ${srcdir}/gstreamer_git_gstreamer.git.src
# Переходим на тег текущей версии
  git checkout ${pkgver}

# Исправляем неправельные префиксы
# https://github.com/mesonbuild/meson/issues/5482
  sed -i 's/-DPREFIX/-UPREFIX/' subprojects/gst-plugins-good/gst/deinterlace/meson.build

  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib \
    -D devtools=disabled \
    -D doc=disabled \
    -D examples=disabled \
    -D gpl=enabled \
    -D gst-examples=disabled \
    -D libnice=disabled \
    -D vaapi=enabled \
    -D gstreamer:dbghelp=disabled \
    -D gstreamer:gobject-cast-checks=disabled \
    -D gstreamer:package-name="AgiliaLinux gstreamer" \
    -D gstreamer:ptp-helper-permissions=capabilities \
    -D gst-plugins-base:gobject-cast-checks=disabled \
    -D gst-plugins-base:package-name="AgiliaLinux gst-plugins-base" \
    -D gst-plugins-base:tremor=disabled \
    -D gst-plugins-good:gobject-cast-checks=disabled \
    -D gst-plugins-good:package-name="AgiliaLinux gst-plugins-good" \
    -D gst-plugins-good:rpicamsrc=disabled \
    -D gst-plugins-bad:directfb=disabled \
    -D gst-plugins-bad:flite=disabled \
    -D gst-plugins-bad:gobject-cast-checks=disabled \
    -D gst-plugins-bad:gs=disabled \
    -D gst-plugins-bad:iqa=disabled \
    -D gst-plugins-bad:isac=disabled \
    -D gst-plugins-bad:magicleap=disabled \
    -D gst-plugins-bad:onnx=disabled \
    -D gst-plugins-bad:openh264=disabled \
    -D gst-plugins-bad:openni2=disabled \
    -D gst-plugins-bad:opensles=disabled \
    -D gst-plugins-bad:package-name="AgiliaLinux gst-plugins-bad" \
    -D gst-plugins-bad:tinyalsa=disabled \
    -D gst-plugins-bad:voaacenc=disabled \
    -D gst-plugins-bad:voamrwbenc=disabled \
    -D gst-plugins-bad:wasapi2=disabled \
    -D gst-plugins-bad:wasapi=disabled \
    -D gst-plugins-ugly:gobject-cast-checks=disabled \
    -D gst-plugins-ugly:package-name="Arch Linux gst-plugins-ugly" \
    -D gst-libav:package-name="AgiliaLinux gst-libav" \
    -D gst-rtsp-server:gobject-cast-checks=disabled \
    -D gst-rtsp-server:package-name="AgiliaLinux gst-rtsp-server" \
    -D gst-editing-services:validate=disabled
  meson compile -C build
  DESTDIR=${srcdir}/root meson install -C build

  cd ${srcdir}/root; local files=(
    usr/include/gstreamer-1.0/gst/{base,check,controller,net,*.h}
    usr/lib/libgst{reamer,base,check,controller,net}-1.0.so*
    usr/lib/pkgconfig/gstreamer{,-base,-check,-controller,-net}-1.0.pc
    usr/lib/girepository-1.0/Gst{,Base,Check,Controller,Net}-1.0.typelib
    usr/share/gir-1.0/Gst{,Base,Check,Controller,Net}-1.0.gir
    usr/libexec/gstreamer-1.0/gst-{completion,ptp}-helper usr/libexec/gstreamer-1.0/gst-{hotdoc-plugins,plugin}-scanner
    usr/libexec/gstreamer-1.0/gst-plugins-doc-cache-generator
    usr/lib/gstreamer-1.0/libgstcoreelements.so
    usr/lib/gstreamer-1.0/libgstcoretracers.so
    usr/share/locale/*/LC_MESSAGES/gstreamer-1.0.mo
    usr/bin/gst-{inspect,launch,stats,tester,typefind}-1.0
    usr/share/man/man1/gst-{inspect,launch,stats,typefind}-1.0.1
    usr/share/bash-completion/completions/gst-{inspect,launch}-1.0
    usr/share/bash-completion/helpers/gst
    usr/share/gdb/auto-load/usr/lib/libgstreamer-1.0.so*.py
    usr/share/gstreamer-1.0/gdb/glib_gobject_helper.py
    usr/share/gstreamer-1.0/gdb/gst_gdb.py

    usr/share/aclocal/gst-element-check-1.0.m4
  ); _install
}

