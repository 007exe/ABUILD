pkgname=speexdsp
pkgver=1.2.0
pkgbuild=1
arch=('auto')

shortdesc=("DSP library derived from Speex")
longdesc=("Speex is a patent-free audio codec designed especially for voice (unlike Vorbis which targets general audio) signals and providing good narrowband  and wideband quality. This project aims to be complementary to the Vorbis codec.")

source=("https://downloads.us.xiph.org/releases/speex/$pkgname-$pkgver.tar.gz")

tags="libs media-libs"

build_deps="glibc"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var\
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dt "$pkgdir/usr/share/licenses/$pkgname" -m644 COPYING
}
