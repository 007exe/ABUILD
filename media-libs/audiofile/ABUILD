pkgname=audiofile
pkgver=0.3.6
pkgbuild=1
arch=("auto")

shortdesc=("Silicon Graphics Audio File Library.")
longdesc=("An elegant API for accessing audio files.")

source=("https://audiofile.68k.org/${pkgname}-${pkgver}.tar.gz")

tags=("libs media-libs")

build_deps=("gcc-libs alsa-lib flac")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -vDm 644 {AUTHORS,ChangeLog,NEWS,NOTES,README,TODO} -t ${pkgdir}/usr/share/doc/${pkgname}
}
