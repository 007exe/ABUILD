pkgname=dssi
pkgver=1.1.1
pkgbuild=1
arch=("auto")

shortdesc=("An API for audio processing plugins & softsynths with UIs.")

source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz")

tags=("libs media-libs")

adddep=("liblo jack")

build_deps=("${adddep} ladspa")

build() {
  go_src_dir
  burn_patches
  autoreconf -vfi
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -vDm 644 COPYING -t ${pkgdir}/usr/share/licenses/${pkgname}/
  install -vDm 644 {ChangeLog,README} -t ${pkgdir}/usr/share/doc/${pkgname}/
}
