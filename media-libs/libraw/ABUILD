pkgname=libraw
pkgver=0.20.2
pkgbuild=3
arch=("auto")

shortdesc=("A library for reading RAW files obtained from digital photo cameras (CRW/CR2, NEF, RAF, DNG, and others)")
longdesc=("The LibRaw library provides a simple and unified interface for extracting out of RAW files generated by digital photo cameras.")

source=("https://www.libraw.org/data/LibRaw-$pkgver.tar.gz")

tags=("libs media-libs")

build_deps=("lcms2 jasper")

removedep=("libjpeg-turbo zlib")

build() {
  go_src_dir
  burn_patches
  autoreconf -fvi
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static \
    --disable-jasper
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
