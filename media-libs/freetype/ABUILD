pkgname=freetype
pkgver=2.13.0
pkgbuild=1
arch=("auto")

shortdesc=("Font rasterization library.")

source=("http://downloads.sourceforge.net/sourceforge/freetype/freetype-${pkgver}.tar.xz")

tags=("libs media-libs")

adddep=("bash brotli harfbuzz libpng")

build_deps=("${adddep} bzip2 zlib")

conflicts=("freetype2")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dt ${pkgdir}/etc/profile.d -m644 ${filedir}/freetype2.sh
}
