pkgname=freetype
pkgver=2.11.0
pkgbuild=1
arch=('auto')

shortdesc=("A free and portable TrueType font rendering engine")
longdesc=("The FreeType2 engine is a free and portable TrueType font rendering engine. It has been developed to provide TT support to a great variety of platforms and environments. Note that FreeType2 is a library, not a stand-alone application, though some utility applications are included")

source=("http://downloads.sourceforge.net/sourceforge/freetype/freetype-${pkgver}.tar.xz")

tags=("libs media-libs")

build_deps="bzip2 zlib"

adddep="bash"

conflicts="freetype2"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dt "$pkgdir/etc/profile.d" -m644 ${filedir}/freetype2.sh
}
