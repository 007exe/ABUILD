pkgname=lcms2
pkgver=2.14
pkgbuild=1
arch=("auto")

shortdesc=("Small-footprint color management engine, version 2")
longdesc=("A lightweight, speed optimized color management engine.")

source=("https://downloads.sourceforge.net/lcms/lcms2-${pkgver}.tar.gz")

tags=("libs media-libs")

build_deps=("libtiff libjpeg-turbo")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -D -m0644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
