pkgname=xfburn
pkgver=0.7.0
pkgbuild=1
arch=("auto")

shortdesc=("A simple CD/DVD burning tool based on libburnia libraries.")

source=("https://archive.xfce.org/src/apps/xfburn/${pkgver%.*}/$pkgname-$pkgver.tar.bz2")

tags=("xfce xfce-apps")

adddep=("libburn libisofs gtk3 libxfce4ui exo gst-plugins-base-libs libgudev desktop-file-utils")

build_deps=("${adddep} intltool")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static \
    --enable-gstreamer
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
