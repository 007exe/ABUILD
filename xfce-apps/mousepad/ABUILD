pkgname=mousepad
pkgver=0.5.10
pkgbuild=1
arch=("auto")

shortdesc=("Simple Xfce oriented text editor.")
longdesc=("Mousepad is a simple GTK+ 3 text editor for the Xfce desktop environment.")

source=("http://archive.xfce.org/src/apps/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2")

tags=("xfce xfce-apps")

build_deps=("gtksourceview4 intltool desktop-file-utils")

adddep=("hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-dbus \
    --enable-keyfile-settings \
    --enable-gtksourceview4 \
    --disable-static \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
