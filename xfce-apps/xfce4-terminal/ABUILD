pkgname=xfce4-terminal
pkgver=1.0.4
pkgbuild=1
arch=("auto")

shortdesc=("A modern terminal emulator primarily for the Xfce desktop environment.")

source=("https://archive.xfce.org/src/apps/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2")

tags=("xfce xfce-apps")

adddep=("libxfce4ui vte3 hicolor-icon-theme")

build_deps=("${adddep} intltool")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --disable-static \
    --disable-debug
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
