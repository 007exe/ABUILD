pkgname=bdf-unifont
pkgver=13.0.06
pkgbuild=1
arch=("noarch")

shortdesc="Tools and glyph descriptions in a very simple text format"
longdesc="Unifont is a Unicode font with a glyph for every visible Unicode Basic Multilingual Plane code point and more, with supporting utilities to modify the font. This package contains tools and glyph descriptions."

#adddep="fontconfig encodings font-util"
tags=("x11-fonts xserver")

source=("https://ftp.gnu.org/gnu/unifont/unifont-${pkgver}/unifont-${pkgver}.bdf.gz")
build_deps="mkpkg gzip"

build() {
  gzip -d --force ${srcache}/unifont-${pkgver}.bdf.gz
  install -Dm0644 ${srcache}/unifont-${pkgver}.bdf ${pkgdir}/usr/share/fonts/misc/unifont.bdf
}
