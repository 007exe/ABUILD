build()
{
go_src_dir
burn_patches
DESTDIR="${pkgdir}" INIT_D=none MAN_D=/usr/share/man LIB_SUFFIX=${LIBDIRSUFFIX} ./install.sh
install -d "${pkgdir}/var/run/laptop-mode-tools/"
install -D -m755 "${filedir}/laptop-mode" "${pkgdir}/etc/init.d/laptop-mode"
}
