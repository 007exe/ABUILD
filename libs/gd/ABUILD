pkgname=gd
pkgver=2.3.2
pkgbuild=1
arch=("auto")

shortdesc=("A library used to create PNG, JPEG, or WBMP images")
longdesc=("gd is a graphics library. It allows your code to quickly draw images complete with lines, arcs, text, multiple colors, cut and paste from other images, and flood fills, and write out the result as a PNG or JPEG file. This is particularly useful in World Wide Webapplications, where PNG and JPEG are two of the formats accepted for inlineimages by most browsers.")

tags=("libs media-libs")

source=("https://github.com/libgd/libgd/releases/download/gd-${pkgver}/libgd-${pkgver}.tar.xz")

#fontconfig libxpm libavif libheif
build_deps="libwebp"

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib$LIBDIRSUFFIX \
    --disable-rpath
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
