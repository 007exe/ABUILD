pkgname=libgudev
pkgver=237
pkgbuild=1
arch=("auto")

shortdesc=("GObject bindings for libudev")
longdesc=("The libgudev package contains GObject bindings for libudev.")

source=("https://download.gnome.org/sources/libgudev/${pkgver}/libgudev-${pkgver}.tar.xz")

tags="dev-libs libs"

build_deps="glib2 eudev meson"

build() {
  go_src_dir
  burn_patches
  meson build \
    -D prefix=/usr \
    -D libdir=/usr/lib${LIBDIRSUFFIX} \
    -D buildtype=release \
    -D gtk_doc=false
  ninja -C build
  meson install -C build --destdir "$pkgdir"
}
