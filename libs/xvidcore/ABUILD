pkgname=xvidcore
pkgver=1.3.2
pkgbuild=3
arch=("auto")

shortdesc=("XviD is an open source MPEG-4 video codec")
longdesc=("This is a video codec based on the original OpenDivX codec. Its compatible with DivX and MPEG-4.")

tags=("libs media-libs")

source=("http://downloads.xvid.org/downloads/${pkgname}-${pkgver}.tar.bz2")

build_deps="glibc nasm"

build() {
  go_src_dir
  burn_patches
  cd build/generic
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib$LIBDIRSUFFIX
  make -j${numjobs}
  make DESTDIR="${pkgdir}" install
}
