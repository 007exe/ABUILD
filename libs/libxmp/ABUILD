pkgname=libxmp
pkgver=4.4.1
pkgbuild=1
arch=("auto")

shortdesc=("Libxmp loads the module and renders the sound")
longdesc=("Libxmp loads the module and renders the sound as linear PCM samples in a buffer at rate and format specified by the user. Applications for libxmp include players, module information extractors, module-to-mp3 renderers, game music, etc. A smaller subset of libxmp is also available. below).")

tags=("libs media-libs")

build_deps="glibc-solibs"
adddep="bash"

source=("https://sourceforge.net/projects/xmp/files/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz")


BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr "
INSTALL_KEYS="DESTDIR=$pkgdir"


