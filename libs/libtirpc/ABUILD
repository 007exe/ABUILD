pkgname=libtirpc
pkgver=1.2.6
pkgbuild=1
arch=("auto")

shortdesc=("Transport Independent RPC library (SunRPC replacement)")

tags=("libs dev-libs")

source=("http://downloads.sourceforge.net/sourceforge/libtirpc/${pkgname}-${pkgver}.tar.bz2")

build_deps="libgssglue"

config_files="etc/netconfig"

BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --docdir=/usr/share/doc/ --mandir=/usr/share/man --sysconfdir=/etc"
INSTALL_KEYS="DESTDIR=$pkgdir"

