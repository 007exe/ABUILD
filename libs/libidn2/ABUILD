pkgname=libidn2
pkgver=2.3.1
pkgbuild=1
arch=("auto")

shortdesc="Library to support IDNA2008 internationalized domain names"
longdesc="Libidn2 is an implementation of the IDNA2008 specifications in RFC 5890, 5891, 5892, 5893 and TR46 for internationalized domain names (IDN). It is a standalone library, without any dependency on libidn."

tags=("libs net-dns")

build_deps="glibc"

source=("http://ftp.gnu.org/gnu/libidn/${pkgname}-${pkgver}.tar.gz")

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib$LIBDIRSUFFIX \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
