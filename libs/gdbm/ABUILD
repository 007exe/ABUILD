pkgname=gdbm
pkgver=1.20
pkgbuild=1
arch=('auto')

shortdesc=("A GNU set of database routines which use extensible hashing")
longdesc=("Gdbm is a GNU database indexing library, including routines which use extensible hashing.  Gdbm works in a similar way to standard UNIX dbm routines. Gdbm is useful for developers who write C applications and need access to a simple and efficient database or who are building C applications which will use such a database")

source=("https://ftp.gnu.org/gnu/gdbm/${pkgname}-${pkgver}.tar.gz")

tags="sys-libs libs"

build_deps="readline glibc"

adddep="bash"

build() {
  go_src_dir
  autoreconf -fiv
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static \
    --enable-libgdbm-compat
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
