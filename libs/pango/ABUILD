pkgname=pango
pkgver=1.49.1
pkgbuild=1
arch=("auto")

shortdesc=("A library for layout and rendering of text")
longdesc=("A library to handle unicode strings as well as complex bidirectional or context dependent shaped strings.")

source=("https://download.gnome.org/sources/pango/${pkgver%.*}/pango-${pkgver}.tar.xz")

tags="libs x11-libs"
# libthai
build_deps="cairo libxft harfbuzz fribidi gobject-introspection help2man meson gi-docgen"

build() {
  go_src_dir
  burn_patches
  meson build \
  -D prefix=/usr \
  -D gtk_doc=false
  meson compile -C build
  meson install -C build --destdir "$pkgdir"
}
