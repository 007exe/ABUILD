pkgname=libvorbis
pkgver=1.3.7
pkgbuild=1
arch=('auto')

shortdesc=("The Vorbis General Audio Compression Codec")
longdesc=("Ogg Vorbis is a fully open, non-proprietary, patent-and-royalty-free, general-purpose compressed audio format for audio and music at fixed and variable bitrates from 16 to 128 kbps/channel.")

source=("http://downloads.xiph.org/releases/vorbis/${pkgname}-${pkgver}.tar.gz")

tags="libs media-libs"

build_deps="libogg"

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static \
    --enable-shared
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm 644 COPYING -t "${pkgdir}"/usr/share/licenses/libvorbis
}
