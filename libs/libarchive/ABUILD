pkgname=libarchive
pkgver=3.5.1
pkgbuild=1
arch=("auto")

shortdesc=("Library for reading and writing streaming archives")
longdesc=("Libarchive is a programming library that can create and read several different streaming archive formats, including most popular tar variants and several cpio formats.")

tags=("app-arch libs")

build_deps="acl bzip2 expat lz4 openssl xz zlib zstd"

source=("http://www.libarchive.org/downloads/$pkgname-${pkgver}.tar.gz")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --without-xml2 \
    --without-nettle \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/libarchive/COPYING"
}
