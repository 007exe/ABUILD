pkgname=gmp
pkgver=6.2.1
pkgbuild=2
arch=('auto')

shortdesc="gmp (GNU multiple precision arithmetic library)"
longdesc="A free library for arbitrary precision arithmetic"

source=("https://gmplib.org/download/gmp/gmp-${pkgver}.tar.xz")

tags="libs dev-libs"

build_deps="gcc-libs"

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --enable-cxx \
    --enable-fat
  make DESTDIR="${pkgdir}" install
}
