# Package metadata
pkgname=libusb1
pkgver=1.0.23
pkgbuild=2
arch="auto"

# Package description
shortdesc=("Library that provides generic access to USB device")

# Source URL
source=("https://github.com/libusb/libusb/releases/download/v${pkgver}/libusb-${pkgver}.tar.bz2")

# Tags
tags="libs dev-libs compat32"
build_deps="glibc"

# Build system
BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--disable-static"

