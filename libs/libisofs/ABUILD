pkgname=libisofs
pkgver=1.5.4
pkgbuild=1
arch=('auto')

shortdesc=("Library to pack up hard disk files and directories into a ISO 9660 disk image")
longdesc=("Libisofs is a library that handles creating ISO disc image files. It is intended to work together with libburn to write these images to discs.")

source=("http://files.libburnia-project.org/releases/${pkgname}-${pkgver}.tar.gz")

tags="libs dev-libs"

build_deps="acl zlib"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --enable-libacl \
    --enable-xattr \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
