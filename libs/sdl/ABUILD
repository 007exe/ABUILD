pkgname=sdl
pkgver=1.2.15+387+gfbfcca32
_commit=fbfcca3277a5f13dd78f7d44ffe2dc65d4e2d048
pkgbuild=1
arch=('auto')

shortdesc=("A library for portable low-level access to a video framebuffer, audio output, mouse, and keyboard")
longdesc=("The Simple DirectMedia Layer (SDL for short) is a cross-platform library designed to make it easy to write multimedia software, such as games and emulators.")
source=("git:https://github.com/libsdl-org/SDL-1.2.git")

tags="media-libs libs"

build_deps="alsa-lib mesa libpulse glu"

build() {
  go_src_dir
  git checkout ${_commit}
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-nasm \
    --enable-alsa \
    --with-x \
    --disable-rpath \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
