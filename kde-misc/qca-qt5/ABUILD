# NOTE: Обнови пакет qca-qt6
pkgname=qca-qt5
pkgver=2.3.7
pkgbuild=1
arch=("auto")

shortdesc=("Qt5 Cryptographic Architecture.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/qca/${pkgver}/qca-${pkgver}.tar.xz")

tags=("app-crypt libs")

adddep=("qt5-base nss ca-certificates")

build_deps=("${adddep} cmake doxygen pkcs11-helper botan")

# NOTE: Это опциональные зависимости
removedep=("'pkcs11-helper botan")

build() {
  cd ${srcdir}
  cmake -B build -S qca-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DQT6=OFF \
    -DBUILD_TESTS=OFF \
    -DQCA_INSTALL_IN_QT_PREFIX=ON \
    -DQCA_MAN_INSTALL_DIR=/usr/share/man
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
