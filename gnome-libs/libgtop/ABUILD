pkgname=libgtop
pkgver=2.41.2
pkgbuild=1
arch=("auto")

shortdesc=("Library for collecting system monitoring data.")

source=("https://download.gnome.org/sources/libgtop/${pkgver%.*}/libgtop-${pkgver}.tar.xz")

tags=("gnome-base libs")

adddep=("glib2 glibc libxau")

build_deps=("${adddep} gobject-introspection gtk-doc")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
