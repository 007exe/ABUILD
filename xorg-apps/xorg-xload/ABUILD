pkgname=xorg-xload
pkgver=1.1.4
pkgbuild=1
arch=("auto")

shortdesc=("System load average display for X.")
longdesc=("System load average display for X.")

source=("https://xorg.freedesktop.org/archive/individual/app/xload-${pkgver}.tar.xz")

tags=("xorg-apps xorg")

build_deps=("xorg-util-macros libxaw libxmu libxt libx11")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
