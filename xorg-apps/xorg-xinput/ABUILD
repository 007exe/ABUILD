pkgname=xorg-xinput
pkgver=1.6.4
pkgbuild=1
arch=("auto")

shortdesc=("Small commandline tool to configure devices.")

source=("http://xorg.freedesktop.org/archive/individual/app/xinput-${pkgver}.tar.xz")

tags=("xorg xorg-apps")

adddep=("xorg-xrandr libx11 libxi libxinerama")

build_deps=("${adddep} xorg-util-macros xorgproto libxfixes")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
