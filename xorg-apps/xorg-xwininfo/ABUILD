pkgname=xorg-xwininfo
pkgver=1.1.6
pkgbuild=1
arch=("auto")

shortdesc=("Command-line utility to print information about windows on an X server.")

source=("http://xorg.freedesktop.org/archive/individual/app/xwininfo-${pkgver}.tar.xz")

tags=("xorg xorg-apps")

adddep=("libxcb")

build_deps=("${adddep} xorg-util-macros libx11")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
