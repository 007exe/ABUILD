# ABUILD generated by mkpkg_generator.sh

pkgname=wpa_supplicant
pkgver=2.0
pkgbuild=1
arch=("auto")

shortdesc=("wpa_supplicant (WPA/WPA2/IEEE 802.1X Supplicant)")
longdesc=("wpa_supplicant is a WPA Supplicant for Linux with support for WPA and WPA2 (IEEE 802.11i / RSN). Supplicant is the IEEE 802.1X/WPA component that is used in the client stations. It implements key negotiation with a WPA Authenticator and it controls the roaming and IEEE 802.11 authentication/association of the wlan driver. More info: http://hostap.epitest.fi/wpa_supplicant/")

tags=("net-wireless network")

source=("http://w1.fi/releases/${pkgname}-${pkgver}.tar.gz")
build_deps="openssl dbus readline libnl"

build() {
  go_src_dir
  burn_patches
  cd "${pkgname}"

  cp "${filedir}/config" ./.config
  sed -i 's@/usr/local@$(PREFIX)@g' Makefile
  make -j${numjobs}
  make PREFIX=/usr DESTDIR="${pkgdir}" install
}

after_build() {
  go_src_dir
  cd "${pkgname}"

  install -m755 -d "${pkgdir}/etc"
  install -m644 wpa_supplicant.conf "${pkgdir}/etc/wpa_supplicant.conf"

  install -d -m755 "${pkgdir}/usr/man/man"{5,8}
  install -m644 doc/docbook/*.5 "${pkgdir}/usr/man/man5/"
  install -m644 doc/docbook/*.8 "${pkgdir}/usr/man/man8/"
  rm -f "${pkgdir}/usr/man/man8/wpa_"{priv,gui}.8

  install -m755 -d "${pkgdir}/usr/share/dbus-1/system-services"
  install -m644 dbus/{fi.epitest.hostap.WPASupplicant.service,fi.w1.wpa_supplicant1.service} "${pkgdir}/usr/share/dbus-1/system-services/"
  sed -e 's/sbin/usr\/sbin/' -i "${pkgdir}/usr/share/dbus-1/system-services/"*.service

  # Uncomment - never
  #install -m755 -d "${pkgdir}/etc/dbus-1/system.d"
  #install -m644 dbus/dbus-wpa_supplicant.conf "${pkgdir}/etc/dbus-1/system.d/wpa_supplicant.conf"
  #install -d -m755 "${pkgdir}/usr/lib/systemd/system"
  #install -m644 systemd/*.service "${pkgdir}/usr/lib/systemd/system/"
}
