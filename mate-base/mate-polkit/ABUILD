pkgname=mate-polkit
pkgver=1.26.1
pkgbuild=1
arch=("auto")

shortdesc=("PolicyKit integration for the MATE desktop.")

source=("https://pub.mate-desktop.org/releases/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")

tags=("mate mate-base")

adddep=("gtk3 polkit gettext")

build_deps=("${adddep} accountsservice gobject-introspection")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --enable-introspection
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
