pkgname=agilia-gui-installer
pkgver=1.2
pkgbuild=1
arch=("auto")
strict_version=1

shortdesc=("AgiliaLinux system installer.")

source=("git:https://github.com/007exe/mpkg.git")

tags=("apps sys-apps")

adddep=("qt5-base libagiliasetup glibc gcc-libs mpkg-parted mpkg-core mpkgsupport xdg-su")

build_deps=("${adddep} cmake gcc")

build() {
  go_src_dir
  cmake -B build -S guiinstaller-qt5 \
    -DCMAKE_INSTALL_PREFIX=/usr
  make -C build -j${numjobs}
  make -C build DESTDIR=${pkgdir} install
}
