adddep="bash cpio"

build() {
go_src_dir
# thanks goes to Archlinux
  install -d ${pkgdir}/usr/bin
  install -m755 ${filedir}/rpmextract.sh ${pkgdir}/usr/bin/rpmextract
  install -m755 ${filedir}/rpm2cpio ${pkgdir}/usr/bin/
}
