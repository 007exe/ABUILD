pkgname=python-sphinxcontrib-serializinghtml
_name=sphinxcontrib-serializinghtml
pkgver=1.1.5
pkgbuild=1
arch='auto'

shortdesc=("Serialized HTML file support for the Sphinx documentation generator")
longdesc=("Serialized HTML file support for the Sphinx documentation generator")

source=("https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$pkgver.tar.gz")

tags="develop dev-python"

build_deps="python python-setuptools"

adddeps="python"

build() {
  go_src_dir
  python setup.py build
  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
  install -Dm644 -t "$pkgdir"/usr/share/licenses/$pkgname LICENSE
}
