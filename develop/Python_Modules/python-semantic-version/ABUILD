pkgname=python-semantic-version
pkgver=2.8.5
pkgbuild=1
arch=('auto')

shortdesc=("Library implementing the SemVer scheme")
longdesc=("Library implementing the SemVer scheme")

source=("https://files.pythonhosted.org/packages/d4/52/3be868c7ed1f408cb822bc92ce17ffe4e97d11c42caafce0589f05844dd0/semantic_version-$pkgver.tar.gz")

tags="develop dev-python"

build_deps="python python-setuptools"

build(){
  go_src_dir
  python setup.py build
  python setup.py install --root="$pkgdir" --optimize=1
  install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
