pkgname=python-fonttools
pkgver=4.27.0
pkgbuild=1
arch=('auto')

shortdesc=("A library to manipulate font files from Python")
longdesc=("A library to manipulate font files from Python")

source=("https://github.com/fonttools/fonttools/archive/$pkgver/fonttools-$pkgver.zip")

tags="develop dev-python"

build_deps="unzip python python-setuptools cython"

build()
{
  go_src_dir
  python setup.py build_ext --inplace
  python setup.py build
  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
  install -Dm0755 -t "$pkgdir/usr/share/licenses/$pkgname/" LICENSE
}
