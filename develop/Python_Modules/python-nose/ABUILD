pkgname=python-nose
pkgver=1.3.7
pkgbuild=1
arch=('auto')

shortdesc=("Unittest-based testing framework for Python")
longdesc=("Nose extends the test loading and running features of unittest, making it easier to write, find and run tests.")

source=("https://pypi.python.org/packages/source/n/nose/nose-${pkgver}.tar.gz")

tags="develop dev-python"

build_deps="python python-setuptools"

adddep="python-setuptools"

build()
{
  go_src_dir
  sed -i -e "s:man/man1:share/man/man1:g" setup.py

  python3 setup.py install --prefix=/usr --root="${pkgdir}"
  ln -s nosetests "$pkgdir/usr/bin/nosetests3"
}
