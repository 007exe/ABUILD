pkgname=python-jinja
pkgver=3.0.1
pkgbuild=1
arch=('auto')

shortdesc="A simple pythonic template language written in Python"
longdesc="A simple pythonic template language written in Python"

source="https://files.pythonhosted.org/packages/source/J/Jinja2/Jinja2-$pkgver.tar.gz"

tags="dev-python develop"

build_deps="python python-markupsafe python-setuptools"

adddep="python"

build() {
  go_src_dir
  export PYTHONHASHSEED=0
  python3 setup.py build
  python3 setup.py install --root="$pkgdir" --optimize=1 --skip-build
  install -Dm644 LICENSE.rst -t "$pkgdir/usr/share/licenses/$pkgname"
}
