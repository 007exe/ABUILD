pkgname=glslang
pkgver=11.6.0
pkgbuild=1
arch=("auto")

shortdesc=("Khronos reference front-end for GLSL and ESSL, and sample SPIR-V generator")
longdesc=("Glslang is the official reference compiler front end for the OpenGL ES and OpenGL shading languages. It implements a strict interpretation of the specifications for these languages.")

tags=("dev-util develop")

source=("https://github.com/KhronosGroup/glslang/archive/${pkgver}.tar.gz")

build_deps="gcc-libs python cmake ninja"

build() {
  go_src_dir
  cmake \
    -Bbuild-shared \
    -GNinja \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=ON
  ninja -Cbuild-shared
  cmake \
    -Bbuild-static \
    -GNinja \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_SHARED_LIBS=OFF
  ninja -Cbuild-static

  DESTDIR="${pkgdir}" ninja -C build-shared install
  DESTDIR="${pkgdir}" ninja -C build-static install

  install -Dm644 LICENSE.txt "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE

    cd "${pkgdir}"/usr/lib${LIBDIRSUFFIX}
  for lib in *.so; do
    ln -sf "${lib}" "${lib}.0"
  done
}
