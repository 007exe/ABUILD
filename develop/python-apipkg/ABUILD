pkgname=python-apipkg
pkgver=1.5
pkgbuild=1
arch=('auto')

shortdesc=("Control the exported namespace of a Python package")
longdesc=("With apipkg you can control the exported namespace of a Python package and greatly reduce the number of imports for your users. It is a small pure Python module that works on CPython 2.7 and 3.4+, Jython and PyPy. It cooperates well with Pythons help() system, custom importers (PEP302) and common command-line completion tools.")

source=("https://files.pythonhosted.org/packages/source/a/apipkg/apipkg-$pkgver.tar.gz")

tags="develop dev-python"

build_deps="python python-setuptools"

adddep="python"

build()
{
  go_src_dir
  python setup.py build
  python setup.py install --root="$pkgdir" --optimize=1
  install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
