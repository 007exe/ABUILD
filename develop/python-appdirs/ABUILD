pkgname=python-appdirs
pkgver=1.4.4
pkgbuild=1
arch=("auto")

shortdesc="A small Python module for determining appropriate platform-specific dirs, e.g. a user data dir."
longdesc="What directory should your app use for storing user data? This kind of thing is what the ``appdirs`` module is for. ``appdirs`` will help you choose an appropriate"

tags=("dev-python develop")

source=("https://pypi.io/packages/source/a/appdirs/appdirs-$pkgver.tar.gz")

build_deps="python"

build() {
  go_src_dir
  python setup.py build
  python setup.py install --root="$pkgdir/" --optimize=1
  install -Dm644 LICENSE.txt "$pkgdir"/usr/share/licenses/$pkgname/LICENSE.txt
}
