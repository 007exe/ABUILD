pkgname=intltool
pkgver=0.51.0
pkgbuild=2
arch=("noarch")

shortdesc="Utilities for translation support"
longdesc="This package contains scripts and autoconf files for internationalizing data."

tags=("develop dev-util")

adddep="perl patch file automake gettext perl-xml-parser"

source=("http://edge.launchpad.net/intltool/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")

build_deps="perl-xml-parser"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX}
  make
  make DESTDIR=${pkgdir} install
  install -D -m644 doc/I18N-HOWTO "${pkgdir}/usr/share/doc/${pkgname}/I18N-HOWTO"
}
