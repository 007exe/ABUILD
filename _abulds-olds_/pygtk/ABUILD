
pkgname=pygtk
pkgver=2.24.0
pkgbuild=3
arch=('auto')

shortdesc=('pygtk (GTK+ bindings for Python)')
longdesc=("PyGTK provides a convenient wrapper for the GTK+ library for use in Python programs, taking care of many of the boring details such as managing memory and type casting. PyGTK's web page: http://www.pygtk.org/")

tags=('dev-python libs')

source=("http://ftp.gnome.org/pub/GNOME/sources/pygtk/${pkgver%.*}/pygtk-${pkgver}.tar.bz2")

build_deps='numpy libglade fontconfig pango gtk+2 glib2 cairo atk libxml2 libxcb xcb-util libX11 libXau libXcomposite libXcursor libXdamage libXdmcp libXext libXfixes libXi libXinerama libXrandr libXrender pixman cxxlibs glibc-solibs python'
adddep="numpy python python-cairo python-gobject libglade"

BUILD_SYSTEM='autotools'
BUILD_KEYS="--prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --build=$ARCH-slackware-linux"
INSTALL_KEYS="DESTDIR=$pkgdir"

