if [ ! "$ARCH" = "x86_64" ] ; then
	ARCH="i386"
fi

build() {
	cd ${pkgdir}
	rpm2cpio < $srcache/${pkgname}-${pkgver}-${revnum}.$ARCH.rpm | cpio -imdv
