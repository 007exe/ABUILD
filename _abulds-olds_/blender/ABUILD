# ABUILD generated by mkpkg_generator.sh

pkgname=blender
pkgver=2.64a
pkgbase=2.64
strict_version=yes
pkgbuild=1
arch=("auto")
shortdesc=("3D Content Creation Suite")
longdesc=("Blender is the free open source 3D content creation suite, available for all major operating systems under the GNU General Public License. Homepage: http://blender.org")

tags=("media-gfx xapps")

source=("http://download.blender.org/release/Blender${pkgbase}/blender-${pkgver}-linux-glibc27-${ARCH}.tar.bz2")

build() {
	go_src_dir
	mkdir -p ${pkgdir}/opt/blender
	cp -r * ${pkgdir}/opt/blender/

	mkdir -p ${pkgdir}/usr/bin
	( cd ${pkgdir}/usr/bin ; ln -s ../../opt/blender/blender blender )
	( cd ${pkgdir}/usr/bin ; ln -s ../../opt/blender/blender-softwaregl blender-softwaregl )
	( cd ${pkgdir}/usr/bin ; ln -s ../../opt/blender/blenderplayer blenderplayer )

	mkdir -p ${pkgdir}/usr/share/icons
	mv ${pkgdir}/opt/blender/icons ${pkgdir}/usr/share/icons/hicolor
	( cd ${pkgdir}/opt/blender ; ln -s ../../${pkgdir}/usr/share/icons/hicolor icons )

	mkdir -p ${pkgdir}/usr/share/applications
	install -m644 ${filedir}/blender.desktop ${pkgdir}/usr/share/applications/
}

