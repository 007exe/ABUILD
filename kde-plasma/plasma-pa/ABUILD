pkgname=plasma-pa
pkgver=5.25.4
pkgbuild=1
arch=("auto")

shortdesc=("Plasma applet for audio volume management using PulseAudio.")
longdesc=("Plasma applet for audio volume management using PulseAudio.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("plasma-workspace pulseaudio perl extra-cmake-modules kdoctools")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
