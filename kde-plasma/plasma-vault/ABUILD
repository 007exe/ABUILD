pkgname=plasma-vault
pkgver=5.26.3
pkgbuild=1
arch=("auto")

shortdesc=("Plasma applet and services for creating encrypted vaults.")
longdesc=("Plasma applet and services for creating encrypted vaults.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("extra-cmake-modules plasma-workspace networkmanager-qt")

adddep=("plasma-workspace")

# NOTE: Это опциональные зависимости
removedep=("encfs cryfs gocryptfs")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
