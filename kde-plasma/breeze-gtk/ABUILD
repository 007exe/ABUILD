pkgname=breeze-gtk
pkgver=5.26.3
pkgbuild=1
arch=("noarch")

shortdesc=("Breeze widget theme for GTK 2 and 3.")
longdesc=("Official GTK+ port of Plasma's Breeze widget style.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("extra-cmake-modules sassc python-cairo breeze")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
