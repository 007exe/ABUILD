pkgname=breeze
pkgver=5.26.2
pkgbuild=1
arch=("auto")

shortdesc=("Breeze visual style for the Plasma desktop.")
longdesc=("Qt component to allow applications to make use of the Wayland wl-layer-shell protocol.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("extra-cmake-modules wayland-protocols qt5-wayland breeze-icons kwayland hicolor-icon-theme")

adddep=("breeze-icons kwayland hicolor-icon-theme")

# NOTE: Это опциональные зависимости
removedep=("breeze-gtk kcmutils")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
