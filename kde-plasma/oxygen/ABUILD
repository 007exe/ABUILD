pkgname=oxygen
pkgver=5.26.2
pkgbuild=1
arch=("auto")

shortdesc=("KDE Oxygen style.")
longdesc=("Oxygen visual style for the Plasma desktop.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("frameworkintegration kdecoration kwayland extra-cmake-modules kdoctools kcmutils")

adddep=("hicolor-icon-theme")

# NOTE: Это опциональные зависимости
removedep=("kcmutils")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
