pkgname=oxygen
pkgver=5.27.1
pkgbuild=1
arch=("auto")

shortdesc=("KDE Oxygen style.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

adddep=("frameworkintegration kdecoration kwayland hicolor-icon-theme")

build_deps=("${adddep} extra-cmake-modules kdoctools kcmutils")

# NOTE: Это опциональные зависимости
removedep=("kcmutils")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
