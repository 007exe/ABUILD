pkgname=plasma-integration
pkgver=5.25.4
pkgbuild=1
arch=("auto")

shortdesc=("Qt Platform Theme integration plugins for the Plasma workspaces.")
longdesc=("Qt Platform Theme integration plugins for the Plasma workspaces.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("kio kwayland libxcursor qqc2-desktop-style perl extra-cmake-modules breeze plasma-wayland-protocols")

adddep=("ttf-hack noto-fonts")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
