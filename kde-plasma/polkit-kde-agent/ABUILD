pkgname=polkit-kde-agent
pkgver=5.25.3
pkgbuild=1
arch=("auto")

shortdesc=("PolKit agent module for KDE Plasma.")
longdesc=("Daemon providing a polkit authentication UI for KDE.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/$pkgver/${pkgname}-1-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("kiconthemes kdbusaddons kcrash extra-cmake-modules kdoctools")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
