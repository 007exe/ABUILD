pkgname=kgamma5
pkgver=5.25.5
pkgbuild=1
arch=("auto")

shortdesc=("Screen gamma values kcontrol module.")
longdesc=("Adjust your monitor gamma settings.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("systemsettings extra-cmake-modules kdoctools")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
