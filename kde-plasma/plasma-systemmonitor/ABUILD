pkgname=plasma-systemmonitor
pkgver=5.26.1
pkgbuild=1
arch=("auto")

shortdesc=("Monitor system sensors, process information and other system resources.")
longdesc=("An interface for monitoring system sensors, process information and other system resources.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("ksystemstats kitemmodels qqc2-desktop-style kquickcharts kdeclarative extra-cmake-modules")

adddep=("ksystemstats qqc2-desktop-style kquickcharts kdeclarativ")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
