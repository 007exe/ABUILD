pkgname=drkonqi
pkgver=5.25.4
pkgbuild=1
arch=("auto")

shortdesc=("The KDE crash handler.")
longdesc=("Plasma crash handler, gives the user feedback if a program crashed.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("kidletime syntax-highlighting kdeclarative kirigami2 kitemmodels gdb extra-cmake-modules")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
