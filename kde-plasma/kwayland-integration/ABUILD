pkgname=kwayland-integration
pkgver=5.25.4
pkgbuild=1
arch=("auto")

shortdesc=("Provides integration plugins for various KDE frameworks for Wayland.")
longdesc=("Provides integration plugins for various KDE frameworks for the wayland windowing system.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("kwindowsystem kidletime kwayland extra-cmake-modules wayland-protocols")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
