pkgname=plasma-browser-integration
pkgver=5.26.1
pkgbuild=1
arch=("auto")

shortdesc=("Components necessary to integrate browsers into the Plasma Desktop.")
longdesc=("Integrate Chrome/Firefox better into Plasma through browser extensions.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("purpose kfilemetadata plasma-workspace extra-cmake-modules")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DINSTALL_CHROME_MANIFEST=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
