pkgname=libkscreen
pkgver=5.26.1
pkgbuild=1
arch=("auto")

shortdesc=("KDE screen management software.")
longdesc=("Plasma screen management library.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("kde-plasma libs")

build_deps=("extra-cmake-modules doxygen qt5-tools plasma-wayland-protocols libxrandr")

adddep=("libxrandr")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
