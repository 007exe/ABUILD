pkgname=ksystemstats
pkgver=5.27.8
pkgbuild=1
arch=("auto")

shortdesc=("A plugin based system monitoring daemon.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

adddep=("libksysguard")

build_deps=("${adddep} extra-cmake-modules networkmanager-qt")

# NOTE: Это опциональные зависимости
removedep=("networkmanager-qt")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
