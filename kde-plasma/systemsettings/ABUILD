pkgname=systemsettings
pkgver=5.25.5
pkgbuild=1
arch=("auto")

shortdesc=("KDE system manager for hardware, software, and workspaces.")
longdesc=("Integrate the Bluetooth technology within KDE workspace and applications.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("plasma-workspace extra-cmake-modules kdoctools")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
