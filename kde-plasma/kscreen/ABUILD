pkgname=kscreen
pkgver=5.26.1
pkgbuild=1
arch=("auto")

shortdesc=("KDE Plasma screen management.")
longdesc=("KDE screen management software.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("libkscreen plasma-framework qt5-sensors extra-cmake-modules kcmutils")

adddep=("hicolor-icon-theme")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
