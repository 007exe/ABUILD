pkgname=khotkeys
pkgver=5.27.8
pkgbuild=1
arch=("auto")

shortdesc=("KHotKeys.")
longdesc=("KDE Plasma workspace hotkey module.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

adddep=("plasma-workspace kdelibs4support")

build_deps=("${adddep} extra-cmake-modules kdoctools kdesignerplugin kinit")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
