pkgname=discover
pkgver=5.26.3
pkgbuild=1
arch=("auto")

shortdesc=("KDE Plasma resources management GUI.")
longdesc=("KDE and Plasma resources management GUI.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

# flatpak
build_deps=("extra-cmake-modules plasma-framework knewstuff kcmutils kidletime
qt5-graphicaleffects appstream-qt kirigami2 discount kuserfeedback fwupd")

adddep=("hicolor-icon-theme kcmutils qt5-graphicaleffects kirigami2 discount purpose")

# NOTE: Это опциональные зависимости
removedep=("flatpak fwupd")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DWITH_KCM=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
