pkgname=powerdevil
pkgver=5.25.4
pkgbuild=1
arch=("auto")

shortdesc=("Power management for KDE Plasma Shell.")
longdesc=("Manages the power consumption settings of a Plasma Shell.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("plasma-workspace bluez-qt networkmanager-qt extra-cmake-modules kdoctools")

# NOTE: Это опциональные зависимости
removedep=("kinfocenter power-profiles-daemon")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
