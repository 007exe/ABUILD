pkgname=xdg-desktop-portal-kde
pkgver=5.26.3
pkgbuild=1
arch=("auto")

shortdesc=("A backend implementation for xdg-desktop-portal using Qt/KF5.")
longdesc=("Backend implementation for xdg-desktop-portal that is using Qt/KDE Frameworks.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("kirigami2 plasma-framework kio-fuse extra-cmake-modules plasma-wayland-protocols")

adddep=("kirigami2 plasma-framework kio-fuse")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
