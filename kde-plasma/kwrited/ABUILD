pkgname=kwrited
pkgver=5.26.4
pkgbuild=1
arch=("auto")

shortdesc=("KDE daemon listening for wall and write messages.")
longdesc=("KDE Plasma daemon listening for wall and write messages.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("kpty knotifications kdbusaddons extra-cmake-modules kdoctools")

adddep=("oxygen-sounds")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
