pkgname=sddm-kcm
pkgver=5.26.0
pkgbuild=1
arch=("auto")

shortdesc=("KDE Config Module for SDDM.")
longdesc=("KDE Plasma control module for SDDM.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("sddm knewstuff systemsettings extra-cmake-modules kdoctools")

adddep=("sddm")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
