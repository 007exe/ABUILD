pkgname=bluedevil
pkgver=5.27.6
pkgbuild=1
arch=("auto")

shortdesc=("Integrate the Bluetooth technology within KDE workspace and applications.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

adddep=("bluez-qt kdeclarative")

build_deps=("extra-cmake-modules plasma-framework kdoctools kcmutils")

# NOTE: Это опциональные зависимости
removedep=("pulseaudio-bluetoot")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
