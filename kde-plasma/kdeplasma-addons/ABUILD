pkgname=kdeplasma-addons
pkgver=5.27.5
pkgbuild=1
arch=("auto")

shortdesc=("All kind of addons to improve your Plasma experience.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

adddep=("plasma-workspace kunitconversion")

build_deps=("${adddep} extra-cmake-modules qt5-webengine networkmanager-qt")

# NOTE: Это опциональные зависимости
removedep=("purpose quota-tools qt5-webengine networkmanager-qt")

build() {
  go_src_dir
  burn_patches
    cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
