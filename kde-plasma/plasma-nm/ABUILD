pkgname=plasma-nm
pkgver=5.25.5
pkgbuild=1
arch=("auto")

shortdesc=("KDE Plasma applet for NetworkManager.")
longdesc=("Plasma applet written in QML for managing network connections.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

# openconnect
build_deps=("plasma-workspace modemmanager-qt networkmanager-qt qca-qt5 extra-cmake-modules")

# NOTE: Это опциональные зависимости
removedep=("openconnect")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
