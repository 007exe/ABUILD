pkgname=kde-gtk-config
pkgver=5.25.3
pkgbuild=1
arch=("auto")

shortdesc=("GTK2 and GTK3 Configurator for KDE.")
longdesc=("Syncs KDE Plasma theme settings to GTK applications.")

source=("https://mirror.yandex.ru/mirrors/ftp.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("plasma kde-plasma")

build_deps=("qt5-svg kdecoration kconfigwidgets kdbusaddons extra-cmake-modules gtk3 sassc")

# NOTE: Это опциональные зависимости
removedep=("gtk3")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build
}
