pkgname=crimson
pkgver=0.5.3
pkgbuild=1
arch=("auto")

shortdesc=("Turn-based tactical war game with a hex grid and multiplayer support.")

source=("http://crimson.seul.org/files/${pkgname}-${pkgver}.tar.gz")

tags=("games games-strategy")

adddep=("sdl sdl_ttf sdl_mixer sdl_net")

build_deps=("${adddep}")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
