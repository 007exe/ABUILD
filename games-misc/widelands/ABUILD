pkgname=widelands
pkgver=1.1
pkgbuild=1
arch=("auto")

shortdesc=("A realtime strategy game with emphasis on economy and transport.")

source=("https://github.com/widelands/widelands/archive/refs/tags/v${pkgver}.tar.gz")

tags=("games games-strategy")

adddep=("sdl2_mixer sdl2_image sdl2_ttf lua glew python dbus minizip")

build_deps=("${adddep} cmake mesa ninja asio")

# NOTE: Удаляем исходники пакета после сборки
# FIXME: mkpkg не умеет сохранять скачанные файлы под новыми именами, что может приводить к
# ошибкам когда в кеше имеется архив с исходниками от другого пакета с тем же именем
before_build(){
  go_src_dir
  rm -f ${srcache}/v${pkgver}.tar.gz
}

build() {
  go_src_dir
  burn_patches
  cmake \
      -GNinja \
      -Bbuild \
      -DCMAKE_BUILD_TYPE=Release \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DWL_INSTALL_BINDIR=bin \
      -DWL_INSTALL_BASEDIR=/usr \
      -DWL_INSTALL_DATADIR=/usr/share/widelands
  ninja -C build
  DESTDIR=${pkgdir} ninja -C build install
  mv ${pkgdir}/usr/{VERSION,ChangeLog,CREDITS} ${pkgdir}/usr/share/widelands

  mkdir -p ${pkgdir}/usr/share/licenses/${pkgname}
  mv ${pkgdir}/usr/COPYING ${pkgdir}/usr/share/licenses/${pkgname}
}
