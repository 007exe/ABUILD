pkgname=urbanterror
pkgver=4.3.4
pkgbuild=1
arch=("auto")

shortdesc=("A team-based tactical shooter based on the Quake 3 Engine.")

source=("http://www.happyurtday.com/releases/4x/UrbanTerror${pkgver//.}_full.zip")

tags="games games-fps"

adddep=("sdl openal curl")

build_deps=("${adddep} mesa")

build(){
  install -d ${pkgdir}/opt/urbanterror

  cd ${pkgdir}/opt/urbanterror

# Копирую бинарники
  install -m755 ${srcdir}/UrbanTerror43/Quake3-UrT.x86_64 urbanterror
  install -m755 ${srcdir}/UrbanTerror43/Quake3-UrT-Ded.x86_64 urbanterror-ded

# Копирую ресурсы
  cp -r ${srcdir}/UrbanTerror43/q3ut4 ${pkgdir}/opt/urbanterror/q3ut4
  install -Dm644 ${srcdir}/UrbanTerror43/q3ut4/readme43.txt ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
  echo -e "\nseta cl_cURLLib \"/usr/lib/libcurl.so.4\"" >> ${pkgdir}/opt/urbanterror/q3ut4/autoexec.cfg

# Копирую скрипты запуска
  install -Dm755 ${filedir}/urbanterror.sh ${pkgdir}/usr/bin/urbanterror
  install -Dm755 ${filedir}/urbanterror-server.sh ${pkgdir}/usr/bin/urbanterror-server

  install -Dm644 ${filedir}/urbanterror.desktop ${pkgdir}/usr/share/applications/urbanterror.desktop
  install -Dm644 ${filedir}/urbanterror.png ${pkgdir}/usr/share/pixmaps/urbanterror.png
}
