pkgname=libimobiledevice
pkgver=1.3.0
pkgbuild=3
arch=("auto")

shortdesc=("Library that talks the protocols to support iPhone and iPod Touch devices on Linux.")

source=("https://github.com/libimobiledevice/libimobiledevice/archive/refs/tags/${pkgver}.tar.gz")

tags=("libs app-pda")

adddep=("usbmuxd gnutls")

build_deps=("${adddep} libusbmuxd python cython libplist autoconf")

build() {
  go_src_dir
  burn_patches
  ./autogen.sh
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-openssl \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
