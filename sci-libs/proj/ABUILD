pkgname=proj
pkgver=9.1.1
pkgbuild=1
arch=("auto")

shortdesc=("Cartographic Projections and Coordinate Transformations Library.")

source=("https://github.com/OSGeo/PROJ/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.gz")

tags=("libs sci-libs")

adddep=("curl libtiff sqlite")

# gmock
build_deps=("${adddep} cmake gtest")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DUSE_EXTERNAL_GTEST=ON
  cmake --build build -j${numjobs}
  DESTDIR=${pkgdir} cmake --install build

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
