pkgname=hdf5
pkgver=1.12.1
pkgbuild=1
arch=('auto')

shortdesc=("General purpose library and file format for storing scientific data")
longdesc=("HDF5 is a data model, library, and file format for storing and managing data. It supports an unlimited variety of datatypes, and is designed for flexible and efficient I/O and for high volume and complex data. HDF5 is portable and is extensible, allowing applications to evolve in their use of HDF5. The HDF5 Technology suite includes tools and applications for managing, manipulating, viewing, and analyzing data in the HDF5 format.")

source=("https://support.hdfgroup.org/ftp/HDF5/releases/${pkgname}-${pkgver:0:4}/${pkgname}-${pkgver/_/-}/src/${pkgname}-${pkgver/_/-}.tar.bz2")

tags="libs sci-libs"

build_deps="cmake time gcc-fortran zlib libaec bash"
#-DHDF5_BUILD_JAVA=ON java-environment-common
build() {
  go_src_dir
  burn_patches
  mkdir -p build && cd build
  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib${LIBDIRSUFFIX} \
    -DBUILD_STATIC_LIBS=OFF \
    -DCMAKE_BUILD_TYPE=Release \
    -DHDF5_BUILD_HL_LIB=ON \
    -DHDF5_BUILD_CPP_LIB=ON \
    -DHDF5_BUILD_FORTRAN=ON \
    -DHDF5_BUILD_JAVA=OFF \
    -DHDF5_ENABLE_Z_LIB_SUPPORT=ON \
    -DHDF5_ENABLE_SZIP_SUPPORT=ON \
    -DHDF5_ENABLE_SZIP_ENCODING=ON \
    -DUSE_LIBAEC=ON
# But don’t build with it, it’s quite broken
#--enable-java java-environment-common
  cd ..
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --docdir=/usr/share/doc/hdf5/ \
    --with-examplesdir=/usr/share/doc/hdf5/examples/ \
    --disable-static \
    --disable-sharedlib-rpath \
    --enable-build-mode=production \
    --enable-hl \
    --enable-cxx \
    --enable-fortran \
    --disable-java \
    --with-pic \
    --with-zlib \
    --with-szlib
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING -t "${pkgdir}"/usr/share/licenses/${pkgname}

# Install pkg-config files from CMake tree
  install -Dm644 build/CMakeFiles/hdf5{,_hl}{,_cpp,_fortran}.pc -t "${pkgdir}"/usr/lib${LIBDIRSUFFIX}/pkgconfig/
}
