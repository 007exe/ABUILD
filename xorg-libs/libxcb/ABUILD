pkgname=libxcb
pkgver=1.15
pkgbuild=1
arch=("auto")

shortdesc=("X11 client-side library.")
longdesc=("The libxcb package provides an interface to the X Window System protocol, which replaces the current Xlib interface.")

source=("https://xorg.freedesktop.org/archive/individual/lib/$pkgname-$pkgver.tar.xz")

tags=("libs xorg-libs")

build_deps=("xorgproto xorg-util-macros python libxslt xcb-proto libxdmcp libxau")

adddep=("xcb-proto")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --enable-xinput \
    --enable-xkb \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}
}
