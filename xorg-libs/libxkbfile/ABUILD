pkgname=libxkbfile
pkgver=1.1.1
pkgbuild=1
arch=("auto")

shortdesc=("X11 keyboard file manipulation library.")
longdesc=("The Xorg libraries provide library routines that are used within all X Window applications.")

source=("http://xorg.freedesktop.org/archive/individual/lib/libxkbfile-${pkgver}.tar.xz")

tags=("libs xorg-libs")

build_deps=("libx11 xorg-util-macros")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
