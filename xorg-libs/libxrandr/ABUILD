pkgname=libxrandr
pkgver=1.5.4
pkgbuild=1
arch=("auto")

shortdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

source=("https://xorg.freedesktop.org/releases/individual/lib/libXrandr-${pkgver}.tar.xz")

tags=("libs xorg-libs")

adddep=("libxext libxrender libx11 glibc")

build_deps=("${adddep} xorg-util-macros xorgproto")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -d -m755 ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
