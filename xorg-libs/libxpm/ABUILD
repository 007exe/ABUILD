pkgname=libxpm
pkgver=3.5.14
pkgbuild=1
arch=("auto")

shortdesc=("X11 pixmap library.")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

source=("http://xorg.freedesktop.org/releases/individual/lib/libXpm-${pkgver}.tar.xz")

tags=("libs xorg-libs")

build_deps=("libxt libxext xorg-util-macros")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
