pkgname=libxp
pkgver=1.0.3
pkgbuild=1
arch=("auto")

shortdesc=("X.Org X Print Library.")
longdesc=("X.Org Xpm library.")

source=("https://xorg.freedesktop.org/releases/individual/lib/libXp-${pkgver}.tar.bz2")

tags=("xorg-libs libs")

build_deps=("libxext xorg-util-macros xorgproto")

build() {
  go_src_dir
  burn_patches
  autoreconf -vfi
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
