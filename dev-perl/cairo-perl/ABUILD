pkgname=cairo-perl
pkgver=1.109
pkgbuild=1
arch=("auto")

shortdesc=("Perl wrappers for cairo.")

source=("https://downloads.sourceforge.net/sourceforge/gtk2-perl/Cairo-${pkgver}.tar.gz")

tags=("libs dev-perl")

build_deps=("perl cairo")

build(){
  go_src_dir
  perl Makefile.PL INSTALLDIRS=vendor
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
