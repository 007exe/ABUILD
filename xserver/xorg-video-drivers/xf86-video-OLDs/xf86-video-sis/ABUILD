pkgname=xf86-video-sis
pkgver=0.10.7
pkgbuild=1
arch=('auto')

shortdesc=('xf86-video-sis: X11 driver for SiS video cards')
longdesc=('xf86-video-sis: X11 driver for SiS video cards')

tags=('x11-drivers xserver')

