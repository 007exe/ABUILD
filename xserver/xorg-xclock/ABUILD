pkgname=xorg-xclock
pkgver=1.0.9
pkgbuild=1
arch=("auto")

shortdesc=("The xclock package contains a simple clock application which is used in the default xinit configuration.")
longdesc=("The xclock package contains a simple clock application which is used in the default xinit configuration.")

tags=('x11-apps xserver')

source=("http://xorg.freedesktop.org/archive/individual/app/xclock-${pkgver}.tar.bz2")

build_deps="libx11 libxmu libxaw libxrender libxft libxkbfile xorg-util-macros"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX}
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
