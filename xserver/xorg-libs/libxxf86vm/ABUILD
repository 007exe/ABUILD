pkgname=libxxf86vm
pkgver=1.1.4
pkgbuild=1
arch=("auto")

shortdesc=("X11 XFree86 video mode extension library")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

tags=('x11-libs xserver compat32')

source=("http://xorg.freedesktop.org/archive/individual/lib/libXxf86vm-${pkgver}.tar.bz2")

build_deps="xorg-util-macros xorgproto libxext"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
