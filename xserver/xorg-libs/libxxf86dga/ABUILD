pkgname=libxxf86dga
pkgver=1.1.5
pkgbuild=1
arch=('auto')

shortdesc=("XFree86 Direct Graphics Access Extension Library")
longdesc=("The Xorg librarie provide library routines that are used within all X Window applications.")

tags=('x11-libs xserver')

source=("http://xorg.freedesktop.org/archive/individual/lib/libXxf86dga-${pkgver}.tar.bz2")

build_deps="libx11 libxau libxdmcp libxext libxcb xorg-util-macros xorgproto"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
