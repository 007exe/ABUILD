pkgname=mesa
pkgver=21.2.1
pkgbuild=1
arch=("auto")

shortdesc=("Mesa is an OpenGL compatible 3D graphics library.")
longdesc=("Mesa is an OpenGL compatible 3D graphics library.")

tags=('x11-libs xserver')

build_deps="python-mako libxml2 libx11 xorgproto libdrm libxshmfence libxxf86vm libxdamage zstd elfutils llvm clang valgrind cmake meson libvdpau vulkan-icd-loader wayland glslang libva libclc libglvnd libunwind wayland-protocols lm_sensors llvm-libs libxcb python expat elfutils"

pkglist="vulkan-mesa-layers opencl-mesa vulkan-intel vulkan-radeon vulkan-swrast libva-mesa-driver mesa-vdpau"

source=("https://mesa.freedesktop.org/archive/mesa-${pkgver}.tar.xz")

adddep="libxdamage libunwind"

vulkan-mesa-layers() {
  pkgname=vulkan-mesa-layers
  shortdesc="Mesa Vulkan layers"
  longdesc="Mesa Vulkan layers."

  adddep="python"
}

opencl-mesa() {
  pkgname=opencl-mesa
  shortdesc="OpenCL support for AMD/ATI Radeon mesa drivers"
  longdesc="OpenCL support for AMD/ATI Radeon mesa drivers."

  adddep="libclc"
}

vulkan-intel() {
  pkgname=vulkan-intel
  shortdesc="Intel Vulkan mesa driver"
  longdesc="Intel Vulkan mesa driver."
}

vulkan-radeon() {
  pkgname=vulkan-radeon
  shortdesc="Radeon Vulkan mesa driver"
  longdesc="Radeon Vulkan mesa driver."
}

vulkan-swrast() {
  pkgname=vulkan-swrast
  shortdesc="Vulkan software rasteriser driver"
  longdesc="Vulkan software rasteriser driver."
}

libva-mesa-driver() {
  pkgname=libva-mesa-driver
  shortdesc="VA-API implementation for gallium"
  longdesc="VA-API implementation for gallium."
}

mesa-vdpau() {
  pkgname=mesa-vdpau
  shortdesc="Mesa VDPAU drivers"
  longdesc="Mesa VDPAU drivers."
}

#libomxil-bellagio    -D gallium-omx=bellagio \
build() {
  meson mesa-$pkgver build \
    -D prefix=/usr \
    -D libdir=lib${LIBDIRSUFFIX} \
    -D b_lto=true \
    -D b_ndebug=true \
    -D platforms=x11,wayland \
    -D dri-drivers=i915,i965,r100,r200,nouveau \
    -D gallium-drivers=r300,r600,radeonsi,nouveau,virgl,svga,swrast,swr,iris,crocus,zink \
    -D vulkan-drivers=amd,intel,swrast \
    -D vulkan-layers=device-select,intel-nullhw,overlay \
    -D swr-arches=avx,avx2 \
    -D dri3=enabled \
    -D egl=enabled \
    -D gallium-extra-hud=true \
    -D gallium-nine=true \
    -D gallium-opencl=icd \
    -D gallium-va=enabled \
    -D gallium-vdpau=enabled \
    -D gallium-xa=enabled \
    -D gallium-xvmc=disabled \
    -D gbm=enabled \
    -D gles1=disabled \
    -D gles2=enabled \
    -D glvnd=true \
    -D glx=dri \
    -D libunwind=enabled \
    -D microsoft-clc=disabled \
    -D llvm=enabled \
    -D lmsensors=enabled \
    -D osmesa=true \
    -D shared-glapi=enabled \
    -D valgrind=enabled \
    -D opengl=true

# Print config
  meson configure build

  ninja -C build
  meson compile -C build

  DESTDIR="${pkgdir}" meson install -C build
}


vulkan-mesa-layers_prep() {
  mkdir -p ${pkgdir}/{usr/bin,usr/lib${LIBDIRSUFFIX},usr/share/vulkan}
  mv -v ${p_pkgdir}/usr/share/vulkan/explicit_layer.d ${pkgdir}/usr/share/vulkan/
  mv -v ${p_pkgdir}/usr/share/vulkan/implicit_layer.d ${pkgdir}/usr/share/vulkan/
  mv -v ${p_pkgdir}/usr/lib${LIBDIRSUFFIX}/libVkLayer_*.so ${pkgdir}/usr/lib${LIBDIRSUFFIX}/
  mv -v ${p_pkgdir}/usr/bin/ ${pkgdir}/usr/
}

opencl-mesa_prep() {
  mkdir -p ${pkgdir}/usr/lib${LIBDIRSUFFIX}/gallium-pipe
  mv -v ${p_pkgdir}/etc/ ${pkgdir}
  mv -v ${p_pkgdir}/usr/lib${LIBDIRSUFFIX}/lib*OpenCL* ${pkgdir}/usr/lib${LIBDIRSUFFIX}/
  mv -v ${p_pkgdir}/usr/lib${LIBDIRSUFFIX}/gallium-pipe ${pkgdir}/usr/lib${LIBDIRSUFFIX}/
}

vulkan-intel_prep() {
  mkdir -p ${pkgdir}{/usr/lib${LIBDIRSUFFIX},/usr/share/vulkan/icd.d}
  mv -v ${p_pkgdir}/usr/lib${LIBDIRSUFFIX}/libvulkan_intel.so ${pkgdir}/usr/lib${LIBDIRSUFFIX}/
  mv -v ${p_pkgdir}/usr/share/vulkan/icd.d/intel_icd*.json ${pkgdir}/usr/share/vulkan/icd.d/
}

vulkan-radeon_prep() {
  mkdir -p ${pkgdir}{/usr/lib${LIBDIRSUFFIX},/usr/share/vulkan/icd.d}
  mv -v ${p_pkgdir}/usr/lib${LIBDIRSUFFIX}/libvulkan_radeon.so ${pkgdir}/usr/lib${LIBDIRSUFFIX}/
  mv -v ${p_pkgdir}/usr/share/vulkan/icd.d/radeon_icd*.json ${pkgdir}/usr/share/vulkan/icd.d/
}

vulkan-swrast_prep() {
  mkdir -p ${pkgdir}{/usr/lib${LIBDIRSUFFIX},/usr/share/vulkan/icd.d}
  mv -v ${p_pkgdir}/usr/lib${LIBDIRSUFFIX}/libvulkan_lvp.so ${pkgdir}/usr/lib${LIBDIRSUFFIX}/
  mv -v ${p_pkgdir}/usr/share/vulkan/icd.d/lvp_icd*.json ${pkgdir}/usr/share/vulkan/icd.d/
}

libva-mesa-driver_prep() {
  mkdir -p ${pkgdir}/usr/lib${LIBDIRSUFFIX}/dri/
  mv -v ${p_pkgdir}/usr/lib${LIBDIRSUFFIX}/dri/*_drv_video.so ${pkgdir}/usr/lib${LIBDIRSUFFIX}/dri/
}

mesa-vdpau_prep() {
  mkdir -p ${pkgdir}/usr/lib${LIBDIRSUFFIX}/vdpau/
  mv -v ${p_pkgdir}/usr/lib${LIBDIRSUFFIX}/vdpau/ ${pkgdir}/usr/lib${LIBDIRSUFFIX}/
}
