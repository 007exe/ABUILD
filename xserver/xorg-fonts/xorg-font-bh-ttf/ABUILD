pkgname=xorg-font-bh-ttf
pkgver=1.0.3
pkgbuild=1
arch=("noarch")

shortdesc=("Xorg X11 font bh-ttf")
longdesc=("The Xorg font packages provide some scalable fonts and supporting packages for Xorg applications.")

tags=("x11-fonts xserver")

build_deps="xorg-fonts-encodings fontconfig xorg-fonts-alias-100dpi xorg-fonts-alias-75dpi xorg-fonts-alias-cyrillic xorg-fonts-alias-misc xorg-util-macros"

source=("http://xorg.freedesktop.org/archive/individual/font/font-bh-ttf-${pkgver}.tar.bz2")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --with-fontrootdir=/usr/share/fonts
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
