pkgname=xorg-font-bh-type1
pkgver=1.0.3
pkgbuild=1
arch=("noarch")

shortdesc=("Xorg X11 font bh-type1")
longdesc=("The Xorg font packages provide some scalable fonts and supporting packages for Xorg applications.")

tags=("x11-fonts xserver")

source=("http://xorg.freedesktop.org/archive/individual/font/font-bh-type1-${pkgver}.tar.bz2")

build_deps="fontconfig xorg-font-util xorg-util-macros"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --with-fontrootdir=/usr/share/fonts
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
