pkgname=xorg-setxkbmap
pkgver=1.3.2
pkgbuild=1
arch=("auto")

shortdesc=("Set the keyboard using the X Keyboard Extension")
longdesc=("The Xorg applications provide the expected applications available in previous X Window implementations.")

tags=('x11-apps xserver')

source=("http://xorg.freedesktop.org/archive/individual/app/setxkbmap-${pkgver}.tar.bz2")

build_deps="libxkbfile xorg-util-macros"


build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --sysconfdir=/etc \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
