pkgname=xorg-xev
pkgver=1.2.4
pkgbuild=1
arch=("auto")

shortdesc=("Print contents of X events")
longdesc=("The Xorg applications provide the expected applications available in previous X Window implementations.")

tags=('x11-apps xserver')

build_deps="libx11 libxrandr xorg-util-macros xorgproto"

source=("http://xorg.freedesktop.org/archive/individual/app/xev-${pkgver}.tar.bz2")

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
