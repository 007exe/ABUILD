pkgname=xorg-xvinfo
pkgver=1.1.4
pkgbuild=1
arch=("auto")

shortdesc=("Prints out the capabilities of any video adaptors associated with the display that are accessible through the X-Video extension")
longdesc=("The Xorg applications provide the expected applications available in previous X Window implementations.")

tags=('x11-apps xserver')

source=("http://xorg.freedesktop.org/archive/individual/app/xvinfo-${pkgver}.tar.bz2")

build_deps="libx11 libxv xorg-util-macros"

build() {
  go_src_dir
  burn_patches
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib${LIBDIRSUFFIX} \
    --disable-static
  make -j${numjobs}
  make DESTDIR=${pkgdir} install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
