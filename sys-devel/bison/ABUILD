pkgname=bison
pkgver=3.8.2
pkgbuild=1
arch=("auto")

shortdesc=("Parser generator similar to yacc.")
longdesc=("The Bison package contains a parser generator.")

tags=("develop sys-devel")

source=("http://ftp.gnu.org/gnu/bison/bison-${pkgver}.tar.xz")

build_deps=("glibc m4 bash gettext")

adddep=("m4 bash gettext")

build() {
  go_src_dir
  ./configure \
    --prefix=/usr \
    --libdir=/usr/lib$LIBDIRSUFFIX \
    --datadir=/usr/share \
    --sysconfdir=/etc
  make -j${numjobs}
  make DESTDIR=${pkgdir} install
}
