pkgname=binutils
pkgver=2.39
pkgbuild=2
arch=("auto")

shortdesc=("A set of programs to assemble and manipulate binary and object files.")
longdesc=("The Binutils package contains a linker, an assembler, and other tools for handling object files.")

tags=("develop sys-devel")

build_deps=("glibc elfutils flex gcc-libs")

source=("http://ftp.gnu.org/gnu/binutils/binutils-${pkgver}.tar.bz2")

build(){
  go_src_dir
  sed -i '/^development=/s/true/false/' bfd/development.sh
  burn_patches
  mkdir -p ${srcdir}/binutils-build

  cd ${srcdir}/binutils-build
  ${srcdir}/binutils-${pkgver}/configure \
    --prefix=/usr \
    --libdir=/usr/lib \
    --enable-shared \
    --enable-threads \
    --enable-ld=default \
    --enable-new-dtags \
    --enable-gold \
    --enable-64-bit-bfd \
    --enable-multilib \
    --enable-plugins \
    --enable-relro \
    --enable-targets=x86_64-pep,bpf-unknown-none \
    --enable-cet \
    --enable-deterministic-archives \
    --enable-install-libiberty \
    --enable-pgo-build=lto \
    --disable-gdb \
    --disable-werror \
    --disable-gdbserver \
    --disable-libdecnumber \
    --disable-readline \
    --disable-sim \
    --with-debuginfod \
    --with-system-zlib \
    --with-lib-path=/usr/lib:/usr/local/lib \
    --with-pic
  make -j${numjobs} -O tooldir=/usr
  make -j1 DESTDIR=${pkgdir} install

# Устанавливаем новую версию libiberty
  install -m644 libiberty/pic/libiberty.a ${pkgdir}/usr/lib

# Удаляем ненужные файлы
  rm -f ${pkgdir}/usr/share/man/man1/{dlltool,nlmconv,windres,windmc}*
  rm -fv ${pkgdir}/usr/lib/lib{bfd,ctf,ctf-nobfd,opcodes}.a
}
