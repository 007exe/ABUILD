pkgname=lxqt-panel
pkgver=1.2.0
pkgbuild=1
arch=("auto")

shortdesc=("The LXQt desktop panel.")
longdesc=("LXQt desktop panel and plugins.")

source=("https://github.com/lxqt/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")

tags=("lxqt lxqt-base")

build_deps=("libdbusmenu-qt5 libxcomposite lxmenu-data libxtst lxqt-globalkeys solid libxcb libqtxdg
lxqt-build-tools liblxqt libpulse libstatgrab libsysstat lm_sensors libxdamage alsa-lib")

adddep=("lxmenu-data")

# NOTE: Это опциональные зависимости
removedep=("libpulse alsa-lib libstatgrab libsysstat lm_sensors")

build() {
  go_src_dir
  burn_patches
  cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib
  make -C build -j${numjobs}
  make -C build DESTDIR=${pkgdir} install
}
