pkgname=lazarus
pkgver=2.2.0
pkgbuild=1
arch=('auto')

shortdesc=("Delphi-like IDE for FreePascal common files")
longdesc=("Lazarus is a free and opensource RAD tool for freepascal using the lazarus component library - LCL, which is also included in this package.")

source=("https://gitlab.com/freepascal.org/lazarus/lazarus/-/archive/lazarus_${pkgver//./_}/lazarus-lazarus_${pkgver//./_}.tar.bz2")

tags="develop dev-lang"

build_deps="gtk2 fpc fpc-src rsync qt5pas"

adddep="fpc fpc-src gdb"

removedep="qt5pas"

pkglist="lazarus-gtk2 lazarus-qt5"

build() {
  go_src_dir
  burn_patches

# build gtk2 ide
  make FPC=/usr/bin/fpc LCL_PLATFORM=gtk2 clean bigide
# move gtk binaries
  mv lazarus lazarus-gtk2
  mv startlazarus startlazarus-gtk2

# build qt5 ide
  make FPC=/usr/bin/fpc LCL_PLATFORM=qt5 bigide
# move qt binaries
  mv lazarus lazarus-qt5
  mv startlazarus startlazarus-qt5

# skip the 'make install' mess completely and do everything manually
  mkdir -p "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus "$pkgdir"/usr/bin "$pkgdir"/usr/share/man/man1 "$pkgdir"/usr/share/doc
  rsync -a \
    --exclude="CVS"     --exclude=".cvsignore" \
    --exclude="*.ppw"   --exclude="*.ppl" \
    --exclude="*.ow"    --exclude="*.a"\
    --exclude="*.rst"   --exclude=".#*" \
    --exclude="*.~*"    --exclude="*.bak" \
    --exclude="*.orig"  --exclude="*.rej" \
    --exclude=".xvpics" \
    --exclude="killme*" --exclude=".gdb_hist*" \
    --exclude="debian"  --exclude="COPYING*" \
    --exclude="*.app"   --exclude="tools/install" \
    . "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus

#remove some stuff, not needed or for in other package
  pushd "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus
  rm lazarus-*
  rm startlazarus-*
  popd

  ln -s /usr/lib${LIBDIRSUFFIX}/lazarus/lazbuild "$pkgdir"/usr/bin/lazbuild
  cp -R install/man/man1/* "$pkgdir"/usr/share/man/man1/
  mv "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/docs "$pkgdir"/usr/share/doc/lazarus
  mkdir -p "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/docs
  ln -s /usr/share/doc/lazarus/chm "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/docs/html
  ln -s /usr/share/doc/lazarus/lazdoc.css "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/docs/lazdoc.css

  rm -r "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/install

# license files: /usr/lib/lazarus/COPYING*
  install -D -m644 COPYING.modifiedLGPL.txt "$pkgdir"/usr/share/licenses/$pkgname/COPYING.modifiedLGPL
}

lazarus-gtk2() {
  pkgname=lazarus-gtk2
  shortdesc=("Delphi-like IDE for FreePascal gtk2 version")
  longdesc=("Lazarus is a free and opensource RAD tool for freepascal using the lazarus component library - LCL, which is also included in this package.")
  conflicts="lazarus-qt5"
  adddep="lazarus desktop-file-utils"
}

lazarus-gtk2_prep() {
  go_src_dir

# install gtk binaries
  install -Dm755 lazarus-gtk2 "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/lazarus
  install -Dm755 startlazarus-gtk2 "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/startlazarus
  install -dm755 "$pkgdir"/usr/bin
  ln -s /usr/lib${LIBDIRSUFFIX}/lazarus/lazarus "$pkgdir"/usr/bin/lazarus
  ln -s /usr/lib${LIBDIRSUFFIX}/lazarus/startlazarus "$pkgdir"/usr/bin/startlazarus

# make 'desktop-file-validate' happy and fix missing .png icon
  sed -e 's|\(Categories\).*|\1=IDE;Development;|' -e 's|\.png|\.xpm|' -i install/lazarus.desktop
  install -Dm644 install/lazarus.desktop "$pkgdir"/usr/share/applications/lazarus.desktop
  install -Dm644 images/ide_icon48x48.png "$pkgdir"/usr/share/pixmaps/lazarus.png

# license files: /usr/lib/lazarus/COPYING*
  install -D -m644 COPYING.modifiedLGPL.txt "$pkgdir"/usr/share/licenses/$pkgname/COPYING.modifiedLGPL
}

lazarus-qt5() {
  pkgname=lazarus-qt5
  shortdesc=("Delphi-like IDE for FreePascal qt5 version")
  longdesc=("Lazarus is a free and opensource RAD tool for freepascal using the lazarus component library - LCL, which is also included in this package.")
  conflicts="lazarus-gtk2"
  adddep="lazarus qt5pas"
}

lazarus-qt5_prep() {
  go_src_dir

# install qt binaries
 install -Dm755 lazarus-qt5 "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/lazarus
 install -Dm755 startlazarus-qt5 "$pkgdir"/usr/lib${LIBDIRSUFFIX}/lazarus/startlazarus
 install -dm755 "$pkgdir"/usr/bin
 ln -s /usr/lib${LIBDIRSUFFIX}/lazarus/lazarus "$pkgdir"/usr/bin/lazarus
 ln -s /usr/lib${LIBDIRSUFFIX}/lazarus/startlazarus "$pkgdir"/usr/bin/startlazarus

# make 'desktop-file-validate' happy and fix missing .png icon
 sed -e 's|\(Categories\).*|\1=IDE;Development;|' -e 's|\.png|\.xpm|' -i install/lazarus.desktop
 install -Dm644 install/lazarus.desktop "$pkgdir"/usr/share/applications/lazarus.desktop
 install -Dm644 images/ide_icon48x48.png "$pkgdir"/usr/share/pixmaps/lazarus.png

# license files: /usr/lib/lazarus/COPYING*
 install -D -m644 COPYING.modifiedLGPL.txt "$pkgdir"/usr/share/licenses/$pkgname/COPYING.modifiedLGPL
}
